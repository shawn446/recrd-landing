---
// Homepage - recrd
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import BaseHead from '../components/BaseHead.astro';
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <BaseHead title="recrd - AI agents that close deals" description="Revenue intelligence for sales teams. Record calls, auto-update CRM, and get AI-powered coaching." />
  
  <style>
    :root { 
      --cell: 120px; 
      --grid-cols: 9; 
      --grid-rows: 8; 
      --grid-line: rgba(255,255,255,0.12); 
    }
    [data-theme="light"] { --grid-line: rgba(0,0,0,0.12); }

    /* HERO */
    .hero {
      min-height: 100vh;
      display: flex;
      align-items: center;
      padding: 72px 0 0 48px;
      position: relative;
      overflow: hidden;
    }

    .hero-content {
      max-width: 550px;
      z-index: 10;
      padding: 48px 0;
    }

    .hero-headline {
      font-size: 90px;
      font-weight: 350;
      line-height: 1.0;
      letter-spacing: -0.03em;
      margin-bottom: 28px;
    }
    .hero-headline em { 
      font-style: normal; 
      color: var(--mint);
      font-weight: 400;
    }
    [data-theme="light"] .hero-headline em { color: var(--purple); }

    .hero-sub {
      font-size: 20px;
      font-weight: 400;
      line-height: 1.5;
      margin-bottom: 40px;
      color: var(--text-muted);
    }

    .hero-buttons { display: flex; gap: 16px; }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      padding: 18px 28px;
      font-weight: 500;
      font-size: 15px;
      text-decoration: none;
      transition: all 0.2s ease;
      cursor: pointer;
      position: relative;
      overflow: hidden;
    }
    
    .btn-primary { background: var(--text); color: var(--bg); }
    .btn-primary:hover { background: var(--mint); color: #0a0a0a; transform: translateY(-2px); }
    
    .btn-secondary { background: transparent; color: var(--text); border: 1px solid var(--btn-outline); }
    .btn-secondary:hover { background: var(--text); color: var(--bg); }

    .btn-arrow { display: inline-flex; transition: transform 0.2s ease; }
    .btn:hover .btn-arrow { transform: translateX(4px); }

    /* GRID */
    .grid-wrapper {
      position: absolute;
      top: 50%;
      right: 20px;
      transform: translateY(-50%);
      width: calc(var(--cell) * var(--grid-cols));
      height: calc(var(--cell) * var(--grid-rows));
      z-index: 5;
    }

    .grid-svg { position: absolute; top: 0; left: 0; width: 100%; height: 100%; }
    .grid-svg line { stroke: var(--grid-line); stroke-width: 1; }

    /* CARDS */
    .card {
      position: absolute;
      width: calc(var(--cell) * 2);
      height: calc(var(--cell) * 2);
      display: flex;
      flex-direction: column;
      padding: 24px;
      opacity: 0;
      transform: translateX(-30px) scale(0.95);
      z-index: 10;
    }

    .card-header { display: flex; align-items: center; gap: 10px; margin-bottom: 14px; }
    .card-icon { width: 22px; height: 22px; flex-shrink: 0; }
    .card-icon svg { width: 100%; height: 100%; stroke-width: 2; stroke-linecap: round; stroke-linejoin: round; fill: none; }
    .card-badge { font-family: var(--mono); font-size: 9px; text-transform: uppercase; letter-spacing: 0.1em; padding: 5px 10px; }
    .card-title { font-size: 18px; font-weight: 600; line-height: 1.2; margin-bottom: 6px; }
    .card-content { font-size: 12px; line-height: 1.5; opacity: 0.9; flex: 1; }
    .card-meta { font-family: var(--mono); font-size: 10px; opacity: 0.7; margin-top: auto; padding-top: 10px; border-top: 1px solid rgba(0,0,0,0.1); }

    .card.mint { background: var(--mint); color: #0a0a0a; }
    .card.mint .card-badge { background: rgba(0,0,0,0.1); }
    .card.mint .card-icon svg { stroke: #0a0a0a; }
    .card.mint .card-meta { border-color: rgba(0,0,0,0.15); }

    .card.purple { background: var(--purple); color: #fff; }
    .card.purple .card-badge { background: rgba(255,255,255,0.2); }
    .card.purple .card-icon svg { stroke: #fff; }
    .card.purple .card-meta { border-color: rgba(255,255,255,0.2); }

    .card.cyan { background: var(--cyan); color: #0a0a0a; }
    .card.cyan .card-badge { background: rgba(0,0,0,0.1); }
    .card.cyan .card-icon svg { stroke: #0a0a0a; }
    .card.cyan .card-meta { border-color: rgba(0,0,0,0.15); }

    .card.coral { background: var(--coral); color: #fff; }
    .card.coral .card-badge { background: rgba(255,255,255,0.2); }
    .card.coral .card-icon svg { stroke: #fff; }
    .card.coral .card-meta { border-color: rgba(255,255,255,0.2); }

    .stats-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 6px; margin-top: 6px; }
    .stat-box { background: rgba(255,255,255,0.15); padding: 8px; }
    .stat-label { font-family: var(--mono); font-size: 8px; text-transform: uppercase; letter-spacing: 0.1em; opacity: 0.8; margin-bottom: 2px; }
    .stat-value { font-size: 14px; font-weight: 600; }
    .stat-value.positive { color: #46FCAF; }
    .stat-value.highlight { color: #fff; }

    .talk-ratio { display: flex; height: 6px; gap: 2px; margin-top: 8px; border-radius: 3px; overflow: hidden; }
    .talk-ratio .rep { background: rgba(0,0,0,0.3); width: 35%; }
    .talk-ratio .prospect { background: rgba(0,0,0,0.15); width: 65%; }

    .meddic-row { display: flex; gap: 4px; margin-top: 8px; }
    .meddic-item { flex: 1; background: rgba(0,0,0,0.15); padding: 6px 2px; font-family: var(--mono); font-size: 9px; text-align: center; font-weight: 600; }
    .meddic-item.filled { background: rgba(0,0,0,0.3); }

    .quote-block { background: rgba(255,255,255,0.12); padding: 10px; margin-top: 4px; font-style: italic; font-size: 11px; line-height: 1.4; }
    .quote-attr { font-style: normal; font-size: 10px; opacity: 0.8; margin-top: 6px; }

    #card1 { top: 0; left: 0; }
    #card2 { top: calc(var(--cell) * 2); left: calc(var(--cell) * 3); }
    #card3 { top: calc(var(--cell) * 4); left: calc(var(--cell) * 5); }
    #card4 { top: calc(var(--cell) * 6); left: calc(var(--cell) * 7); }

    /* OTHER SECTIONS */
    .logo-bar { padding: 80px 48px; border-top: 1px solid var(--border); background: var(--bg-alt); }
    .logo-bar-inner { max-width: 1200px; margin: 0 auto; }
    .logo-bar-label { text-align: center; font-size: 12px; font-weight: 500; text-transform: uppercase; letter-spacing: 0.15em; color: var(--text-muted); margin-bottom: 48px; }
    .logo-bar-grid { display: flex; justify-content: center; align-items: center; gap: 48px 80px; flex-wrap: wrap; }
    .logo-item { opacity: 0.5; transition: opacity 0.2s ease; }
    .logo-item:hover { opacity: 0.8; }

    .how-section { padding: 140px 48px; border-top: 1px solid var(--border); }
    .section-header { text-align: center; margin-bottom: 80px; }
    .section-label { font-family: var(--mono); font-size: 12px; text-transform: uppercase; letter-spacing: 0.15em; color: var(--text-muted); margin-bottom: 16px; }
    .section-headline { font-size: 42px; font-weight: 350; line-height: 1.2; letter-spacing: -0.02em; }

    .how-flow { display: flex; justify-content: center; align-items: stretch; gap: 0; max-width: 1100px; margin: 0 auto; }
    .how-step { flex: 1; text-align: center; padding: 40px 32px; position: relative; border: 1px solid var(--border); margin-left: -1px; }
    .how-step:first-child { margin-left: 0; }
    .step-number { font-family: var(--mono); font-size: 11px; color: var(--text-muted); margin-bottom: 20px; letter-spacing: 0.1em; }
    .step-icon { width: 48px; height: 48px; margin: 0 auto 24px; position: relative; }
    .step-title { font-size: 16px; font-weight: 600; margin-bottom: 8px; letter-spacing: -0.01em; }
    .step-desc { font-size: 13px; color: var(--text-muted); line-height: 1.6; }
    .step-arrow { position: absolute; right: -12px; top: 50%; transform: translateY(-50%); z-index: 2; color: var(--text-muted); }
    .how-step:last-child .step-arrow { display: none; }

    .mock-sync { background: var(--bg-card); border: 1px solid var(--border); padding: 16px; margin-top: 24px; text-align: left; }
    .mock-sync-row { display: flex; align-items: center; gap: 12px; padding: 8px 0; border-bottom: 1px solid var(--border); font-size: 12px; }
    .mock-sync-row:last-child { border-bottom: none; }
    .mock-sync-label { color: var(--text-muted); width: 80px; }
    .mock-sync-value { font-family: var(--mono); font-size: 11px; color: var(--mint); }

    .mock-alert { background: var(--bg-card); border: 1px solid var(--border); padding: 16px; margin-top: 24px; text-align: left; }
    .mock-alert-header { display: flex; align-items: center; gap: 8px; margin-bottom: 8px; }
    .mock-alert-dot { width: 8px; height: 8px; border-radius: 50%; background: var(--coral); }
    .mock-alert-title { font-size: 12px; font-weight: 600; }
    .mock-alert-desc { font-size: 11px; color: var(--text-muted); }

    .mock-log { background: var(--bg-card); border: 1px solid var(--border); margin-top: 24px; text-align: left; }
    .mock-log-header { padding: 12px 16px; border-bottom: 1px solid var(--border); font-size: 11px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; color: var(--text-muted); }
    .mock-log-item { display: flex; align-items: center; justify-content: space-between; padding: 12px 16px; border-bottom: 1px solid var(--border); font-size: 13px; }
    .mock-log-item:last-child { border-bottom: none; }
    .mock-log-item .time { font-family: var(--mono); font-size: 11px; color: var(--text-muted); }

    .features-section { padding: 140px 48px; border-top: 1px solid var(--border); }
    .features-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1px; background: var(--border); max-width: 1200px; margin: 0 auto; }
    .feature-card { background: var(--bg); padding: 48px 36px; }
    .feature-card a { color: var(--mint); text-decoration: none; }
    .feature-card a:hover { text-decoration: underline; }
    [data-theme="light"] .feature-card a { color: var(--purple); }
    .feature-icon { width: 48px; height: 48px; margin-bottom: 28px; position: relative; }
    .feature-title { font-size: 18px; font-weight: 600; margin-bottom: 12px; letter-spacing: -0.01em; }
    .feature-desc { font-size: 14px; color: var(--text-muted); line-height: 1.65; }

    .faq-section { padding: 140px 48px; border-top: 1px solid var(--border); }
    .faq-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 1px; background: var(--border); max-width: 1000px; margin: 0 auto; }
    .faq-item { background: var(--bg); padding: 36px; }
    .faq-question { font-size: 16px; font-weight: 600; margin-bottom: 12px; letter-spacing: -0.01em; }
    .faq-answer { font-size: 14px; color: var(--text-muted); line-height: 1.7; }

    .cta-section { padding: 140px 48px; background: var(--bg-alt); text-align: center; border-top: 1px solid var(--border); }
    .cta-headline { font-size: 48px; font-weight: 350; line-height: 1.2; letter-spacing: -0.02em; margin-bottom: 20px; }
    .cta-sub { font-size: 18px; color: var(--text-muted); margin-bottom: 48px; }
    .cta-buttons { display: flex; gap: 16px; justify-content: center; }

    /* RESPONSIVE */
    @media (max-width: 1800px) { :root { --cell: 110px; } .hero-headline { font-size: 80px; } }
    @media (max-width: 1600px) { :root { --cell: 95px; } .hero-headline { font-size: 70px; } }
    @media (max-width: 1400px) { :root { --cell: 80px; } .hero-headline { font-size: 60px; } .card { padding: 18px; } .card-title { font-size: 15px; } .card-content { font-size: 11px; } }
    @media (max-width: 1200px) { :root { --cell: 70px; } .hero-headline { font-size: 52px; } .card { padding: 14px; } .card-title { font-size: 13px; } .stats-grid, .meddic-row, .quote-block { display: none; } .how-flow { flex-direction: column; max-width: 500px; } .how-step { margin-left: 0; margin-top: -1px; } .how-step:first-child { margin-top: 0; } .step-arrow { display: none; } }
    @media (max-width: 1000px) { :root { --cell: 60px; } .hero-headline { font-size: 44px; } .card { padding: 10px; } .card-title { font-size: 12px; } .card-content, .card-meta { display: none; } }
    @media (max-width: 900px) { .hero { flex-direction: column; padding: 100px 24px 48px; min-height: auto; } .hero-content { max-width: 100%; text-align: center; margin-bottom: 40px; } .hero-headline { font-size: 48px; } .hero-buttons { justify-content: center; } .grid-wrapper { position: relative; top: auto; right: auto; transform: none; margin: 0 auto; } :root { --cell: 50px; } .logo-bar { padding: 60px 24px; } .logo-bar-grid { gap: 32px 48px; } .how-section, .features-section, .faq-section, .cta-section { padding: 80px 24px; } .features-grid, .faq-grid { grid-template-columns: 1fr; } }
    @media (max-width: 600px) { .hero-headline { font-size: 36px; } .hero-sub { font-size: 16px; } .hero-buttons { flex-direction: column; } .btn { width: 100%; justify-content: center; } :root { --cell: 40px; } .card { padding: 6px; } .card-badge { font-size: 6px; padding: 2px 4px; } .card-title { font-size: 9px; } .card-icon { width: 12px; height: 12px; } .card-header { margin-bottom: 4px; gap: 4px; } .section-headline { font-size: 32px; } .cta-headline { font-size: 28px; } .cta-buttons { flex-direction: column; } }
  </style>
</head>

<body>
  <Nav />

  <section class="hero">
    <div class="hero-content">
      <h1 class="hero-headline">Your calls,<br><em>working for you</em></h1>
      <p class="hero-sub">Every sales call triggers six AI agents that update your CRM, alert your team, and draft follow-ups—automatically.</p>
      <div class="hero-buttons">
        <a href="#" class="btn btn-primary">Book a Demo <span class="btn-arrow"><svg width="16" height="16" viewBox="0 0 16 16" fill="none"><rect x="1" y="7" width="2" height="2" fill="currentColor"/><rect x="4" y="7" width="2" height="2" fill="currentColor"/><rect x="7" y="7" width="2" height="2" fill="currentColor"/><rect x="10" y="7" width="2" height="2" fill="currentColor"/><rect x="10" y="4" width="2" height="2" fill="currentColor"/><rect x="12" y="6" width="2" height="2" fill="currentColor"/><rect x="10" y="10" width="2" height="2" fill="currentColor"/><rect x="12" y="8" width="2" height="2" fill="currentColor"/></svg></span></a>
        <a href="#how-it-works" class="btn btn-secondary">See How It Works <span class="btn-arrow"><svg width="16" height="16" viewBox="0 0 16 16" fill="none"><rect x="1" y="7" width="2" height="2" fill="currentColor"/><rect x="4" y="7" width="2" height="2" fill="currentColor"/><rect x="7" y="7" width="2" height="2" fill="currentColor"/><rect x="10" y="7" width="2" height="2" fill="currentColor"/><rect x="10" y="4" width="2" height="2" fill="currentColor"/><rect x="12" y="6" width="2" height="2" fill="currentColor"/><rect x="10" y="10" width="2" height="2" fill="currentColor"/><rect x="12" y="8" width="2" height="2" fill="currentColor"/></svg></span></a>
      </div>
    </div>

    <div class="grid-wrapper">
      <svg class="grid-svg" viewBox="0 0 1080 960" preserveAspectRatio="xMidYMid meet">
        <line x1="0" y1="0" x2="1080" y2="0"/><line x1="120" y1="120" x2="1080" y2="120"/><line x1="240" y1="240" x2="1080" y2="240"/><line x1="360" y1="360" x2="1080" y2="360"/><line x1="360" y1="480" x2="1080" y2="480"/><line x1="240" y1="600" x2="1080" y2="600"/><line x1="120" y1="720" x2="1080" y2="720"/><line x1="0" y1="840" x2="1080" y2="840"/><line x1="0" y1="960" x2="1080" y2="960"/>
        <line x1="1080" y1="0" x2="1080" y2="960"/><line x1="960" y1="0" x2="960" y2="960"/><line x1="840" y1="0" x2="840" y2="960"/><line x1="720" y1="0" x2="720" y2="960"/><line x1="600" y1="0" x2="600" y2="960"/><line x1="480" y1="0" x2="480" y2="960"/><line x1="360" y1="0" x2="360" y2="360"/><line x1="360" y1="480" x2="360" y2="960"/><line x1="240" y1="0" x2="240" y2="240"/><line x1="240" y1="600" x2="240" y2="960"/><line x1="120" y1="0" x2="120" y2="120"/><line x1="120" y1="720" x2="120" y2="960"/><line x1="0" y1="0" x2="0" y2="0"/><line x1="0" y1="840" x2="0" y2="960"/>
        <line x1="0" y1="120" x2="120" y2="120"/><line x1="120" y1="240" x2="240" y2="240"/><line x1="240" y1="360" x2="360" y2="360"/><line x1="240" y1="600" x2="360" y2="600"/><line x1="120" y1="720" x2="240" y2="720"/><line x1="0" y1="840" x2="120" y2="840"/>
      </svg>

      <div class="card mint" id="card1">
        <div class="card-header"><div class="card-icon"><svg viewBox="0 0 24 24"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg></div><span class="card-badge">Trigger</span></div>
        <span class="card-title">Call completed</span>
        <div class="card-content">Discovery call with Sarah Chen, VP Sales at Acme Corp<div class="talk-ratio"><div class="rep"></div><div class="prospect"></div></div></div>
        <div class="card-meta">32 min · 35/65 talk ratio</div>
      </div>

      <div class="card purple" id="card2">
        <div class="card-header"><div class="card-icon"><svg viewBox="0 0 24 24"><path d="M2 12h2"/><path d="M6 8v8"/><path d="M10 4v16"/><path d="M14 6v12"/><path d="M18 9v6"/><path d="M22 12h-2"/></svg></div><span class="card-badge">Processing</span></div>
        <span class="card-title">recrd analyzes</span>
        <div class="card-content"><div class="stats-grid"><div class="stat-box"><div class="stat-label">Sentiment</div><div class="stat-value positive">87%</div></div><div class="stat-box"><div class="stat-label">Momentum</div><div class="stat-value highlight">High</div></div><div class="stat-box"><div class="stat-label">Objections</div><div class="stat-value">2</div></div><div class="stat-box"><div class="stat-label">Next Steps</div><div class="stat-value">4</div></div></div></div>
        <div class="card-meta">6 agents · 14 actions</div>
      </div>

      <div class="card cyan" id="card3">
        <div class="card-header"><div class="card-icon"><svg viewBox="0 0 24 24"><line x1="18" y1="20" x2="18" y2="10"/><line x1="12" y1="20" x2="12" y2="4"/><line x1="6" y1="20" x2="6" y2="14"/></svg></div><span class="card-badge">CRM Agent</span></div>
        <span class="card-title">Pipeline updated</span>
        <div class="card-content">Stage → Negotiation<div class="meddic-row"><div class="meddic-item filled">M</div><div class="meddic-item filled">E</div><div class="meddic-item filled">D</div><div class="meddic-item filled">D</div><div class="meddic-item">I</div><div class="meddic-item filled">C</div></div></div>
        <div class="card-meta">5/6 MEDDIC · 12 fields</div>
      </div>

      <div class="card coral" id="card4">
        <div class="card-header"><div class="card-icon"><svg viewBox="0 0 24 24"><path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/><path d="M13.73 21a2 2 0 0 1-3.46 0"/></svg></div><span class="card-badge">Risk Alert</span></div>
        <span class="card-title">Manager notified</span>
        <div class="card-content"><div class="quote-block">"Budget is tight this quarter, but we're very interested in Q1."</div><div class="quote-attr">— Sarah Chen, VP Sales</div></div>
        <div class="card-meta">Slack #enterprise · @mike</div>
      </div>
    </div>
  </section>

  <section class="logo-bar">
    <div class="logo-bar-inner">
      <p class="logo-bar-label">Integrates with your stack</p>
      <div class="logo-bar-grid">
        <div class="logo-item"><svg width="120" height="32" viewBox="0 0 120 32" fill="none"><text x="0" y="22" fill="currentColor" font-family="var(--font)" font-size="16" font-weight="600">HubSpot</text></svg></div>
        <div class="logo-item"><svg width="120" height="32" viewBox="0 0 120 32" fill="none"><text x="0" y="22" fill="currentColor" font-family="var(--font)" font-size="16" font-weight="600">Salesforce</text></svg></div>
        <div class="logo-item"><svg width="80" height="32" viewBox="0 0 80 32" fill="none"><text x="0" y="22" fill="currentColor" font-family="var(--font)" font-size="16" font-weight="600">Zoom</text></svg></div>
        <div class="logo-item"><svg width="80" height="32" viewBox="0 0 80 32" fill="none"><text x="0" y="22" fill="currentColor" font-family="var(--font)" font-size="16" font-weight="600">Slack</text></svg></div>
        <div class="logo-item"><svg width="100" height="32" viewBox="0 0 100 32" fill="none"><text x="0" y="22" fill="currentColor" font-family="var(--font)" font-size="16" font-weight="600">Google</text></svg></div>
      </div>
    </div>
  </section>

  <section class="how-section" id="how-it-works">
    <div class="section-header">
      <p class="section-label">How it works</p>
      <h2 class="section-headline">From call to closed, automatically</h2>
