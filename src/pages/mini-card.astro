---
// Hero - Pixel cards + Mini slide-in cards combined
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import BaseHead from '../components/BaseHead.astro';
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <BaseHead title="recrd - AI agents that close deals" description="Revenue intelligence for sales teams." />
  
  <style is:global>
    :root { 
      --cell: 120px;
      --card-w: calc(var(--cell) * 2);
      --card-h: calc(var(--cell) * 3);
      --grid-line: rgba(255,255,255,0.08);
      --mint: #46FCAF;
      --purple: #A678F4;
      --cyan: #5CEBDF;
      --coral: #FF6B7A;
      --yellow: #FFD84D;
      --bg: #0A0A0A;
      --text: #FFFFFF;
      --text-muted: rgba(255,255,255,0.6);
    }

    * { box-sizing: border-box; }

    .hero {
      min-height: 100vh;
      display: flex;
      align-items: center;
      padding: 72px 48px 0;
      position: relative;
      overflow: hidden;
      background: var(--bg);
    }

    .hero-grid {
      position: absolute;
      top: 0;
      right: 0;
      width: calc(var(--cell) * 8);
      height: 100%;
      background-image: 
        linear-gradient(to right, var(--grid-line) 1px, transparent 1px),
        linear-gradient(to bottom, var(--grid-line) 1px, transparent 1px);
      background-size: var(--cell) var(--cell);
      z-index: 1;
    }

    .hero-grid::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: calc(var(--cell) * 2);
      height: 100%;
      background: linear-gradient(to right, var(--bg), transparent);
      z-index: 2;
    }

    .hero-content {
      max-width: 480px;
      z-index: 100;
      padding: 48px 0;
    }

    .hero-headline {
      font-size: 72px;
      font-weight: 350;
      line-height: 1.0;
      letter-spacing: -0.03em;
      margin-bottom: 28px;
    }

    .hero-headline em { 
      font-style: normal; 
      color: var(--mint);
      font-weight: 400;
    }

    .hero-sub {
      font-size: 18px;
      font-weight: 400;
      line-height: 1.6;
      margin-bottom: 40px;
      color: var(--text-muted);
    }

    .hero-buttons { display: flex; gap: 16px; }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      padding: 16px 28px;
      font-weight: 500;
      font-size: 15px;
      text-decoration: none;
      transition: all 0.2s ease;
      cursor: pointer;
      border: none;
    }
    
    .btn-primary { background: var(--text); color: var(--bg); }
    .btn-primary:hover { background: var(--mint); color: #0a0a0a; transform: translateY(-2px); }
    
    .btn-secondary { background: transparent; color: var(--text); border: 1px solid rgba(255,255,255,0.2); }
    .btn-secondary:hover { background: var(--text); color: var(--bg); }

    .cards-container {
      position: absolute;
      top: 0;
      right: 0;
      width: calc(var(--cell) * 8);
      height: 100%;
      z-index: 10;
      pointer-events: none;
    }

    /* ========== PIXEL CARDS ========== */
    .card-slot {
      position: absolute;
      width: var(--card-w);
      height: var(--card-h);
      pointer-events: auto;
      filter: drop-shadow(0 20px 40px rgba(0,0,0,0.5));
    }

    .card-slot[data-slot="0"] {
      left: calc(var(--cell) * 0);
      top: calc(var(--cell) * 1);
    }
    .card-slot[data-slot="1"] {
      left: calc(var(--cell) * 4);
      top: calc(var(--cell) * 2);
    }
    .card-slot[data-slot="2"] {
      left: calc(var(--cell) * 1);
      top: calc(var(--cell) * 5);
    }

    .pixel-grid {
      width: 100%;
      height: 100%;
      display: grid;
      grid-template-columns: repeat(12, 1fr);
      grid-template-rows: repeat(18, 1fr);
    }

    .pixel-cell {
      opacity: 0;
      will-change: opacity;
    }

    .pixel-cell.visible {
      opacity: 1;
      transition: opacity 0.2s ease-out;
    }

    .pixel-cell.hiding {
      opacity: 0;
      transition: opacity 0.15s ease-in;
    }

    /* ========== MINI CARDS ========== */
    .mini-slot {
      position: absolute;
      width: var(--cell);
      height: var(--cell);
      pointer-events: auto;
      overflow: hidden;
    }

    /* Mini card positions - avoiding pixel card areas */
    .mini-slot[data-mini="0"] { left: calc(var(--cell) * 3); top: calc(var(--cell) * 1); }
    .mini-slot[data-mini="1"] { left: calc(var(--cell) * 7); top: calc(var(--cell) * 1); }
    .mini-slot[data-mini="2"] { left: calc(var(--cell) * 3); top: calc(var(--cell) * 3); }
    .mini-slot[data-mini="3"] { left: calc(var(--cell) * 7); top: calc(var(--cell) * 3); }
    .mini-slot[data-mini="4"] { left: calc(var(--cell) * 0); top: calc(var(--cell) * 4); }
    .mini-slot[data-mini="5"] { left: calc(var(--cell) * 7); top: calc(var(--cell) * 5); }
    .mini-slot[data-mini="6"] { left: calc(var(--cell) * 4); top: calc(var(--cell) * 6); }
    .mini-slot[data-mini="7"] { left: calc(var(--cell) * 6); top: calc(var(--cell) * 6); }

    .mini-card {
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 12px;
      text-align: center;
      box-shadow: 0 8px 30px rgba(0,0,0,0.3);
      transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .mini-card.from-left { transform: translateX(-120%); }
    .mini-card.from-right { transform: translateX(120%); }
    .mini-card.from-top { transform: translateY(-120%); }
    .mini-card.from-bottom { transform: translateY(120%); }

    .mini-card.visible {
      transform: translateX(0) translateY(0);
    }

    .mini-card.mint { background: var(--mint); color: #0a0a0a; }
    .mini-card.purple { background: var(--purple); color: #fff; }
    .mini-card.cyan { background: var(--cyan); color: #0a0a0a; }
    .mini-card.coral { background: var(--coral); color: #fff; }
    .mini-card.yellow { background: var(--yellow); color: #0a0a0a; }

    .mini-icon {
      width: 24px;
      height: 24px;
      margin-bottom: 6px;
      opacity: 0.9;
    }

    .mini-icon svg {
      width: 100%;
      height: 100%;
      stroke: currentColor;
      stroke-width: 1.5;
      fill: none;
    }

    .mini-name {
      font-size: 9px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      line-height: 1.2;
    }

    /* RESPONSIVE */
    @media (max-width: 1800px) {
      :root { --cell: 100px; }
      .hero-headline { font-size: 64px; }
    }

    @media (max-width: 1600px) {
      :root { --cell: 90px; }
      .hero-headline { font-size: 56px; }
    }

    @media (max-width: 1400px) {
      :root { --cell: 80px; }
      .hero-headline { font-size: 48px; }
      .hero-content { max-width: 380px; }
      .mini-icon { width: 20px; height: 20px; }
      .mini-name { font-size: 8px; }
    }

    @media (max-width: 1200px) {
      :root { --cell: 70px; }
      .hero-headline { font-size: 42px; }
    }

    @media (max-width: 1000px) {
      .cards-container, .hero-grid { display: none; }
      .hero { justify-content: center; padding: 120px 24px; }
      .hero-content { max-width: 100%; text-align: center; }
      .hero-buttons { justify-content: center; }
    }

    @media (max-width: 600px) {
      .hero-headline { font-size: 36px; }
      .hero-sub { font-size: 16px; }
      .hero-buttons { flex-direction: column; }
      .btn { width: 100%; justify-content: center; }
    }
  </style>
</head>

<body>
  <Nav />

  <section class="hero">
    <div class="hero-grid"></div>

    <div class="hero-content">
      <h1 class="hero-headline">Your calls,<br><em>working for you</em></h1>
      <p class="hero-sub">Every sales call triggers AI agents that update your CRM, alert your team, and draft follow-upsâ€”automatically.</p>
      <div class="hero-buttons">
        <a href="#" class="btn btn-primary">Book a Demo</a>
        <a href="#how-it-works" class="btn btn-secondary">See How It Works</a>
      </div>
    </div>

    <div class="cards-container">
      <!-- Pixel card slots -->
      <div class="card-slot" data-slot="0" id="slot-0"></div>
      <div class="card-slot" data-slot="1" id="slot-1"></div>
      <div class="card-slot" data-slot="2" id="slot-2"></div>
      
      <!-- Mini card slots -->
      <div class="mini-slot" data-mini="0" data-dir="top"></div>
      <div class="mini-slot" data-mini="1" data-dir="right"></div>
      <div class="mini-slot" data-mini="2" data-dir="left"></div>
      <div class="mini-slot" data-mini="3" data-dir="right"></div>
      <div class="mini-slot" data-mini="4" data-dir="left"></div>
      <div class="mini-slot" data-mini="5" data-dir="right"></div>
      <div class="mini-slot" data-mini="6" data-dir="bottom"></div>
      <div class="mini-slot" data-mini="7" data-dir="bottom"></div>
    </div>
  </section>

  <Footer />

  <script>
    // ========== PIXEL CARDS ==========
    const pixelCards = [
      { src: '/cards/card-01-call-trigger.svg' },
      { src: '/cards/card-02-intel-agent.svg' },
      { src: '/cards/card-03-crm-agent.svg' },
      { src: '/cards/card-04-risk-agent.svg' },
      { src: '/cards/card-05-email-agent.svg' },
      { src: '/cards/card-06-coaching-agent.svg' },
      { src: '/cards/card-07-multithread-agent.svg' },
      { src: '/cards/card-08-quote-agent.svg' },
      { src: '/cards/card-09-task-agent.svg' },
      { src: '/cards/card-10-prep-agent.svg' },
    ];

    const COLS = 12;
    const ROWS = 18;
    let currentPixelCards = [0, 1, 2];

    function shuffle(arr) {
      const a = [...arr];
      for (let i = a.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [a[i], a[j]] = [a[j], a[i]];
      }
      return a;
    }

    function buildPixelCard(cardSrc) {
      let cells = '';
      for (let row = 0; row < ROWS; row++) {
        for (let col = 0; col < COLS; col++) {
          const xPos = (col / (COLS - 1)) * 100;
          const yPos = (row / (ROWS - 1)) * 100;
          cells += `<div class="pixel-cell" style="background: url('${cardSrc}') ${xPos}% ${yPos}% / ${COLS * 100}% ${ROWS * 100}% no-repeat;"></div>`;
        }
      }
      return `<div class="pixel-grid">${cells}</div>`;
    }

    function animatePixelIn(slot) {
      return new Promise(resolve => {
        const cells = Array.from(slot.querySelectorAll('.pixel-cell'));
        const indices = shuffle([...Array(cells.length).keys()]);
        const batchSize = 12;
        let batch = 0;
        
        function showBatch() {
          const start = batch * batchSize;
          const end = Math.min(start + batchSize, indices.length);
          for (let i = start; i < end; i++) {
            cells[indices[i]].classList.add('visible');
          }
          batch++;
          if (batch * batchSize < indices.length) {
            requestAnimationFrame(showBatch);
          } else {
            setTimeout(resolve, 200);
          }
        }
        requestAnimationFrame(showBatch);
      });
    }

    function animatePixelOut(slot) {
      return new Promise(resolve => {
        const cells = Array.from(slot.querySelectorAll('.pixel-cell'));
        const indices = shuffle([...Array(cells.length).keys()]);
        const batchSize = 15;
        let batch = 0;
        
        function hideBatch() {
          const start = batch * batchSize;
          const end = Math.min(start + batchSize, indices.length);
          for (let i = start; i < end; i++) {
            cells[indices[i]].classList.add('hiding');
            cells[indices[i]].classList.remove('visible');
          }
          batch++;
          if (batch * batchSize < indices.length) {
            requestAnimationFrame(hideBatch);
          } else {
            setTimeout(() => {
              slot.innerHTML = '';
              resolve();
            }, 180);
          }
        }
        requestAnimationFrame(hideBatch);
      });
    }

    async function showPixelCard(slotIndex, cardIndex) {
      const slot = document.getElementById(`slot-${slotIndex}`);
      slot.innerHTML = buildPixelCard(pixelCards[cardIndex].src);
      await animatePixelIn(slot);
    }

    async function hidePixelCard(slotIndex) {
      const slot = document.getElementById(`slot-${slotIndex}`);
      if (!slot.querySelector('.pixel-grid')) return;
      await animatePixelOut(slot);
    }

    async function cyclePixelSlot(slotIndex) {
      await hidePixelCard(slotIndex);
      await new Promise(r => setTimeout(r, 250));
      currentPixelCards[slotIndex] = (currentPixelCards[slotIndex] + 3) % pixelCards.length;
      await showPixelCard(slotIndex, currentPixelCards[slotIndex]);
    }

    // ========== MINI CARDS ==========
    const miniAgents = [
      { name: 'CRM Sync', color: 'cyan', icon: 'database' },
      { name: 'Risk Alert', color: 'coral', icon: 'alert' },
      { name: 'Email Draft', color: 'yellow', icon: 'mail' },
      { name: 'Coaching', color: 'purple', icon: 'star' },
      { name: 'Tasks', color: 'mint', icon: 'check' },
      { name: 'Intel', color: 'purple', icon: 'search' },
      { name: 'Quote', color: 'cyan', icon: 'quote' },
      { name: 'Prep', color: 'yellow', icon: 'clipboard' },
    ];

    const icons = {
      database: '<ellipse cx="12" cy="5" rx="9" ry="3"/><path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"/><path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"/>',
      alert: '<path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/><line x1="12" y1="9" x2="12" y2="13"/><line x1="12" y1="17" x2="12.01" y2="17"/>',
      mail: '<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/>',
      star: '<polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>',
      check: '<polyline points="20 6 9 17 4 12"/>',
      search: '<circle cx="11" cy="11" r="8"/><path d="m21 21-4.35-4.35"/>',
      quote: '<path d="M3 21c3 0 7-1 7-8V5c0-1.25-.756-2.017-2-2H4c-1.25 0-2 .75-2 1.972V11c0 1.25.75 2 2 2 1 0 1 0 1 1v1c0 1-1 2-2 2s-1 .008-1 1.031V21z"/><path d="M15 21c3 0 7-1 7-8V5c0-1.25-.757-2.017-2-2h-4c-1.25 0-2 .75-2 1.972V11c0 1.25.75 2 2 2h.75c0 2.25.25 4-2.75 4v3z"/>',
      clipboard: '<path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"/><rect x="8" y="2" width="8" height="4" rx="1" ry="1"/>',
    };

    let miniSlotAgents = [0, 1, 2, 3, 4, 5, 6, 7];

    function buildMiniCard(agent, dir) {
      return `
        <div class="mini-card ${agent.color} from-${dir}">
          <div class="mini-icon">
            <svg viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
              ${icons[agent.icon]}
            </svg>
          </div>
          <div class="mini-name">${agent.name}</div>
        </div>
      `;
    }

    function slideMiniIn(slot) {
      const card = slot.querySelector('.mini-card');
      if (card) {
        requestAnimationFrame(() => {
          card.classList.add('visible');
        });
      }
    }

    function slideMiniOut(slot) {
      return new Promise(resolve => {
        const card = slot.querySelector('.mini-card');
        if (card) {
          card.classList.remove('visible');
          setTimeout(resolve, 500);
        } else {
          resolve();
        }
      });
    }

    async function cycleMiniSlot(slotIndex) {
      const slot = document.querySelector(`[data-mini="${slotIndex}"]`);
      const dir = slot.dataset.dir;
      
      await slideMiniOut(slot);
      await new Promise(r => setTimeout(r, 200));
      
      miniSlotAgents[slotIndex] = (miniSlotAgents[slotIndex] + 1) % miniAgents.length;
      slot.innerHTML = buildMiniCard(miniAgents[miniSlotAgents[slotIndex]], dir);
      
      await new Promise(r => setTimeout(r, 50));
      slideMiniIn(slot);
    }

    // ========== INIT ==========
    document.addEventListener('DOMContentLoaded', () => {
      // Init pixel cards
      setTimeout(() => showPixelCard(0, 0), 300);
      setTimeout(() => showPixelCard(1, 1), 700);
      setTimeout(() => showPixelCard(2, 2), 1100);

      // Cycle pixel cards
      const pixelDisplayTime = 5000;
      setTimeout(() => setInterval(() => cyclePixelSlot(0), pixelDisplayTime), 4000);
      setTimeout(() => setInterval(() => cyclePixelSlot(1), pixelDisplayTime), 5200);
      setTimeout(() => setInterval(() => cyclePixelSlot(2), pixelDisplayTime), 6400);

      // Init mini cards
      const miniSlots = document.querySelectorAll('.mini-slot');
      miniSlots.forEach((slot, i) => {
        const dir = slot.dataset.dir;
        slot.innerHTML = buildMiniCard(miniAgents[i], dir);
        setTimeout(() => slideMiniIn(slot), 500 + i * 150);
      });

      // Cycle mini cards - random slots every 3.5 seconds
      setInterval(() => {
        const indices = shuffle([0, 1, 2, 3, 4, 5, 6, 7]).slice(0, 2);
        indices.forEach((idx, i) => {
          setTimeout(() => cycleMiniSlot(idx), i * 300);
        });
      }, 3500);
    });
  </script>
</body>
</html>
