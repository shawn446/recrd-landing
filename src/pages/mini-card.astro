---
// Hero - Cards with label bar + pixel art illustration
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import BaseHead from '../components/BaseHead.astro';
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <BaseHead title="recrd - AI agents that close deals" description="Revenue intelligence for sales teams." />
  
  <style is:global>
    :root { 
      --cell: 120px;
      --grid-line: rgba(255,255,255,0.08);
      --mint: #59FFA4;
      --purple: #A678F4;
      --cyan: #5CEBDF;
      --coral: #FF6B7A;
      --yellow: #FFD84D;
      --bg: #0A0A0A;
      --text: #FFFFFF;
      --text-muted: rgba(255,255,255,0.6);
    }

    * { box-sizing: border-box; }

    .hero {
      min-height: 100vh;
      display: flex;
      align-items: center;
      padding: 72px 48px 0;
      position: relative;
      overflow: hidden;
      background: var(--bg);
    }

    .hero-grid {
      position: absolute;
      top: 0;
      right: 0;
      width: calc(var(--cell) * 10);
      height: 100%;
      background-image: 
        linear-gradient(to right, var(--grid-line) 1px, transparent 1px),
        linear-gradient(to bottom, var(--grid-line) 1px, transparent 1px);
      background-size: var(--cell) var(--cell);
      z-index: 1;
    }

    .hero-grid::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: calc(var(--cell) * 4);
      height: 100%;
      background: linear-gradient(to right, var(--bg) 30%, transparent);
      z-index: 2;
    }

    .hero-content {
      max-width: 480px;
      z-index: 100;
      padding: 48px 0;
    }

    .hero-headline {
      font-size: 72px;
      font-weight: 350;
      line-height: 1.0;
      letter-spacing: -0.03em;
      margin-bottom: 28px;
    }

    .hero-headline em { 
      font-style: normal; 
      color: var(--mint);
      font-weight: 400;
    }

    .hero-sub {
      font-size: 18px;
      font-weight: 400;
      line-height: 1.6;
      margin-bottom: 40px;
      color: var(--text-muted);
    }

    .hero-buttons { display: flex; gap: 16px; }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      padding: 16px 28px;
      font-weight: 500;
      font-size: 15px;
      text-decoration: none;
      transition: all 0.2s ease;
      cursor: pointer;
      border: none;
    }
    
    .btn-primary { background: var(--text); color: var(--bg); }
    .btn-primary:hover { background: var(--mint); color: #0a0a0a; transform: translateY(-2px); }
    
    .btn-secondary { background: transparent; color: var(--text); border: 1px solid rgba(255,255,255,0.2); }
    .btn-secondary:hover { background: var(--text); color: var(--bg); }

    .cards-container {
      position: absolute;
      top: 0;
      right: 0;
      width: calc(var(--cell) * 10);
      height: 100%;
      z-index: 10;
      pointer-events: none;
    }

    /* ========== CARDS ========== */
    .card-slot {
      position: absolute;
      pointer-events: auto;
      overflow: hidden;
    }

    .card-slot.size-1 {
      width: var(--cell);
      height: var(--cell);
    }

    .card-slot.size-2 {
      width: calc(var(--cell) * 2);
      height: calc(var(--cell) * 2);
    }

    .pixel-card {
      width: 100%;
      height: 100%;
      position: relative;
      text-decoration: none;
      display: block;
      transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
      cursor: pointer;
      box-shadow: 0 8px 30px rgba(0,0,0,0.3);
    }

    .pixel-card:hover {
      transform: scale(1.02);
    }

    /* Slide states */
    .pixel-card.from-left { transform: translateX(-120%); }
    .pixel-card.from-right { transform: translateX(120%); }
    .pixel-card.from-top { transform: translateY(-120%); }
    .pixel-card.from-bottom { transform: translateY(120%); }

    .pixel-card.visible {
      transform: translateX(0) translateY(0);
    }

    .pixel-card.visible:hover {
      transform: scale(1.02);
    }

    /* Color backgrounds */
    .pixel-card.mint { background: var(--mint); }
    .pixel-card.purple { background: var(--purple); }
    .pixel-card.cyan { background: var(--cyan); }
    .pixel-card.coral { background: var(--coral); }
    .pixel-card.yellow { background: var(--yellow); }

    /* Label bar at top */
    .card-label {
      position: absolute;
      top: 10%;
      left: 15%;
      right: 15%;
      height: 20%;
      background: rgba(10, 10, 10, 0.1);
      display: flex;
      align-items: center;
      padding: 0 10%;
      font-size: 9px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: var(--bg);
    }

    .size-2 .card-label {
      font-size: 11px;
    }

    /* Pixel art container */
    .card-art {
      position: absolute;
      top: 35%;
      left: 15%;
      right: 15%;
      bottom: 10%;
      display: flex;
      flex-direction: column;
      justify-content: space-evenly;
    }

    /* Pixel bars */
    .px-bar {
      height: 18%;
      background: currentColor;
    }

    /* Accent colors for pixel art */
    .pixel-card.mint .px-bar { color: var(--purple); }
    .pixel-card.purple .px-bar { color: var(--mint); }
    .pixel-card.cyan .px-bar { color: var(--coral); }
    .pixel-card.coral .px-bar { color: var(--cyan); }
    .pixel-card.yellow .px-bar { color: var(--purple); }

    /* RESPONSIVE */
    @media (max-width: 1800px) {
      :root { --cell: 100px; }
      .hero-headline { font-size: 64px; }
    }

    @media (max-width: 1600px) {
      :root { --cell: 90px; }
      .hero-headline { font-size: 56px; }
    }

    @media (max-width: 1400px) {
      :root { --cell: 80px; }
      .hero-headline { font-size: 48px; }
      .hero-content { max-width: 380px; }
    }

    @media (max-width: 1200px) {
      :root { --cell: 70px; }
      .hero-headline { font-size: 42px; }
    }

    @media (max-width: 1000px) {
      .cards-container, .hero-grid { display: none; }
      .hero { justify-content: center; padding: 120px 24px; }
      .hero-content { max-width: 100%; text-align: center; }
      .hero-buttons { justify-content: center; }
    }

    @media (max-width: 600px) {
      .hero-headline { font-size: 36px; }
      .hero-sub { font-size: 16px; }
      .hero-buttons { flex-direction: column; }
      .btn { width: 100%; justify-content: center; }
    }
  </style>
</head>

<body>
  <Nav />

  <section class="hero">
    <div class="hero-grid"></div>

    <div class="hero-content">
      <h1 class="hero-headline">Your calls,<br><em>working for you</em></h1>
      <p class="hero-sub">Every sales call triggers AI agents that update your CRM, alert your team, and draft follow-upsâ€”automatically.</p>
      <div class="hero-buttons">
        <a href="#" class="btn btn-primary">Book a Demo</a>
        <a href="#how-it-works" class="btn btn-secondary">See How It Works</a>
      </div>
    </div>

    <div class="cards-container" id="cards-container"></div>
  </section>

  <Footer />

  <script>
    // Card data with pixel art patterns (widths as percentages)
    const cards = [
      { label: 'Agents', color: 'purple', href: '/agents', size: 2, row: 1, col: 1, dir: 'left', bars: [100, 70, 85, 50] },
      { label: 'Forecast', color: 'mint', href: '/features#forecast', size: 1, row: 1, col: 5, dir: 'top', bars: [100, 75, 85, 55] },
      { label: 'Pipeline', color: 'cyan', href: '/features#pipeline', size: 2, row: 1, col: 7, dir: 'right', bars: [100, 80, 60, 40] },
      
      { label: 'Alerts', color: 'coral', href: '/features#alerts', size: 1, row: 2, col: 4, dir: 'top', bars: [90, 100, 70, 85] },
      
      { label: 'CRM Sync', color: 'mint', href: '/features#crm', size: 1, row: 3, col: 0, dir: 'left', bars: [80, 100, 60, 90] },
      { label: 'Coaching', color: 'yellow', href: '/features#coaching', size: 2, row: 3, col: 2, dir: 'left', bars: [100, 85, 70, 55] },
      { label: 'Email', color: 'purple', href: '/features#email', size: 1, row: 3, col: 6, dir: 'right', bars: [70, 100, 80, 60] },
      { label: 'Intel', color: 'cyan', href: '/features#intel', size: 1, row: 3, col: 9, dir: 'right', bars: [100, 65, 90, 75] },
      
      { label: 'Tasks', color: 'coral', href: '/features#tasks', size: 1, row: 4, col: 5, dir: 'bottom', bars: [85, 70, 100, 55] },
      
      { label: 'Transcripts', color: 'yellow', href: '/features#transcripts', size: 1, row: 5, col: 0, dir: 'left', bars: [100, 80, 95, 60] },
      { label: 'Insights', color: 'purple', href: '/features#insights', size: 2, row: 5, col: 3, dir: 'bottom', bars: [75, 100, 60, 85] },
      { label: 'Quotes', color: 'mint', href: '/features#quotes', size: 1, row: 5, col: 8, dir: 'right', bars: [90, 70, 100, 80] },
      
      { label: 'Analytics', color: 'cyan', href: '/features#analytics', size: 2, row: 6, col: 1, dir: 'left', bars: [100, 75, 90, 50] },
      { label: 'Notify', color: 'coral', href: '/features#notify', size: 1, row: 6, col: 6, dir: 'bottom', bars: [80, 100, 65, 90] },
      
      { label: 'Dashboard', color: 'yellow', href: '/dashboard', size: 2, row: 7, col: 4, dir: 'bottom', bars: [100, 80, 60, 45] },
      { label: 'Reports', color: 'purple', href: '/features#reports', size: 1, row: 7, col: 8, dir: 'right', bars: [70, 100, 85, 55] },
    ];

    function shuffle(arr) {
      const a = [...arr];
      for (let i = a.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [a[i], a[j]] = [a[j], a[i]];
      }
      return a;
    }

    function getCell() {
      return parseFloat(getComputedStyle(document.documentElement).getPropertyValue('--cell')) || 120;
    }

    function buildCard(card) {
      const opacities = [1, 0.7, 0.5, 0.3];
      const barsHtml = card.bars.map((width, i) => 
        `<div class="px-bar" style="width: ${width}%; opacity: ${opacities[i]};"></div>`
      ).join('');

      return `
        <a href="${card.href}" class="pixel-card ${card.color} from-${card.dir}">
          <div class="card-label">${card.label}</div>
          <div class="card-art">${barsHtml}</div>
        </a>
      `;
    }

    function createSlot(card) {
      const cell = getCell();
      const slot = document.createElement('div');
      slot.className = `card-slot size-${card.size}`;
      slot.style.left = `${card.col * cell}px`;
      slot.style.top = `${card.row * cell}px`;
      slot.innerHTML = buildCard(card);
      return slot;
    }

    function slideIn(slot) {
      const card = slot.querySelector('.pixel-card');
      if (card) {
        requestAnimationFrame(() => {
          card.classList.add('visible');
        });
      }
    }

    function slideOut(slot) {
      return new Promise(resolve => {
        const card = slot.querySelector('.pixel-card');
        if (card) {
          card.classList.remove('visible');
          setTimeout(resolve, 500);
        } else {
          resolve();
        }
      });
    }

    document.addEventListener('DOMContentLoaded', () => {
      const container = document.getElementById('cards-container');
      const slots = [];

      cards.forEach(card => {
        const slot = createSlot(card);
        container.appendChild(slot);
        slots.push(slot);
      });

      // Staggered slide in
      slots.forEach((slot, i) => {
        setTimeout(() => slideIn(slot), 300 + i * 80);
      });

      // Cycle random cards
      setInterval(() => {
        const indices = shuffle([...Array(slots.length).keys()]).slice(0, 3);
        indices.forEach((idx, i) => {
          const slot = slots[idx];
          
          setTimeout(async () => {
            await slideOut(slot);
            await new Promise(r => setTimeout(r, 400));
            slideIn(slot);
          }, i * 300);
        });
      }, 4500);
    });
  </script>
</body>
</html>
