---
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import BaseHead from '../components/BaseHead.astro';
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <BaseHead title="Features - recrd" description="CRM auto-sync, AI coaching, pipeline analytics, and more. Everything you need to close more deals." />
  
  <style>
    .hero { padding: 160px 48px 100px; text-align: center; max-width: 900px; margin: 0 auto; }
    .hero-badge { display: inline-flex; align-items: center; gap: 8px; padding: 8px 16px; background: var(--bg-card); border: 1px solid var(--border); font-family: var(--mono); font-size: 12px; text-transform: uppercase; letter-spacing: 0.1em; margin-bottom: 32px; }
    .hero-headline { font-size: 64px; font-weight: 350; line-height: 1.1; letter-spacing: -0.03em; margin-bottom: 24px; }
    .hero-headline em { font-style: normal; color: var(--cyan); }
    [data-theme="light"] .hero-headline em { color: var(--purple); }
    .hero-sub { font-size: 20px; color: var(--text-muted); line-height: 1.6; max-width: 600px; margin: 0 auto; }

    .feature-section { padding: 120px 48px; border-top: 1px solid var(--border); }
    .feature-section:nth-child(even) { background: var(--bg-alt); }
    .feature-container { max-width: 1200px; margin: 0 auto; display: grid; grid-template-columns: 1fr 1fr; gap: 80px; align-items: center; }
    .feature-container.reverse { direction: rtl; }
    .feature-container.reverse > * { direction: ltr; }
    .feature-content { max-width: 480px; }
    .feature-label { font-family: var(--mono); font-size: 12px; text-transform: uppercase; letter-spacing: 0.1em; margin-bottom: 16px; }
    .feature-label.mint { color: var(--mint); }
    .feature-label.purple { color: var(--purple); }
    .feature-label.cyan { color: var(--cyan); }
    .feature-label.coral { color: var(--coral); }
    .feature-label.yellow { color: var(--yellow); }
    .feature-headline { font-size: 40px; font-weight: 350; line-height: 1.2; letter-spacing: -0.02em; margin-bottom: 20px; }
    .feature-desc { font-size: 16px; color: var(--text-muted); line-height: 1.7; margin-bottom: 32px; }
    .feature-list { list-style: none; }
    .feature-list li { display: flex; align-items: flex-start; gap: 12px; padding: 12px 0; border-bottom: 1px solid var(--border); font-size: 15px; }
    .feature-list li:last-child { border-bottom: none; }
    .feature-check { width: 20px; height: 20px; display: flex; align-items: center; justify-content: center; flex-shrink: 0; margin-top: 2px; }
    .feature-check svg { width: 12px; height: 12px; stroke-width: 3; }
    .feature-check.mint { background: var(--mint); color: #0a0a0a; }
    .feature-check.purple { background: var(--purple); color: #fff; }
    .feature-check.cyan { background: var(--cyan); color: #0a0a0a; }
    .feature-check.coral { background: var(--coral); color: #fff; }
    .feature-check.yellow { background: var(--yellow); color: #0a0a0a; }

    .feature-visual { background: var(--bg); border: 1px solid var(--border); padding: 24px; }
    .feature-section:nth-child(even) .feature-visual { background: var(--bg-card); }
    .mock-header { display: flex; align-items: center; justify-content: space-between; padding-bottom: 16px; border-bottom: 1px solid var(--border); margin-bottom: 20px; }
    .mock-title { font-weight: 600; font-size: 14px; }
    .mock-badge { font-family: var(--mono); font-size: 10px; text-transform: uppercase; letter-spacing: 0.05em; padding: 6px 12px; }
    .mock-badge.mint { background: var(--mint); color: #0a0a0a; }
    .mock-badge.purple { background: var(--purple); color: #fff; }
    .mock-badge.cyan { background: var(--cyan); color: #0a0a0a; }
    .mock-badge.coral { background: var(--coral); color: #fff; }
    .mock-badge.yellow { background: var(--yellow); color: #0a0a0a; }

    .crm-field { display: flex; justify-content: space-between; align-items: center; padding: 12px 16px; background: var(--bg-alt); border: 1px solid var(--border); margin-bottom: 8px; }
    .crm-field:last-child { margin-bottom: 0; }
    .crm-field-label { font-size: 13px; color: var(--text-muted); }
    .crm-field-value { font-family: var(--mono); font-size: 12px; color: var(--mint); }

    .scorecard-item { display: flex; justify-content: space-between; align-items: center; padding: 14px 0; border-bottom: 1px solid var(--border); }
    .scorecard-item:last-child { border-bottom: none; }
    .scorecard-label { font-size: 14px; }
    .scorecard-score { display: flex; align-items: center; gap: 12px; }
    .scorecard-bar { width: 80px; height: 6px; background: var(--border); overflow: hidden; }
    .scorecard-fill { height: 100%; }
    .scorecard-fill.high { background: var(--mint); }
    .scorecard-fill.mid { background: var(--yellow); }
    .scorecard-fill.low { background: var(--coral); }
    .scorecard-value { font-family: var(--mono); font-size: 13px; font-weight: 600; width: 40px; text-align: right; }

    .risk-alert { display: flex; gap: 16px; padding: 16px; background: var(--bg-alt); border: 1px solid var(--border); margin-bottom: 12px; }
    .risk-alert:last-child { margin-bottom: 0; }
    .risk-icon { width: 32px; height: 32px; display: flex; align-items: center; justify-content: center; flex-shrink: 0; }
    .risk-icon.warning { background: var(--coral); }
    .risk-icon.caution { background: var(--yellow); }
    .risk-content { flex: 1; }
    .risk-title { font-size: 14px; font-weight: 600; margin-bottom: 4px; }
    .risk-desc { font-size: 13px; color: var(--text-muted); }

    .cta-section { padding: 120px 48px; text-align: center; border-top: 1px solid var(--border); }
    .cta-headline { font-size: 40px; font-weight: 350; line-height: 1.2; letter-spacing: -0.02em; margin-bottom: 16px; }
    .cta-sub { font-size: 18px; color: var(--text-muted); margin-bottom: 40px; max-width: 500px; margin-left: auto; margin-right: auto; }
    .cta-buttons { display: flex; gap: 16px; justify-content: center; }
    .btn { display: inline-flex; align-items: center; gap: 12px; padding: 18px 28px; font-weight: 500; font-size: 15px; text-decoration: none; transition: all 0.2s ease; cursor: pointer; position: relative; overflow: hidden; }
    .btn-primary { background: transparent; color: var(--text); border: 1px solid var(--btn-outline); }
    .btn-primary::before { content: ''; position: absolute; top: 0; left: 0; width: 0; height: 100%; background: var(--mint); transition: width 0.3s ease; z-index: -1; }
    .btn-primary:hover::before { width: 100%; }
    .btn-primary:hover { color: #0a0a0a; border-color: var(--mint); }
    .btn-secondary { background: transparent; color: var(--text); border: 1px solid var(--btn-outline); }
    .btn-secondary::before { content: ''; position: absolute; top: 0; left: 0; width: 0; height: 100%; background: var(--purple); transition: width 0.3s ease; z-index: -1; }
    .btn-secondary:hover::before { width: 100%; }
    .btn-secondary:hover { color: #fff; border-color: var(--purple); }
    .btn-arrow { display: inline-flex; transition: transform 0.2s ease; }
    .btn:hover .btn-arrow { transform: translateX(4px); }

    @media (max-width: 1000px) { .feature-container { grid-template-columns: 1fr; gap: 48px; } .feature-container.reverse { direction: ltr; } .feature-content { max-width: 100%; } }
    @media (max-width: 900px) { .hero { padding: 140px 24px 80px; } .hero-headline { font-size: 44px; } .feature-section { padding: 80px 24px; } .feature-headline { font-size: 32px; } .cta-section { padding: 80px 24px; } .cta-headline { font-size: 32px; } .cta-buttons { flex-direction: column; } .btn { width: 100%; justify-content: center; } }
  </style>
</head>

<body>
  <Nav />

  <section class="hero">
    <div class="hero-badge">Platform</div>
    <h1 class="hero-headline">Everything you need to <em>close more deals</em></h1>
    <p class="hero-sub">From automatic CRM updates to AI-powered forecasting. Built for revenue teams who hate busywork.</p>
  </section>

  <section class="feature-section" id="crm-sync">
    <div class="feature-container">
      <div class="feature-content">
        <p class="feature-label mint">CRM Automation</p>
        <h2 class="feature-headline">Your CRM, always current</h2>
        <p class="feature-desc">Stop spending 30 minutes after every call updating HubSpot or Salesforce. recrd extracts and syncs 12+ fields automatically.</p>
        <ul class="feature-list">
          <li><span class="feature-check mint"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><polyline points="20 6 9 17 4 12"/></svg></span>MEDDIC, BANT, SPICED fields auto-populated</li>
          <li><span class="feature-check mint"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><polyline points="20 6 9 17 4 12"/></svg></span>Deal stage recommendations based on call content</li>
          <li><span class="feature-check mint"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><polyline points="20 6 9 17 4 12"/></svg></span>Next steps and follow-up dates extracted</li>
          <li><span class="feature-check mint"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><polyline points="20 6 9 17 4 12"/></svg></span>Works with HubSpot and Salesforce</li>
        </ul>
      </div>
      <div class="feature-visual">
        <div class="mock-header"><span class="mock-title">HubSpot Sync</span><span class="mock-badge mint">Live</span></div>
        <div class="crm-field"><span class="crm-field-label">Deal Stage</span><span class="crm-field-value">Demo Completed ✓</span></div>
        <div class="crm-field"><span class="crm-field-label">Decision Maker</span><span class="crm-field-value">Sarah Chen, VP Sales ✓</span></div>
        <div class="crm-field"><span class="crm-field-label">Budget</span><span class="crm-field-value">$45-60k confirmed ✓</span></div>
        <div class="crm-field"><span class="crm-field-label">Timeline</span><span class="crm-field-value">Q1 decision ✓</span></div>
        <div class="crm-field"><span class="crm-field-label">Next Step</span><span class="crm-field-value">Send proposal by Friday ✓</span></div>
      </div>
    </div>
  </section>

  <section class="feature-section" id="coaching">
    <div class="feature-container reverse">
      <div class="feature-content">
        <p class="feature-label cyan">AI Coaching</p>
        <h2 class="feature-headline">Scorecards that actually help</h2>
        <p class="feature-desc">Auto-generated scorecards based on MEDDIC, BANT, SPICED, or your custom framework. See exactly where each rep needs coaching.</p>
        <ul class="feature-list">
          <li><span class="feature-check cyan"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><polyline points="20 6 9 17 4 12"/></svg></span>15+ sales frameworks supported</li>
          <li><span class="feature-check cyan"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><polyline points="20 6 9 17 4 12"/></svg></span>Per-call and aggregate scoring</li>
          <li><span class="feature-check cyan"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><polyline points="20 6 9 17 4 12"/></svg></span>Specific coaching recommendations</li>
          <li><span class="feature-check cyan"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><polyline points="20 6 9 17 4 12"/></svg></span>Custom scorecards for your methodology</li>
        </ul>
      </div>
      <div class="feature-visual">
        <div class="mock-header"><span class="mock-title">MEDDIC Scorecard</span><span class="mock-badge cyan">Call #47</span></div>
        <div class="scorecard-item"><span class="scorecard-label">Metrics</span><div class="scorecard-score"><div class="scorecard-bar"><div class="scorecard-fill high" style="width: 90%;"></div></div><span class="scorecard-value">90%</span></div></div>
        <div class="scorecard-item"><span class="scorecard-label">Economic Buyer</span><div class="scorecard-score"><div class="scorecard-bar"><div class="scorecard-fill high" style="width: 85%;"></div></div><span class="scorecard-value">85%</span></div></div>
        <div class="scorecard-item"><span class="scorecard-label">Decision Criteria</span><div class="scorecard-score"><div class="scorecard-bar"><div class="scorecard-fill mid" style="width: 60%;"></div></div><span class="scorecard-value">60%</span></div></div>
        <div class="scorecard-item"><span class="scorecard-label">Decision Process</span><div class="scorecard-score"><div class="scorecard-bar"><div class="scorecard-fill low" style="width: 35%;"></div></div><span class="scorecard-value">35%</span></div></div>
        <div class="scorecard-item"><span class="scorecard-label">Identify Pain</span><div class="scorecard-score"><div class="scorecard-bar"><div class="scorecard-fill high" style="width: 95%;"></div></div><span class="scorecard-value">95%</span></div></div>
        <div class="scorecard-item"><span class="scorecard-label">Champion</span><div class="scorecard-score"><div class="scorecard-bar"><div class="scorecard-fill mid" style="width: 70%;"></div></div><span class="scorecard-value">70%</span></div></div>
      </div>
    </div>
  </section>

  <section class="feature-section" id="risk-alerts">
    <div class="feature-container">
      <div class="feature-content">
        <p class="feature-label coral">Risk Detection</p>
        <h2 class="feature-headline">Catch deal risks early</h2>
        <p class="feature-desc">50+ signal types detected automatically. Budget objections, competitor mentions, champion loss, timeline slippage—get alerts before deals go sideways.</p>
        <ul class="feature-list">
          <li><span class="feature-check coral"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><polyline points="20 6 9 17 4 12"/></svg></span>Real-time signal detection</li>
          <li><span class="feature-check coral"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><polyline points="20 6 9 17 4 12"/></svg></span>Slack and email notifications</li>
          <li><span class="feature-check coral"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><polyline points="20 6 9 17 4 12"/></svg></span>Deal health scoring</li>
          <li><span class="feature-check coral"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><polyline points="20 6 9 17 4 12"/></svg></span>Recommended actions for each risk</li>
        </ul>
      </div>
      <div class="feature-visual">
        <div class="mock-header"><span class="mock-title">Risk Alerts</span><span class="mock-badge coral">3 New</span></div>
        <div class="risk-alert"><div class="risk-icon warning"><svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#fff" stroke-width="2"><path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/><line x1="12" y1="9" x2="12" y2="13"/><line x1="12" y1="17" x2="12.01" y2="17"/></svg></div><div class="risk-content"><div class="risk-title">Budget objection detected</div><div class="risk-desc">Acme Corp: "This is higher than we budgeted"</div></div></div>
        <div class="risk-alert"><div class="risk-icon warning"><svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#fff" stroke-width="2"><path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/><line x1="12" y1="9" x2="12" y2="13"/><line x1="12" y1="17" x2="12.01" y2="17"/></svg></div><div class="risk-content"><div class="risk-title">Competitor mentioned</div><div class="risk-desc">TechStart: "We're also looking at Gong"</div></div></div>
        <div class="risk-alert"><div class="risk-icon caution"><svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#0a0a0a" stroke-width="2"><circle cx="12" cy="12" r="10"/><line x1="12" y1="8" x2="12" y2="12"/><line x1="12" y1="16" x2="12.01" y2="16"/></svg></div><div class="risk-content"><div class="risk-title">Timeline slipping</div><div class="risk-desc">GlobalMfg: Decision pushed to Q2</div></div></div>
      </div>
    </div>
  </section>

  <section class="cta-section">
    <h2 class="cta-headline">Ready to see it in action?</h2>
    <p class="cta-sub">Book a demo and see how recrd can save your team 20-30 minutes per call.</p>
    <div class="cta-buttons">
      <a href="#" class="btn btn-primary">Book a Demo <span class="btn-arrow"><svg width="10" height="10" viewBox="0 0 10 10" fill="none"><rect x="2" y="0" width="2" height="2" fill="currentColor"/><rect x="4" y="2" width="2" height="2" fill="currentColor"/><rect x="6" y="4" width="2" height="2" fill="currentColor"/><rect x="4" y="6" width="2" height="2" fill="currentColor"/><rect x="2" y="8" width="2" height="2" fill="currentColor"/></svg></span></a>
      <a href="/agents" class="btn btn-secondary">Explore Agents <span class="btn-arrow"><svg width="10" height="10" viewBox="0 0 10 10" fill="none"><rect x="2" y="0" width="2" height="2" fill="currentColor"/><rect x="4" y="2" width="2" height="2" fill="currentColor"/><rect x="6" y="4" width="2" height="2" fill="currentColor"/><rect x="4" y="6" width="2" height="2" fill="currentColor"/><rect x="2" y="8" width="2" height="2" fill="currentColor"/></svg></span></a>
    </div>
  </section>

  <Footer />
  <ThemeToggle />
</body>
</html>
