---
// src/pages/font-test.astro
// Hero + Nav - Render-inspired design
---
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>recrd — AI Agents for Revenue Teams</title>
  <style>
    /* FONTS */
    @font-face {
      font-family: 'Roobert';
      src: url('/fonts/RoobertCollectionVF-TRIAL.woff2') format('woff2');
      font-weight: 100 900;
      font-display: swap;
    }
    @font-face {
      font-family: 'Matter';
      src: url('/fonts/Matter-TRIAL-Light.otf') format('opentype');
      font-weight: 300;
      font-display: swap;
    }
    @font-face {
      font-family: 'Matter';
      src: url('/fonts/Matter-TRIAL-Regular.otf') format('opentype');
      font-weight: 400;
      font-display: swap;
    }
    @font-face {
      font-family: 'Object Sans';
      src: url('/fonts/PPObjectSans-Heavy.otf') format('opentype');
      font-weight: 900;
      font-display: swap;
    }
    @font-face {
      font-family: 'Fraktion Mono';
      src: url('/fonts/PPFraktionMono-Regular.otf') format('opentype');
      font-weight: 400;
      font-display: swap;
    }

    /* VARIABLES */
    :root {
      --mint: #46FCAF;
      --purple: #A678F4;
      --cyan: #02C0FF;
      --coral: #FF4F5E;
      --yellow: #FFE869;
      --heading-font: 'Roobert', system-ui, sans-serif;
      --body-font: 'Roobert', system-ui, sans-serif;
      --mono: 'Fraktion Mono', monospace;
    }

    [data-theme="dark"] {
      --bg: #0A0A0A;
      --bg-elevated: #111111;
      --bg-card: #151515;
      --border: #222222;
      --text: #ffffff;
      --text-secondary: #888888;
      --text-muted: #555555;
      --btn-primary-bg: #ffffff;
      --btn-primary-text: #0a0a0a;
      --grid-color: rgba(255,255,255,0.04);
    }

    [data-theme="light"] {
      --bg: #ffffff;
      --bg-elevated: #fafafa;
      --bg-card: #f5f5f5;
      --border: #e0e0e0;
      --text: #0a0a0a;
      --text-secondary: #666666;
      --text-muted: #999999;
      --btn-primary-bg: #0a0a0a;
      --btn-primary-text: #ffffff;
      --grid-color: rgba(0,0,0,0.04);
    }

    /* RESET */
    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      background: var(--bg);
      color: var(--text);
      font-family: var(--body-font);
      font-weight: 400;
      line-height: 1.5;
      transition: background 0.2s, color 0.2s;
    }

    /* CONTROLS */
    .controls {
      position: fixed;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      gap: 6px;
      background: var(--bg-elevated);
      border: 1px solid var(--border);
      padding: 8px 12px;
      z-index: 1000;
    }

    .control-btn {
      background: transparent;
      border: 1px solid var(--border);
      color: var(--text-muted);
      padding: 6px 12px;
      font-size: 10px;
      font-family: var(--mono);
      cursor: pointer;
      transition: all 0.15s;
    }

    .control-btn:hover {
      color: var(--text-secondary);
      border-color: var(--text-muted);
    }

    .control-btn.active {
      background: var(--mint);
      color: #0a0a0a;
      border-color: var(--mint);
    }

    .control-sep {
      width: 1px;
      background: var(--border);
      margin: 0 6px;
    }

    /* NAV */
    .nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px 48px;
      border-bottom: 1px solid var(--border);
      position: relative;
      z-index: 10;
    }

    .nav-logo {
      display: flex;
      align-items: center;
      gap: 12px;
      text-decoration: none;
    }

    .nav-logo svg {
      width: 32px;
      height: 32px;
    }

    .nav-wordmark {
      font-family: var(--heading-font);
      font-weight: 700;
      font-size: 22px;
      color: var(--text);
      letter-spacing: -0.02em;
    }

    .nav-links {
      display: flex;
      gap: 36px;
      list-style: none;
    }

    .nav-links a {
      color: var(--text-secondary);
      text-decoration: none;
      font-size: 14px;
      font-weight: 400;
      transition: color 0.15s;
    }

    .nav-links a:hover {
      color: var(--text);
    }

    .nav-cta {
      background: var(--btn-primary-bg);
      color: var(--btn-primary-text);
      padding: 12px 24px;
      font-family: var(--body-font);
      font-weight: 500;
      font-size: 14px;
      text-decoration: none;
      transition: opacity 0.15s;
    }

    .nav-cta:hover {
      opacity: 0.85;
    }

    /* HERO */
    .hero {
      position: relative;
      min-height: calc(100vh - 73px);
      display: flex;
      overflow: hidden;
    }

    .hero-grid {
      position: absolute;
      inset: 0;
      background-image: 
        linear-gradient(var(--grid-color) 1px, transparent 1px),
        linear-gradient(90deg, var(--grid-color) 1px, transparent 1px);
      background-size: 60px 60px;
    }

    .hero-content {
      position: relative;
      z-index: 10;
      padding: 100px 48px;
      max-width: 620px;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .hero-headline {
      font-family: var(--heading-font);
      font-weight: 700;
      font-size: 56px;
      line-height: 1.05;
      letter-spacing: -0.03em;
      margin-bottom: 24px;
    }

    .hero-headline em {
      font-style: normal;
      color: var(--mint);
    }

    .hero-sub {
      font-size: 18px;
      font-weight: 300;
      color: var(--text-secondary);
      line-height: 1.6;
      margin-bottom: 40px;
      max-width: 500px;
    }

    .hero-buttons {
      display: flex;
      gap: 12px;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      padding: 16px 28px;
      font-family: var(--body-font);
      font-weight: 500;
      font-size: 15px;
      text-decoration: none;
      cursor: pointer;
      border: none;
      transition: all 0.15s;
    }

    .btn-primary {
      background: var(--btn-primary-bg);
      color: var(--btn-primary-text);
    }

    .btn-primary:hover {
      opacity: 0.85;
    }

    .btn-secondary {
      background: transparent;
      border: 1px solid var(--border);
      color: var(--text);
    }

    .btn-secondary:hover {
      border-color: var(--text-secondary);
    }

    .btn-arrow {
      display: flex;
      gap: 2px;
    }

    .btn-arrow span {
      width: 4px;
      height: 4px;
      background: currentColor;
    }

    /* HERO VISUAL - Floating blocks */
    .hero-visual {
      position: absolute;
      top: 0;
      right: 0;
      width: 55%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .blocks {
      position: relative;
      width: 500px;
      height: 500px;
    }

    .block {
      position: absolute;
      animation: float 6s ease-in-out infinite;
    }

    .block:nth-child(1) { width: 180px; height: 120px; top: 60px; left: 80px; animation-delay: 0s; }
    .block:nth-child(2) { width: 120px; height: 80px; top: 40px; left: 280px; animation-delay: 0.5s; }
    .block:nth-child(3) { width: 200px; height: 140px; top: 160px; left: 160px; animation-delay: 1s; }
    .block:nth-child(4) { width: 100px; height: 60px; top: 200px; left: 30px; animation-delay: 1.5s; }
    .block:nth-child(5) { width: 160px; height: 100px; top: 280px; left: 260px; animation-delay: 2s; }
    .block:nth-child(6) { width: 80px; height: 80px; top: 340px; left: 100px; animation-delay: 2.5s; }
    .block:nth-child(7) { width: 140px; height: 90px; top: 380px; left: 200px; animation-delay: 3s; }
    .block:nth-child(8) { width: 60px; height: 40px; top: 120px; left: 380px; animation-delay: 3.5s; }

    [data-theme="dark"] .block.purple { background: var(--purple); }
    [data-theme="dark"] .block.mint { background: var(--mint); }
    [data-theme="dark"] .block.dark { background: #18181b; border: 1px solid #27272a; }
    [data-theme="dark"] .block.white { background: rgba(255,255,255,0.9); }

    [data-theme="light"] .block.mint { background: var(--mint); }
    [data-theme="light"] .block.dark { background: #18181b; }
    [data-theme="light"] .block.light { background: #ffffff; border: 1px solid #e0e0e0; }
    [data-theme="light"] .block.teal { background: #14b8a6; }

    .block .bar {
      position: absolute;
      height: 8px;
      left: 12px;
      right: 12px;
    }

    .block .bar:nth-child(1) { top: 16px; width: 60%; }
    .block .bar:nth-child(2) { top: 32px; width: 80%; }
    .block .bar:nth-child(3) { top: 48px; width: 40%; }
    .block .bar:nth-child(4) { top: 64px; width: 70%; }

    [data-theme="dark"] .bar.white { background: rgba(255,255,255,0.9); }
    [data-theme="dark"] .bar.mint { background: var(--mint); }
    [data-theme="dark"] .bar.purple { background: var(--purple); }

    [data-theme="light"] .bar.dark { background: #18181b; }
    [data-theme="light"] .bar.mint { background: var(--mint); }
    [data-theme="light"] .bar.white { background: #ffffff; }

    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-12px); }
    }

    /* Gradient blobs */
    .blob {
      position: absolute;
      border-radius: 50%;
      filter: blur(100px);
      pointer-events: none;
    }

    [data-theme="dark"] .blob-1 {
      width: 600px;
      height: 600px;
      background: radial-gradient(circle, var(--mint) 0%, transparent 70%);
      top: -100px;
      right: 10%;
      opacity: 0.15;
    }

    [data-theme="dark"] .blob-2 {
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, var(--purple) 0%, transparent 70%);
      top: 200px;
      right: 30%;
      opacity: 0.12;
    }

    [data-theme="light"] .blob-1 {
      width: 700px;
      height: 700px;
      background: radial-gradient(circle, var(--mint) 0%, transparent 70%);
      top: -100px;
      right: 5%;
      opacity: 0.25;
    }

    [data-theme="light"] .blob-2 {
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, var(--cyan) 0%, transparent 70%);
      top: 300px;
      right: 25%;
      opacity: 0.15;
    }

    /* MOBILE */
    @media (max-width: 900px) {
      .nav { padding: 16px 24px; }
      .nav-links { display: none; }
      
      .hero { flex-direction: column; }
      .hero-content { padding: 60px 24px; max-width: none; }
      .hero-headline { font-size: 40px; }
      .hero-sub { font-size: 16px; }
      
      .hero-visual {
        position: relative;
        width: 100%;
        height: 400px;
      }
      
      .blocks {
        transform: scale(0.7);
      }
      
      .hero-buttons { flex-direction: column; }
      .btn { justify-content: center; }
    }

    @media (max-width: 500px) {
      .hero-headline { font-size: 32px; }
      .controls { 
        bottom: 10px;
        padding: 6px 10px;
      }
      .control-btn { padding: 5px 8px; font-size: 9px; }
    }
  </style>
</head>
<body>

  <!-- Controls -->
  <div class="controls">
    <button class="control-btn active" id="btn-dark" onclick="setTheme('dark')">Dark</button>
    <button class="control-btn" id="btn-light" onclick="setTheme('light')">Light</button>
    <div class="control-sep"></div>
    <button class="control-btn active" id="btn-roobert" onclick="setFont('roobert')">Roobert</button>
    <button class="control-btn" id="btn-object" onclick="setFont('object')">Object</button>
  </div>

  <!-- Nav -->
  <nav class="nav">
    <a href="/" class="nav-logo">
      <svg viewBox="0 0 52 52" fill="none">
        <rect x="0" y="16" width="28" height="28" fill="var(--purple)"/>
        <rect x="16" y="0" width="28" height="28" rx="6" fill="var(--mint)"/>
      </svg>
      <span class="nav-wordmark">recrd</span>
    </a>
    <ul class="nav-links">
      <li><a href="#">Features</a></li>
      <li><a href="#">Pricing</a></li>
      <li><a href="#">Docs</a></li>
      <li><a href="#">Blog</a></li>
    </ul>
    <a href="#" class="nav-cta">Dashboard</a>
  </nav>

  <!-- Hero -->
  <section class="hero">
    <div class="hero-grid"></div>
    <div class="blob blob-1"></div>
    <div class="blob blob-2"></div>

    <div class="hero-content">
      <h1 class="hero-headline">AI agents that <em>close deals</em></h1>
      <p class="hero-sub">Record your sales calls. Let AI handle the follow-ups, CRM updates, and coaching insights — from your first call to your thousandth.</p>
      <div class="hero-buttons">
        <a href="#" class="btn btn-primary">
          Get Started Free
          <div class="btn-arrow">
            <span></span><span></span><span></span>
          </div>
        </a>
        <a href="#" class="btn btn-secondary">
          Watch Demo
          <div class="btn-arrow">
            <span></span><span></span><span></span>
          </div>
        </a>
      </div>
    </div>

    <div class="hero-visual">
      <div class="blocks">
        <!-- Dark mode blocks -->
        <div class="block purple">
          <div class="bar white"></div>
          <div class="bar mint"></div>
          <div class="bar white"></div>
        </div>
        <div class="block mint"></div>
        <div class="block dark">
          <div class="bar purple"></div>
          <div class="bar mint"></div>
          <div class="bar purple"></div>
          <div class="bar mint"></div>
        </div>
        <div class="block white"></div>
        <div class="block purple">
          <div class="bar white"></div>
          <div class="bar mint"></div>
        </div>
        <div class="block mint"></div>
        <div class="block dark">
          <div class="bar mint"></div>
          <div class="bar purple"></div>
        </div>
        <div class="block purple"></div>
      </div>
    </div>
  </section>

  <script is:inline>
    function setTheme(theme) {
      document.documentElement.setAttribute('data-theme', theme);
      document.getElementById('btn-dark').classList.toggle('active', theme === 'dark');
      document.getElementById('btn-light').classList.toggle('active', theme === 'light');
    }

    function setFont(font) {
      const root = document.documentElement;
      if (font === 'roobert') {
        root.style.setProperty('--heading-font', "'Roobert', system-ui, sans-serif");
        root.style.setProperty('--body-font', "'Roobert', system-ui, sans-serif");
      } else if (font === 'object') {
        root.style.setProperty('--heading-font', "'Object Sans', system-ui, sans-serif");
        root.style.setProperty('--body-font', "'Object Sans', system-ui, sans-serif");
      }
      document.getElementById('btn-roobert').classList.toggle('active', font === 'roobert');
      document.getElementById('btn-object').classList.toggle('active', font === 'object');
    }
  </script>

</body>
</html>
