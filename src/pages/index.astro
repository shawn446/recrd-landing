---
// Homepage - recrd
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import BaseHead from '../components/BaseHead.astro';
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <BaseHead title="recrd - AI agents that close deals" description="Revenue intelligence for sales teams. Record calls, auto-update CRM, and get AI-powered coaching." />
  
  <style is:global>
    :root { 
      --cell: 120px; 
      --grid-line: rgba(255,255,255,0.08); 
    }
    [data-theme="light"] { --grid-line: rgba(0,0,0,0.08); }

    /* HERO */
    .hero {
      min-height: 100vh;
      display: flex;
      align-items: center;
      padding: 140px 0 0 48px;
      position: relative;
      overflow: hidden;
    }

    .hero-content {
      max-width: 550px;
      z-index: 20;
      padding: 48px 0;
      position: relative;
    }

    .hero-headline {
      font-size: 90px;
      font-weight: 350;
      line-height: 1.0;
      letter-spacing: -0.03em;
      margin-bottom: 28px;
    }
    .hero-headline em { 
      font-style: normal; 
      color: var(--mint);
      font-weight: 400;
    }
    [data-theme="light"] .hero-headline em { color: var(--purple); }

    .hero-sub {
      font-size: 20px;
      font-weight: 400;
      line-height: 1.5;
      margin-bottom: 40px;
      color: var(--text-muted);
    }

    .hero-buttons { display: flex; gap: 16px; }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      padding: 18px 28px;
      font-weight: 500;
      font-size: 15px;
      text-decoration: none;
      transition: all 0.2s ease;
      cursor: pointer;
      position: relative;
      overflow: hidden;
    }
    
    .btn-primary { background: var(--text); color: var(--bg); }
    .btn-primary:hover { background: var(--mint); color: #0a0a0a; transform: translateY(-2px); }
    
    .btn-secondary { background: transparent; color: var(--text); border: 1px solid var(--btn-outline); }
    .btn-secondary:hover { background: var(--text); color: var(--bg); }

    .btn-arrow { display: inline-flex; transition: transform 0.2s ease; }
    .btn:hover .btn-arrow { transform: translateX(4px); }

    /* GRID - Full width with left fade */
    .grid-wrapper {
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      z-index: 1;
      overflow: hidden;
    }

    .grid-bg {
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      width: 100%;
      background-image: 
        linear-gradient(to right, var(--grid-line) 1px, transparent 1px),
        linear-gradient(to bottom, var(--grid-line) 1px, transparent 1px);
      background-size: var(--cell) var(--cell);
      mask-image: linear-gradient(to right, transparent 0%, transparent 30%, rgba(0,0,0,0.3) 45%, rgba(0,0,0,0.6) 60%, rgba(0,0,0,1) 75%);
      -webkit-mask-image: linear-gradient(to right, transparent 0%, transparent 30%, rgba(0,0,0,0.3) 45%, rgba(0,0,0,0.6) 60%, rgba(0,0,0,1) 75%);
    }

    /* CARD SHOWCASE */
    .card-showcase {
      position: absolute;
      top: 50%;
      right: 60px;
      transform: translateY(-50%);
      width: 720px;
      height: 400px;
      z-index: 10;
      perspective: 2000px;
    }

    .card-stack {
      position: relative;
      width: 100%;
      height: 100%;
      transform-style: preserve-3d;
    }

    .card-item {
      position: absolute;
      width: 160px;
      height: 240px;
      transform-style: preserve-3d;
      backface-visibility: hidden;
      cursor: pointer;
      filter: drop-shadow(0 25px 50px rgba(0,0,0,0.35));
      opacity: 0;
      top: 50%;
      transform: translateY(-50%);
    }

    .card-item img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }

    .card-item:hover {
      filter: drop-shadow(0 35px 60px rgba(0,0,0,0.5));
    }

    /* OTHER SECTIONS */
    .logo-bar { padding: 80px 48px; border-top: 1px solid var(--border); background: var(--bg-alt); }
    .logo-bar-inner { max-width: 1200px; margin: 0 auto; }
    .logo-bar-label { text-align: center; font-size: 12px; font-weight: 500; text-transform: uppercase; letter-spacing: 0.15em; color: var(--text-muted); margin-bottom: 48px; }
    .logo-bar-grid { display: flex; justify-content: center; align-items: center; gap: 48px 80px; flex-wrap: wrap; }
    .logo-item { opacity: 0.5; transition: opacity 0.2s ease; }
    .logo-item:hover { opacity: 0.8; }

    .how-section { padding: 140px 48px; border-top: 1px solid var(--border); }
    .section-header { text-align: center; margin-bottom: 80px; }
    .section-label { font-family: var(--mono); font-size: 12px; text-transform: uppercase; letter-spacing: 0.15em; color: var(--text-muted); margin-bottom: 16px; }
    .section-headline { font-size: 42px; font-weight: 350; line-height: 1.2; letter-spacing: -0.02em; }

    .how-flow { display: flex; justify-content: center; align-items: stretch; gap: 0; max-width: 1100px; margin: 0 auto; }
    .how-step { flex: 1; text-align: center; padding: 40px 32px; position: relative; border: 1px solid var(--border); margin-left: -1px; }
    .how-step:first-child { margin-left: 0; }
    .step-number { font-family: var(--mono); font-size: 11px; color: var(--text-muted); margin-bottom: 20px; letter-spacing: 0.1em; }
    .step-icon { width: 48px; height: 48px; margin: 0 auto 24px; position: relative; }
    .step-title { font-size: 16px; font-weight: 600; margin-bottom: 8px; letter-spacing: -0.01em; }
    .step-desc { font-size: 13px; color: var(--text-muted); line-height: 1.6; }
    .step-arrow { position: absolute; right: -12px; top: 50%; transform: translateY(-50%); z-index: 2; color: var(--text-muted); }
    .how-step:last-child .step-arrow { display: none; }

    .mock-sync { background: var(--bg-card); border: 1px solid var(--border); padding: 16px; margin-top: 24px; text-align: left; }
    .mock-sync-row { display: flex; align-items: center; gap: 12px; padding: 8px 0; border-bottom: 1px solid var(--border); font-size: 12px; }
    .mock-sync-row:last-child { border-bottom: none; }
    .mock-sync-label { color: var(--text-muted); width: 80px; }
    .mock-sync-value { font-family: var(--mono); font-size: 11px; color: var(--mint); }

    .mock-alert { background: var(--bg-card); border: 1px solid var(--border); padding: 16px; margin-top: 24px; text-align: left; }
    .mock-alert-header { display: flex; align-items: center; gap: 8px; margin-bottom: 8px; }
    .mock-alert-dot { width: 8px; height: 8px; border-radius: 50%; background: var(--coral); }
    .mock-alert-title { font-size: 12px; font-weight: 600; }
    .mock-alert-desc { font-size: 11px; color: var(--text-muted); }

    .mock-log { background: var(--bg-card); border: 1px solid var(--border); margin-top: 24px; text-align: left; }
    .mock-log-header { padding: 12px 16px; border-bottom: 1px solid var(--border); font-size: 11px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; color: var(--text-muted); }
    .mock-log-item { display: flex; align-items: center; justify-content: space-between; padding: 12px 16px; border-bottom: 1px solid var(--border); font-size: 13px; }
    .mock-log-item:last-child { border-bottom: none; }
    .mock-log-item .time { font-family: var(--mono); font-size: 11px; color: var(--text-muted); }

    .features-section { padding: 140px 48px; border-top: 1px solid var(--border); }
    .features-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1px; background: var(--border); max-width: 1200px; margin: 0 auto; }
    .feature-card { background: var(--bg); padding: 48px 36px; }
    .feature-card a { color: var(--mint); text-decoration: none; }
    .feature-card a:hover { text-decoration: underline; }
    [data-theme="light"] .feature-card a { color: var(--purple); }
    .feature-icon { width: 48px; height: 48px; margin-bottom: 28px; position: relative; }
    .feature-title { font-size: 18px; font-weight: 600; margin-bottom: 12px; letter-spacing: -0.01em; }
    .feature-desc { font-size: 14px; color: var(--text-muted); line-height: 1.65; }

    .faq-section { padding: 140px 48px; border-top: 1px solid var(--border); }
    .faq-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 1px; background: var(--border); max-width: 1000px; margin: 0 auto; }
    .faq-item { background: var(--bg); padding: 36px; }
    .faq-question { font-size: 16px; font-weight: 600; margin-bottom: 12px; letter-spacing: -0.01em; }
    .faq-answer { font-size: 14px; color: var(--text-muted); line-height: 1.7; }

    .cta-section { padding: 140px 48px; background: var(--bg-alt); text-align: center; border-top: 1px solid var(--border); }
    .cta-headline { font-size: 48px; font-weight: 350; line-height: 1.2; letter-spacing: -0.02em; margin-bottom: 20px; }
    .cta-sub { font-size: 18px; color: var(--text-muted); margin-bottom: 48px; }
    .cta-buttons { display: flex; gap: 16px; justify-content: center; }

    /* RESPONSIVE */
    @media (max-width: 1800px) { .hero-headline { font-size: 80px; } .card-showcase { right: 40px; width: 640px; } .card-item { width: 145px; height: 217px; } }
    @media (max-width: 1600px) { .hero-headline { font-size: 70px; } .card-showcase { right: 30px; width: 560px; } .card-item { width: 130px; height: 195px; } }
    @media (max-width: 1400px) { .hero-headline { font-size: 60px; } .card-showcase { right: 20px; width: 480px; } .card-item { width: 115px; height: 172px; } }
    @media (max-width: 1200px) { .hero-headline { font-size: 52px; } .card-showcase { width: 400px; } .card-item { width: 100px; height: 150px; } .how-flow { flex-direction: column; max-width: 500px; } .how-step { margin-left: 0; margin-top: -1px; } .how-step:first-child { margin-top: 0; } .step-arrow { display: none; } }
    @media (max-width: 1000px) { .card-showcase { display: none; } .grid-wrapper { display: none; } .hero-headline { font-size: 48px; } }
    @media (max-width: 900px) { .hero { flex-direction: column; padding: 140px 24px 48px; min-height: auto; } .hero-content { max-width: 100%; text-align: center; margin-bottom: 40px; } .hero-headline { font-size: 48px; } .hero-buttons { justify-content: center; } .logo-bar { padding: 60px 24px; } .logo-bar-grid { gap: 32px 48px; } .how-section, .features-section, .faq-section, .cta-section { padding: 80px 24px; } .features-grid, .faq-grid { grid-template-columns: 1fr; } }
    @media (max-width: 600px) { .hero-headline { font-size: 36px; } .hero-sub { font-size: 16px; } .hero-buttons { flex-direction: column; } .btn { width: 100%; justify-content: center; } .section-headline { font-size: 32px; } .cta-headline { font-size: 28px; } .cta-buttons { flex-direction: column; } }
  </style>
</head>

<body>
  <Nav />

  <section class="hero">
    <div class="hero-content">
      <h1 class="hero-headline">Your calls,<br><em>working for you</em></h1>
      <p class="hero-sub">AI agents that record, analyze, and act on every conversation. CRM updates, coaching, follow-ups—all automatic.</p>
      <div class="hero-buttons">
        <a href="#" class="btn btn-primary">Book a Demo <span class="btn-arrow"><svg width="16" height="16" viewBox="0 0 16 16" fill="none"><rect x="1" y="7" width="2" height="2" fill="currentColor"/><rect x="4" y="7" width="2" height="2" fill="currentColor"/><rect x="7" y="7" width="2" height="2" fill="currentColor"/><rect x="10" y="7" width="2" height="2" fill="currentColor"/><rect x="10" y="4" width="2" height="2" fill="currentColor"/><rect x="12" y="6" width="2" height="2" fill="currentColor"/><rect x="10" y="10" width="2" height="2" fill="currentColor"/><rect x="12" y="8" width="2" height="2" fill="currentColor"/></svg></span></a>
        <a href="#how-it-works" class="btn btn-secondary">See How It Works <span class="btn-arrow"><svg width="16" height="16" viewBox="0 0 16 16" fill="none"><rect x="1" y="7" width="2" height="2" fill="currentColor"/><rect x="4" y="7" width="2" height="2" fill="currentColor"/><rect x="7" y="7" width="2" height="2" fill="currentColor"/><rect x="10" y="7" width="2" height="2" fill="currentColor"/><rect x="10" y="4" width="2" height="2" fill="currentColor"/><rect x="12" y="6" width="2" height="2" fill="currentColor"/><rect x="10" y="10" width="2" height="2" fill="currentColor"/><rect x="12" y="8" width="2" height="2" fill="currentColor"/></svg></span></a>
      </div>
    </div>

    <div class="grid-wrapper">
      <div class="grid-bg"></div>
    </div>

    <div class="card-showcase">
      <div class="card-stack">
        <div class="card-item" data-index="0"><img src="/cards/card-01-call-trigger.svg" alt="Call Trigger" /></div>
        <div class="card-item" data-index="1"><img src="/cards/card-02-intel-agent.svg" alt="Intel Agent" /></div>
        <div class="card-item" data-index="2"><img src="/cards/card-03-crm-agent.svg" alt="CRM Agent" /></div>
        <div class="card-item" data-index="3"><img src="/cards/card-04-risk-agent.svg" alt="Risk Agent" /></div>
        <div class="card-item" data-index="4"><img src="/cards/card-05-email-agent.svg" alt="Email Agent" /></div>
        <div class="card-item" data-index="5"><img src="/cards/card-06-scorecard-agent.svg" alt="Scorecard Agent" /></div>
        <div class="card-item" data-index="6"><img src="/cards/card-07-multithread-agent.svg" alt="Multi-Thread Agent" /></div>
        <div class="card-item" data-index="7"><img src="/cards/card-08-quote-agent.svg" alt="Quote Agent" /></div>
        <div class="card-item" data-index="8"><img src="/cards/card-09-task-agent.svg" alt="Task Agent" /></div>
        <div class="card-item" data-index="9"><img src="/cards/card-10-prep-agent.svg" alt="Prep Agent" /></div>
      </div>
    </div>
  </section>

  <section class="logo-bar">
    <div class="logo-bar-inner">
      <p class="logo-bar-label">Integrates with your stack</p>
      <div class="logo-bar-grid">
        <div class="logo-item"><svg width="120" height="32" viewBox="0 0 120 32" fill="none"><text x="0" y="22" fill="currentColor" font-family="var(--font)" font-size="16" font-weight="600">HubSpot</text></svg></div>
        <div class="logo-item"><svg width="120" height="32" viewBox="0 0 120 32" fill="none"><text x="0" y="22" fill="currentColor" font-family="var(--font)" font-size="16" font-weight="600">Salesforce</text></svg></div>
        <div class="logo-item"><svg width="80" height="32" viewBox="0 0 80 32" fill="none"><text x="0" y="22" fill="currentColor" font-family="var(--font)" font-size="16" font-weight="600">Zoom</text></svg></div>
        <div class="logo-item"><svg width="80" height="32" viewBox="0 0 80 32" fill="none"><text x="0" y="22" fill="currentColor" font-family="var(--font)" font-size="16" font-weight="600">Slack</text></svg></div>
        <div class="logo-item"><svg width="100" height="32" viewBox="0 0 100 32" fill="none"><text x="0" y="22" fill="currentColor" font-family="var(--font)" font-size="16" font-weight="600">Google</text></svg></div>
      </div>
    </div>
  </section>

  <section class="how-section" id="how-it-works">
    <div class="section-header">
      <p class="section-label">How it works</p>
      <h2 class="section-headline">From call to closed, automatically</h2>
    </div>
    <div class="how-flow">
      <div class="how-step"><p class="step-number">01</p><div class="step-icon"><svg viewBox="0 0 48 48" fill="none"><rect x="8" y="8" width="32" height="32" rx="4" stroke="var(--mint)" stroke-width="2" fill="none"/><circle cx="24" cy="24" r="8" fill="var(--mint)"/></svg></div><h3 class="step-title">Record</h3><p class="step-desc">Join any call on Zoom, Meet, or Teams. We capture everything.</p><div class="step-arrow"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1"><path d="M5 12h14M12 5l7 7-7 7"/></svg></div></div>
      <div class="how-step"><p class="step-number">02</p><div class="step-icon"><svg viewBox="0 0 48 48" fill="none"><rect x="6" y="12" width="36" height="4" fill="var(--purple)"/><rect x="6" y="20" width="28" height="4" fill="var(--purple)" opacity="0.7"/><rect x="6" y="28" width="32" height="4" fill="var(--purple)" opacity="0.5"/><rect x="6" y="36" width="20" height="4" fill="var(--purple)" opacity="0.3"/></svg></div><h3 class="step-title">Transcribe</h3><p class="step-desc">AI transcription with speaker detection and key moment tagging.</p><div class="mock-sync"><div class="mock-sync-row"><span class="mock-sync-label">Deal Stage</span><span class="mock-sync-value">Demo → Proposal</span></div><div class="mock-sync-row"><span class="mock-sync-label">Next Step</span><span class="mock-sync-value">Send pricing</span></div></div><div class="step-arrow"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1"><path d="M5 12h14M12 5l7 7-7 7"/></svg></div></div>
      <div class="how-step"><p class="step-number">03</p><div class="step-icon"><svg viewBox="0 0 48 48" fill="none"><rect x="8" y="6" width="32" height="6" fill="var(--cyan)"/><rect x="8" y="14" width="32" height="6" fill="var(--cyan)" opacity="0.7"/><rect x="8" y="22" width="32" height="6" fill="var(--cyan)" opacity="0.5"/><rect x="32" y="34" width="12" height="8" fill="var(--mint)"/></svg></div><h3 class="step-title">Sync</h3><p class="step-desc">MEDDIC fields, deal stage, next steps—all pushed to your CRM.</p><div class="mock-alert"><div class="mock-alert-header"><span class="mock-alert-dot"></span><span class="mock-alert-title">Risk detected</span></div><p class="mock-alert-desc">Budget concern flagged in Acme call</p></div><div class="step-arrow"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1"><path d="M5 12h14M12 5l7 7-7 7"/></svg></div></div>
      <div class="how-step"><p class="step-number">04</p><div class="step-icon"><svg viewBox="0 0 48 48" fill="none"><rect x="4" y="22" width="8" height="4" fill="var(--yellow)"/><rect x="14" y="18" width="8" height="12" fill="var(--yellow)"/><rect x="24" y="12" width="8" height="24" fill="var(--yellow)"/><rect x="34" y="6" width="8" height="36" fill="var(--mint)"/></svg></div><h3 class="step-title">Coach</h3><p class="step-desc">AI coaching scorecards and real-time alerts to close more deals.</p><div class="mock-log"><div class="mock-log-header">Activity Log</div><div class="mock-log-item"><span>CRM synced</span><span class="time">2m ago</span></div><div class="mock-log-item"><span>Follow-up drafted</span><span class="time">2m ago</span></div></div></div>
    </div>
  </section>

  <section class="features-section" id="features">
    <div class="features-grid">
      <div class="feature-card"><div class="feature-icon"><svg viewBox="0 0 48 48" fill="none"><rect x="8" y="6" width="32" height="6" fill="var(--mint)"/><rect x="8" y="14" width="32" height="6" fill="var(--mint)" opacity="0.7"/><rect x="8" y="22" width="32" height="6" fill="var(--mint)" opacity="0.5"/><rect x="32" y="34" width="12" height="8" fill="var(--purple)"/></svg></div><h3 class="feature-title">CRM Auto-Sync</h3><p class="feature-desc">MEDDIC, BANT, and custom fields updated automatically after every call. No more manual data entry.</p></div>
      <div class="feature-card"><div class="feature-icon"><svg viewBox="0 0 48 48" fill="none"><rect x="6" y="34" width="6" height="8" fill="var(--purple)" opacity="0.4"/><rect x="14" y="28" width="6" height="14" fill="var(--purple)" opacity="0.55"/><rect x="22" y="20" width="6" height="22" fill="var(--purple)" opacity="0.7"/><rect x="30" y="14" width="6" height="28" fill="var(--purple)" opacity="0.85"/><rect x="38" y="6" width="6" height="36" fill="var(--purple)"/></svg></div><h3 class="feature-title">AI Coaching Scorecards</h3><p class="feature-desc">Every call scored against your sales methodology. Know exactly where to improve.</p></div>
      <div class="feature-card"><div class="feature-icon"><svg viewBox="0 0 48 48" fill="none"><rect x="20" y="4" width="8" height="4" fill="var(--coral)"/><rect x="16" y="8" width="16" height="4" fill="var(--coral)"/><rect x="12" y="12" width="24" height="16" fill="var(--coral)"/><rect x="8" y="28" width="32" height="4" fill="var(--coral)"/><rect x="20" y="32" width="8" height="4" fill="var(--coral)"/></svg></div><h3 class="feature-title">Real-Time Risk Alerts</h3><p class="feature-desc">Budget concerns, competitor mentions, ghosting signals—catch deal risks before they kill your quarter.</p></div>
