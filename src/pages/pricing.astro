  <script>
    // Pricing configuration
    const pricing = {
      starter: { monthly: 29, annual: 24 },
      advanced: { monthly: 79, annual: 65 }
    };

    let isAnnual = false;
    let userCount = 5;
    let selectedPlan = 'starter';

    // DOM elements
    const billingToggle = document.getElementById('billingToggle');
    const monthlyOption = document.querySelector('.billing-option.monthly');
    const annualOption = document.querySelector('.billing-option.annual');
    const decreaseBtn = document.getElementById('decreaseUsers');
    const increaseBtn = document.getElementById('increaseUsers');
    const userCountEl = document.getElementById('userCount');
    const totalPriceEl = document.getElementById('totalPrice');
    const starterPriceEl = document.getElementById('starterPrice');
    const advancedPriceEl = document.getElementById('advancedPrice');
    const starterOriginalEl = document.getElementById('starterOriginal');
    const advancedOriginalEl = document.getElementById('advancedOriginal');

    function updatePrices() {
      const starterPrice = isAnnual ? pricing.starter.annual : pricing.starter.monthly;
      const advancedPrice = isAnnual ? pricing.advanced.annual : pricing.advanced.monthly;

      starterPriceEl.textContent = starterPrice;
      advancedPriceEl.textContent = advancedPrice;

      // Show original price when annual
      if (isAnnual) {
        starterOriginalEl.textContent = `$${pricing.starter.monthly}`;
        starterOriginalEl.style.visibility = 'visible';
        advancedOriginalEl.textContent = `$${pricing.advanced.monthly}`;
        advancedOriginalEl.style.visibility = 'visible';
      } else {
        starterOriginalEl.style.visibility = 'hidden';
        advancedOriginalEl.style.visibility = 'hidden';
      }

      updateTotal();
    }

    function updateTotal() {
      // Calculate based on user count - use Advanced if > 5 users
      let price;
      if (userCount <= 5) {
        price = isAnnual ? pricing.starter.annual : pricing.starter.monthly;
        selectedPlan = 'starter';
      } else {
        price = isAnnual ? pricing.advanced.annual : pricing.advanced.monthly;
        selectedPlan = 'advanced';
      }

      const total = price * userCount;
      totalPriceEl.textContent = `$${total.toLocaleString()}`;
    }

    function updateUserCount() {
      userCountEl.textContent = userCount;
      decreaseBtn.disabled = userCount <= 1;
      updateTotal();
    }

    // Event listeners
    billingToggle.addEventListener('click', () => {
      isAnnual = !isAnnual;
      billingToggle.classList.toggle('annual', isAnnual);
      monthlyOption.classList.toggle('active', !isAnnual);
      annualOption.classList.toggle('active', isAnnual);
      updatePrices();
    });

    monthlyOption.addEventListener('click', () => {
      if (isAnnual) {
        isAnnual = false;
        billingToggle.classList.remove('annual');
        monthlyOption.classList.add('active');
        annualOption.classList.remove('active');
        updatePrices();
      }
    });

    annualOption.addEventListener('click', () => {
      if (!isAnnual) {
        isAnnual = true;
        billingToggle.classList.add('annual');
        monthlyOption.classList.remove('active');
        annualOption.classList.add('active');
        updatePrices();
      }
    });

    decreaseBtn.addEventListener('click', () => {
      if (userCount > 1) {
        userCount--;
        updateUserCount();
      }
    });

    increaseBtn.addEventListener('click', () => {
      userCount++;
      updateUserCount();
    });

    // Initialize
    updatePrices();
    updateUserCount();
  </script>
