---
// Mini 1x1 agent cards - start hidden, slide in from edges
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import BaseHead from '../components/BaseHead.astro';
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <BaseHead title="recrd - AI agents that close deals" description="Revenue intelligence for sales teams." />
  
  <style is:global>
    :root { 
      --cell: 120px;
      --grid-line: rgba(255,255,255,0.08);
      --mint: #46FCAF;
      --purple: #A678F4;
      --cyan: #5CEBDF;
      --coral: #FF6B7A;
      --yellow: #FFD84D;
      --bg: #0A0A0A;
      --text: #FFFFFF;
      --text-muted: rgba(255,255,255,0.6);
    }

    * { box-sizing: border-box; }

    .hero {
      min-height: 100vh;
      display: flex;
      align-items: center;
      padding: 72px 48px 0;
      position: relative;
      overflow: hidden;
      background: var(--bg);
    }

    .hero-grid {
      position: absolute;
      top: 0;
      right: 0;
      width: calc(var(--cell) * 8);
      height: 100%;
      background-image: 
        linear-gradient(to right, var(--grid-line) 1px, transparent 1px),
        linear-gradient(to bottom, var(--grid-line) 1px, transparent 1px);
      background-size: var(--cell) var(--cell);
      z-index: 1;
    }

    .hero-grid::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: calc(var(--cell) * 2);
      height: 100%;
      background: linear-gradient(to right, var(--bg), transparent);
      z-index: 2;
    }

    .hero-content {
      max-width: 480px;
      z-index: 100;
      padding: 48px 0;
    }

    .hero-headline {
      font-size: 72px;
      font-weight: 350;
      line-height: 1.0;
      letter-spacing: -0.03em;
      margin-bottom: 28px;
    }

    .hero-headline em { 
      font-style: normal; 
      color: var(--mint);
      font-weight: 400;
    }

    .hero-sub {
      font-size: 18px;
      font-weight: 400;
      line-height: 1.6;
      margin-bottom: 40px;
      color: var(--text-muted);
    }

    .hero-buttons { display: flex; gap: 16px; }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      padding: 16px 28px;
      font-weight: 500;
      font-size: 15px;
      text-decoration: none;
      transition: all 0.2s ease;
      cursor: pointer;
      border: none;
    }
    
    .btn-primary { background: var(--text); color: var(--bg); }
    .btn-primary:hover { background: var(--mint); color: #0a0a0a; transform: translateY(-2px); }
    
    .btn-secondary { background: transparent; color: var(--text); border: 1px solid rgba(255,255,255,0.2); }
    .btn-secondary:hover { background: var(--text); color: var(--bg); }

    .cards-container {
      position: absolute;
      top: 0;
      right: 0;
      width: calc(var(--cell) * 8);
      height: 100%;
      z-index: 10;
      pointer-events: none;
    }

    /* Mini card - exactly 1x1 cell */
    .mini-card {
      position: absolute;
      width: var(--cell);
      height: var(--cell);
      pointer-events: auto;
      /* Start completely off-screen/invisible */
      opacity: 0;
      visibility: hidden;
    }

    .mini-card-inner {
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 12px;
      text-align: center;
      box-shadow: 0 10px 40px rgba(0,0,0,0.4);
    }

    /* Slide animations - start off screen */
    .mini-card.from-left {
      transform: translateX(-100%);
    }
    .mini-card.from-right {
      transform: translateX(100%);
    }
    .mini-card.from-top {
      transform: translateY(-100%);
    }
    .mini-card.from-bottom {
      transform: translateY(100%);
    }

    /* Visible state - slide in */
    .mini-card.visible {
      opacity: 1;
      visibility: visible;
      transform: translateX(0) translateY(0);
      transition: opacity 0.4s ease, transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    }

    /* Exiting state */
    .mini-card.exiting.from-left {
      opacity: 0;
      transform: translateX(-100%);
      transition: opacity 0.3s ease, transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }
    .mini-card.exiting.from-right {
      opacity: 0;
      transform: translateX(100%);
      transition: opacity 0.3s ease, transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }
    .mini-card.exiting.from-top {
      opacity: 0;
      transform: translateY(-100%);
      transition: opacity 0.3s ease, transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }
    .mini-card.exiting.from-bottom {
      opacity: 0;
      transform: translateY(100%);
      transition: opacity 0.3s ease, transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Colors */
    .mini-card-inner.mint { background: var(--mint); color: #0a0a0a; }
    .mini-card-inner.purple { background: var(--purple); color: #fff; }
    .mini-card-inner.cyan { background: var(--cyan); color: #0a0a0a; }
    .mini-card-inner.coral { background: var(--coral); color: #fff; }
    .mini-card-inner.yellow { background: var(--yellow); color: #0a0a0a; }

    .agent-icon {
      width: 26px;
      height: 26px;
      margin-bottom: 6px;
      opacity: 0.9;
    }

    .agent-icon svg {
      width: 100%;
      height: 100%;
      stroke: currentColor;
      stroke-width: 1.5;
      fill: none;
    }

    .agent-name {
      font-size: 10px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      line-height: 1.2;
    }

    /* RESPONSIVE */
    @media (max-width: 1800px) {
      :root { --cell: 100px; }
      .hero-headline { font-size: 64px; }
      .agent-name { font-size: 9px; }
    }

    @media (max-width: 1600px) {
      :root { --cell: 90px; }
      .hero-headline { font-size: 56px; }
    }

    @media (max-width: 1400px) {
      :root { --cell: 80px; }
      .hero-headline { font-size: 48px; }
      .hero-content { max-width: 380px; }
      .agent-icon { width: 22px; height: 22px; }
      .agent-name { font-size: 8px; }
    }

    @media (max-width: 1200px) {
      :root { --cell: 70px; }
      .hero-headline { font-size: 42px; }
    }

    @media (max-width: 1000px) {
      .cards-container, .hero-grid { display: none; }
      .hero { justify-content: center; padding: 120px 24px; }
      .hero-content { max-width: 100%; text-align: center; }
      .hero-buttons { justify-content: center; }
    }

    @media (max-width: 600px) {
      .hero-headline { font-size: 36px; }
      .hero-sub { font-size: 16px; }
      .hero-buttons { flex-direction: column; }
      .btn { width: 100%; justify-content: center; }
    }
  </style>
</head>

<body>
  <Nav />

  <section class="hero">
    <div class="hero-grid"></div>

    <div class="hero-content">
      <h1 class="hero-headline">Your calls,<br><em>working for you</em></h1>
      <p class="hero-sub">Every sales call triggers AI agents that update your CRM, alert your team, and draft follow-upsâ€”automatically.</p>
      <div class="hero-buttons">
        <a href="#" class="btn btn-primary">Book a Demo</a>
        <a href="#how-it-works" class="btn btn-secondary">See How It Works</a>
      </div>
    </div>

    <div class="cards-container" id="cards-container"></div>
  </section>

  <Footer />

  <script>
    const agents = [
      { name: 'Call Trigger', color: 'mint', icon: 'phone' },
      { name: 'Intel', color: 'purple', icon: 'search' },
      { name: 'CRM Sync', color: 'cyan', icon: 'database' },
      { name: 'Risk Alert', color: 'coral', icon: 'alert' },
      { name: 'Email', color: 'yellow', icon: 'mail' },
      { name: 'Coaching', color: 'purple', icon: 'star' },
      { name: 'Multithread', color: 'mint', icon: 'users' },
      { name: 'Quote', color: 'cyan', icon: 'quote' },
      { name: 'Tasks', color: 'coral', icon: 'check' },
      { name: 'Prep', color: 'yellow', icon: 'clipboard' },
    ];

    const icons = {
      phone: '<path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72c.127.96.361 1.903.7 2.81a2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0 1 22 16.92z"/>',
      search: '<circle cx="11" cy="11" r="8"/><path d="m21 21-4.35-4.35"/>',
      database: '<ellipse cx="12" cy="5" rx="9" ry="3"/><path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"/><path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"/>',
      alert: '<path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/><line x1="12" y1="9" x2="12" y2="13"/><line x1="12" y1="17" x2="12.01" y2="17"/>',
      mail: '<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/>',
      star: '<polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>',
      users: '<path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/>',
      quote: '<path d="M3 21c3 0 7-1 7-8V5c0-1.25-.756-2.017-2-2H4c-1.25 0-2 .75-2 1.972V11c0 1.25.75 2 2 2 1 0 1 0 1 1v1c0 1-1 2-2 2s-1 .008-1 1.031V21z"/><path d="M15 21c3 0 7-1 7-8V5c0-1.25-.757-2.017-2-2h-4c-1.25 0-2 .75-2 1.972V11c0 1.25.75 2 2 2h.75c0 2.25.25 4-2.75 4v3z"/>',
      check: '<polyline points="20 6 9 17 4 12"/>',
      clipboard: '<path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"/><rect x="8" y="2" width="8" height="4" rx="1" ry="1"/>',
    };

    // Grid positions [row, col] and slide direction
    // Row starts at 1 to avoid banner, grid is 8 wide
    const positions = [
      { row: 1, col: 0, dir: 'from-left' },
      { row: 1, col: 3, dir: 'from-top' },
      { row: 1, col: 7, dir: 'from-right' },
      { row: 2, col: 1, dir: 'from-left' },
      { row: 2, col: 5, dir: 'from-top' },
      { row: 3, col: 0, dir: 'from-left' },
      { row: 3, col: 3, dir: 'from-bottom' },
      { row: 3, col: 6, dir: 'from-right' },
      { row: 4, col: 2, dir: 'from-left' },
      { row: 4, col: 5, dir: 'from-bottom' },
      { row: 4, col: 7, dir: 'from-right' },
      { row: 5, col: 0, dir: 'from-left' },
      { row: 5, col: 4, dir: 'from-bottom' },
      { row: 5, col: 7, dir: 'from-right' },
    ];

    let cardElements = [];
    let activeCards = [];

    function getCell() {
      return parseFloat(getComputedStyle(document.documentElement).getPropertyValue('--cell')) || 120;
    }

    function createCard(agent, pos) {
      const cell = getCell();
      const card = document.createElement('div');
      card.className = `mini-card ${pos.dir}`;
      card.style.left = `${pos.col * cell}px`;
      card.style.top = `${pos.row * cell}px`;
      card.dataset.dir = pos.dir;
      
      card.innerHTML = `
        <div class="mini-card-inner ${agent.color}">
          <div class="agent-icon">
            <svg viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
              ${icons[agent.icon]}
            </svg>
          </div>
          <div class="agent-name">${agent.name}</div>
        </div>
      `;
      
      return card;
    }

    function showCard(card) {
      // Force reflow before adding visible class
      card.offsetHeight;
      card.classList.add('visible');
      card.classList.remove('exiting');
    }

    function hideCard(card) {
      return new Promise(resolve => {
        card.classList.add('exiting');
        card.classList.remove('visible');
        setTimeout(resolve, 400);
      });
    }

    function shuffle(arr) {
      const a = [...arr];
      for (let i = a.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [a[i], a[j]] = [a[j], a[i]];
      }
      return a;
    }

    async function cycleCards() {
      // Hide 2-3 random active cards
      const toHide = shuffle(activeCards).slice(0, Math.min(3, activeCards.length));
      
      for (const card of toHide) {
        await hideCard(card);
      }
      
      activeCards = activeCards.filter(c => !toHide.includes(c));
      
      // Pause
      await new Promise(r => setTimeout(r, 300));
      
      // Show 2-3 inactive cards
      const inactive = cardElements.filter(c => !activeCards.includes(c));
      const toShow = shuffle(inactive).slice(0, Math.min(3, inactive.length));
      
      toShow.forEach((card, i) => {
        setTimeout(() => {
          showCard(card);
          activeCards.push(card);
        }, i * 150);
      });
    }

    document.addEventListener('DOMContentLoaded', () => {
      const container = document.getElementById('cards-container');
      
      // Create all cards
      agents.forEach((agent, i) => {
        const pos = positions[i % positions.length];
        const card = createCard(agent, pos);
        container.appendChild(card);
        cardElements.push(card);
      });

      // Initial show - stagger 5 random cards
      const initial = shuffle(cardElements).slice(0, 5);
      initial.forEach((card, i) => {
        setTimeout(() => {
          showCard(card);
          activeCards.push(card);
        }, 400 + i * 200);
      });

      // Start cycling
      setTimeout(() => {
        setInterval(cycleCards, 4000);
      }, 4500);
    });
  </script>
</body>
</html>
