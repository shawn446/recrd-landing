    <div class="grid-wrapper">
      <!-- SVG Grid: 9 cols × 8 rows at 120px each = 1080×960
           Hourglass pattern stepping in from left:
           Row 0: 9 cols (full)
           Row 1: 8 cols (start at col 1)
           Row 2: 7 cols (start at col 2)
           Row 3: 6 cols (start at col 3)
           Row 4: 6 cols (start at col 3)
           Row 5: 7 cols (start at col 2)
           Row 6: 8 cols (start at col 1)
           Row 7: 9 cols (full)
      -->
      <svg class="grid-svg" viewBox="0 0 1080 960" preserveAspectRatio="xMidYMid meet">
        <!-- All horizontal lines -->
        <line x1="0" y1="0" x2="1080" y2="0"/>
        <line x1="120" y1="120" x2="1080" y2="120"/>
        <line x1="240" y1="240" x2="1080" y2="240"/>
        <line x1="360" y1="360" x2="1080" y2="360"/>
        <line x1="360" y1="480" x2="1080" y2="480"/>
        <line x1="240" y1="600" x2="1080" y2="600"/>
        <line x1="120" y1="720" x2="1080" y2="720"/>
        <line x1="0" y1="840" x2="1080" y2="840"/>
        <line x1="0" y1="960" x2="1080" y2="960"/>

        <!-- All vertical lines (right side always full) -->
        <line x1="1080" y1="0" x2="1080" y2="960"/>
        <line x1="960" y1="0" x2="960" y2="960"/>
        <line x1="840" y1="0" x2="840" y2="960"/>
        <line x1="720" y1="0" x2="720" y2="960"/>
        <line x1="600" y1="0" x2="600" y2="960"/>
        <line x1="480" y1="0" x2="480" y2="960"/>
        <line x1="360" y1="0" x2="360" y2="360"/>
        <line x1="360" y1="480" x2="360" y2="960"/>
        <line x1="240" y1="0" x2="240" y2="240"/>
        <line x1="240" y1="600" x2="240" y2="960"/>
        <line x1="120" y1="0" x2="120" y2="120"/>
        <line x1="120" y1="720" x2="120" y2="960"/>
        <line x1="0" y1="0" x2="0" y2="0"/>
        <line x1="0" y1="840" x2="0" y2="960"/>

        <!-- Left edge step connectors -->
        <line x1="0" y1="120" x2="120" y2="120"/>
        <line x1="120" y1="240" x2="240" y2="240"/>
        <line x1="240" y1="360" x2="360" y2="360"/>
        <line x1="240" y1="600" x2="360" y2="600"/>
        <line x1="120" y1="720" x2="240" y2="720"/>
        <line x1="0" y1="840" x2="120" y2="840"/>
      </svg>

