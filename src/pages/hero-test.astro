---
// Hero Test - Origami Unfold Cards
import BaseHead from '../components/BaseHead.astro';
import Nav from '../components/Nav.astro';
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <BaseHead title="Hero Test - Origami Unfold" description="Testing origami card unfold animation" />
  
  <style>
    :root { 
      --cell: 90px; 
      --grid-cols: 8;
      --grid-rows: 7;
      --grid-line: rgba(255,255,255,0.12); 
    }

    .hero {
      min-height: 100vh;
      display: flex;
      align-items: center;
      padding: 72px 0 0 48px;
      position: relative;
      overflow: hidden;
    }

    .hero-content {
      max-width: 500px;
      z-index: 10;
      padding: 48px 0;
    }

    .hero-headline {
      font-size: 72px;
      font-weight: 350;
      line-height: 1.0;
      letter-spacing: -0.03em;
      margin-bottom: 28px;
    }
    .hero-headline em { 
      font-style: normal; 
      color: var(--mint);
      font-weight: 400;
    }

    .hero-sub {
      font-size: 20px;
      font-weight: 400;
      line-height: 1.5;
      margin-bottom: 40px;
      color: var(--text-muted);
    }

    .hero-buttons { display: flex; gap: 16px; }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      padding: 18px 28px;
      font-weight: 500;
      font-size: 15px;
      text-decoration: none;
      transition: all 0.2s ease;
      cursor: pointer;
    }
    
    .btn-primary { background: var(--text); color: var(--bg); }
    .btn-primary:hover { background: var(--mint); color: #0a0a0a; transform: translateY(-2px); }

    /* GRID WRAPPER - larger grid */
    .grid-wrapper {
      position: absolute;
      top: 50%;
      right: 40px;
      transform: translateY(-50%);
      width: calc(var(--cell) * var(--grid-cols));
      height: calc(var(--cell) * var(--grid-rows));
      z-index: 5;
    }

    .grid-svg {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }

    .grid-svg line {
      stroke: var(--grid-line);
      stroke-width: 1;
    }

    /* ORIGAMI CARD */
    .origami-card {
      position: absolute;
      display: grid;
      grid-template-columns: repeat(2, var(--cell));
      grid-template-rows: repeat(3, var(--cell));
      z-index: 10;
    }

    /* Card positions - spaced apart */
    .origami-card.card-1 {
      top: 0;
      left: 0;
    }

    .origami-card.card-2 {
      top: calc(var(--cell) * 1);
      left: calc(var(--cell) * 4);
    }

    /* Each cell/panel of the card */
    .card-panel {
      width: var(--cell);
      height: var(--cell);
      position: relative;
      transform-style: preserve-3d;
      perspective: 800px;
    }

    .panel-inner {
      position: absolute;
      width: 100%;
      height: 100%;
      transform-origin: left center;
      backface-visibility: hidden;
      opacity: 0;
      transform: rotateY(-90deg);
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Alternate panels fold from different sides */
    .card-panel.from-top .panel-inner {
      transform-origin: top center;
      transform: rotateX(90deg);
    }

    .card-panel.from-left .panel-inner {
      transform-origin: left center;
      transform: rotateY(-90deg);
    }

    /* Revealed state */
    .card-panel.revealed .panel-inner {
      opacity: 1;
      transform: rotateY(0deg) rotateX(0deg);
    }

    /* Card colors */
    .card-panel .panel-inner.mint { background: var(--mint); }
    .card-panel .panel-inner.purple { background: var(--purple); }
    .card-panel .panel-inner.cyan { background: var(--cyan); }
    .card-panel .panel-inner.coral { background: var(--coral); }
    .card-panel .panel-inner.yellow { background: var(--yellow); }

    /* Content inside panels */
    .panel-content {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      padding: 12px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      color: #0a0a0a;
      font-size: 11px;
      overflow: hidden;
    }

    .panel-inner.purple .panel-content,
    .panel-inner.coral .panel-content {
      color: #fff;
    }

    .panel-icon {
      width: 24px;
      height: 24px;
      margin-bottom: 8px;
    }

    .panel-icon svg {
      width: 100%;
      height: 100%;
      stroke-width: 2;
      stroke-linecap: round;
      stroke-linejoin: round;
      fill: none;
      stroke: currentColor;
    }

    .panel-badge {
      font-family: var(--mono);
      font-size: 8px;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      padding: 4px 8px;
      background: rgba(0,0,0,0.1);
      display: inline-block;
      margin-bottom: 6px;
      width: fit-content;
    }

    .panel-inner.purple .panel-badge,
    .panel-inner.coral .panel-badge {
      background: rgba(255,255,255,0.2);
    }

    .panel-title {
      font-size: 14px;
      font-weight: 600;
      line-height: 1.2;
    }

    .panel-text {
      font-size: 10px;
      opacity: 0.8;
      line-height: 1.4;
      margin-top: 4px;
    }

    .panel-stat {
      display: flex;
      justify-content: space-between;
      font-family: var(--mono);
      font-size: 10px;
      padding: 6px 0;
      border-top: 1px solid rgba(0,0,0,0.1);
    }

    .panel-inner.purple .panel-stat,
    .panel-inner.coral .panel-stat {
      border-color: rgba(255,255,255,0.2);
    }

    .meddic-mini {
      display: flex;
      gap: 3px;
      margin-top: 6px;
    }

    .meddic-mini span {
      flex: 1;
      text-align: center;
      padding: 4px 2px;
      background: rgba(0,0,0,0.15);
      font-family: var(--mono);
      font-size: 8px;
      font-weight: 600;
    }

    .meddic-mini span.filled {
      background: rgba(0,0,0,0.3);
    }

    /* RESPONSIVE */
    @media (max-width: 1400px) {
      :root { --cell: 80px; }
      .hero-headline { font-size: 60px; }
    }

    @media (max-width: 1100px) {
      :root { --cell: 70px; }
      .hero-headline { font-size: 52px; }
    }

    @media (max-width: 900px) {
      .hero {
        flex-direction: column;
        padding: 100px 24px 48px;
        min-height: auto;
      }
      .hero-content { max-width: 100%; text-align: center; margin-bottom: 40px; }
      .hero-headline { font-size: 44px; }
      .hero-buttons { justify-content: center; }
      .grid-wrapper {
        position: relative;
        top: auto;
        right: auto;
        transform: none;
        margin: 0 auto;
      }
      :root { --cell: 60px; }
    }
  </style>
</head>

<body>
  <Nav />

  <section class="hero">
    <div class="hero-content">
      <h1 class="hero-headline">Your calls,<br><em>working for you</em></h1>
      <p class="hero-sub">Every sales call triggers six AI agents that update your CRM, alert your team, and draft follow-ups—automatically.</p>
      <div class="hero-buttons">
        <a href="#" class="btn btn-primary">Book a Demo</a>
      </div>
    </div>

    <div class="grid-wrapper">
      <!-- Grid: 8x7 -->
      <svg class="grid-svg" viewBox="0 0 720 630" preserveAspectRatio="xMidYMid meet">
        <!-- Horizontal lines -->
        <line x1="0" y1="0" x2="720" y2="0"/>
        <line x1="0" y1="90" x2="720" y2="90"/>
        <line x1="0" y1="180" x2="720" y2="180"/>
        <line x1="0" y1="270" x2="720" y2="270"/>
        <line x1="0" y1="360" x2="720" y2="360"/>
        <line x1="0" y1="450" x2="720" y2="450"/>
        <line x1="0" y1="540" x2="720" y2="540"/>
        <line x1="0" y1="630" x2="720" y2="630"/>
        <!-- Vertical lines -->
        <line x1="0" y1="0" x2="0" y2="630"/>
        <line x1="90" y1="0" x2="90" y2="630"/>
        <line x1="180" y1="0" x2="180" y2="630"/>
        <line x1="270" y1="0" x2="270" y2="630"/>
        <line x1="360" y1="0" x2="360" y2="630"/>
        <line x1="450" y1="0" x2="450" y2="630"/>
        <line x1="540" y1="0" x2="540" y2="630"/>
        <line x1="630" y1="0" x2="630" y2="630"/>
        <line x1="720" y1="0" x2="720" y2="630"/>
      </svg>

      <!-- Card 1: Call Completed (mint) - 2x3 grid of panels -->
      <div class="origami-card card-1" id="card1">
        <!-- Row 1 -->
        <div class="card-panel from-left" data-delay="0">
          <div class="panel-inner mint">
            <div class="panel-content">
              <div class="panel-icon"><svg viewBox="0 0 24 24"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72"/></svg></div>
              <span class="panel-badge">Trigger</span>
            </div>
          </div>
        </div>
        <div class="card-panel from-left" data-delay="1">
          <div class="panel-inner mint">
            <div class="panel-content">
              <span class="panel-title">Call completed</span>
            </div>
          </div>
        </div>
        <!-- Row 2 -->
        <div class="card-panel from-top" data-delay="2">
          <div class="panel-inner mint">
            <div class="panel-content">
              <span class="panel-text">Sarah Chen</span>
              <span class="panel-text" style="opacity:0.6">VP Sales, Acme</span>
            </div>
          </div>
        </div>
        <div class="card-panel from-left" data-delay="3">
          <div class="panel-inner mint">
            <div class="panel-content">
              <span class="panel-text">Discovery call</span>
              <span class="panel-text" style="opacity:0.6">32 minutes</span>
            </div>
          </div>
        </div>
        <!-- Row 3 -->
        <div class="card-panel from-top" data-delay="4">
          <div class="panel-inner mint">
            <div class="panel-content">
              <div class="panel-stat"><span>Talk</span><span>35%</span></div>
            </div>
          </div>
        </div>
        <div class="card-panel from-left" data-delay="5">
          <div class="panel-inner mint">
            <div class="panel-content">
              <div class="panel-stat"><span>Listen</span><span>65%</span></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Card 2: CRM Updated (cyan) - 2x3 grid of panels -->
      <div class="origami-card card-2" id="card2">
        <!-- Row 1 -->
        <div class="card-panel from-left" data-delay="0">
          <div class="panel-inner cyan">
            <div class="panel-content">
              <div class="panel-icon"><svg viewBox="0 0 24 24"><line x1="18" y1="20" x2="18" y2="10"/><line x1="12" y1="20" x2="12" y2="4"/><line x1="6" y1="20" x2="6" y2="14"/></svg></div>
              <span class="panel-badge">CRM Agent</span>
            </div>
          </div>
        </div>
        <div class="card-panel from-left" data-delay="1">
          <div class="panel-inner cyan">
            <div class="panel-content">
              <span class="panel-title">Pipeline updated</span>
            </div>
          </div>
        </div>
        <!-- Row 2 -->
        <div class="card-panel from-top" data-delay="2">
          <div class="panel-inner cyan">
            <div class="panel-content">
              <span class="panel-text">Stage moved</span>
              <span class="panel-text" style="font-weight:600">→ Negotiation</span>
            </div>
          </div>
        </div>
        <div class="card-panel from-left" data-delay="3">
          <div class="panel-inner cyan">
            <div class="panel-content">
              <span class="panel-text">12 fields</span>
              <span class="panel-text" style="opacity:0.6">synced</span>
            </div>
          </div>
        </div>
        <!-- Row 3 -->
        <div class="card-panel from-top" data-delay="4">
          <div class="panel-inner cyan">
            <div class="panel-content">
              <div class="meddic-mini">
                <span class="filled">M</span>
                <span class="filled">E</span>
                <span class="filled">D</span>
              </div>
            </div>
          </div>
        </div>
        <div class="card-panel from-left" data-delay="5">
          <div class="panel-inner cyan">
            <div class="panel-content">
              <div class="meddic-mini">
                <span class="filled">D</span>
                <span>I</span>
                <span class="filled">C</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    import { gsap } from 'gsap';

    const UNFOLD_DELAY = 150; // ms between each panel
    const CARD_DISPLAY_TIME = 4000; // how long card stays fully visible
    const CARD_STAGGER = 800; // delay between card 1 and card 2 starting

    function unfoldCard(card: Element) {
      const panels = card.querySelectorAll('.card-panel');
      
      panels.forEach((panel, index) => {
        setTimeout(() => {
          panel.classList.add('revealed');
        }, index * UNFOLD_DELAY);
      });
    }

    function foldCard(card: Element) {
      const panels = Array.from(card.querySelectorAll('.card-panel'));
      
      // Fold in reverse order
      panels.reverse().forEach((panel, index) => {
        setTimeout(() => {
          panel.classList.remove('revealed');
        }, index * UNFOLD_DELAY);
      });
    }

    function animateCards() {
      const card1 = document.getElementById('card1');
      const card2 = document.getElementById('card2');
      
      if (!card1 || !card2) return;

      // Initial unfold
      unfoldCard(card1);
      
      setTimeout(() => {
        unfoldCard(card2);
      }, CARD_STAGGER);

      // Start the cycle
      const cycleDuration = CARD_DISPLAY_TIME + (6 * UNFOLD_DELAY * 2) + 500;
      
      setInterval(() => {
        // Fold both cards
        foldCard(card1);
        setTimeout(() => foldCard(card2), 200);

        // After fold completes, unfold again (simulating new content)
        setTimeout(() => {
          unfoldCard(card1);
          setTimeout(() => unfoldCard(card2), CARD_STAGGER);
        }, (6 * UNFOLD_DELAY) + 500);
        
      }, cycleDuration);
    }

    document.addEventListener('DOMContentLoaded', () => {
      setTimeout(animateCards, 500);
    });
  </script>
</body>
</html>
