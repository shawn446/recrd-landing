---
// Hero - Cards exactly 2x3 cells, snapped to grid lines
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import BaseHead from '../components/BaseHead.astro';
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <BaseHead title="recrd - AI agents that close deals" description="Revenue intelligence for sales teams." />
  
  <style is:global>
    :root { 
      --cell: 120px;
      --card-w: calc(var(--cell) * 2);  /* 240px */
      --card-h: calc(var(--cell) * 3);  /* 360px */
      --grid-line: rgba(255,255,255,0.08);
      --mint: #46FCAF;
      --purple: #A678F4;
      --cyan: #5CEBDF;
      --coral: #FF6B7A;
      --yellow: #FFD84D;
      --bg: #0A0A0A;
      --text: #FFFFFF;
      --text-muted: rgba(255,255,255,0.6);
    }

    * { box-sizing: border-box; }

    .hero {
      min-height: 100vh;
      display: flex;
      align-items: center;
      padding: 72px 48px 0;
      position: relative;
      overflow: hidden;
      background: var(--bg);
    }

    /* Grid - right side, 8 columns wide, starts from right edge */
    .hero-grid {
      position: absolute;
      top: 0;
      right: 0;
      width: calc(var(--cell) * 8);
      height: 100%;
      background-image: 
        linear-gradient(to right, var(--grid-line) 1px, transparent 1px),
        linear-gradient(to bottom, var(--grid-line) 1px, transparent 1px);
      background-size: var(--cell) var(--cell);
      background-position: 0 0;
      z-index: 1;
    }

    /* Fade on left edge */
    .hero-grid::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: calc(var(--cell) * 2);
      height: 100%;
      background: linear-gradient(to right, var(--bg), transparent);
      z-index: 2;
    }

    .hero-content {
      max-width: 500px;
      z-index: 100;
      padding: 48px 0;
    }

    .hero-headline {
      font-size: 72px;
      font-weight: 350;
      line-height: 1.0;
      letter-spacing: -0.03em;
      margin-bottom: 28px;
    }

    .hero-headline em { 
      font-style: normal; 
      color: var(--mint);
      font-weight: 400;
    }

    .hero-sub {
      font-size: 18px;
      font-weight: 400;
      line-height: 1.6;
      margin-bottom: 40px;
      color: var(--text-muted);
    }

    .hero-buttons { display: flex; gap: 16px; }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      padding: 16px 28px;
      font-weight: 500;
      font-size: 15px;
      text-decoration: none;
      transition: all 0.2s ease;
      cursor: pointer;
      border: none;
    }
    
    .btn-primary { background: var(--text); color: var(--bg); }
    .btn-primary:hover { background: var(--mint); color: #0a0a0a; transform: translateY(-2px); }
    
    .btn-secondary { background: transparent; color: var(--text); border: 1px solid rgba(255,255,255,0.2); }
    .btn-secondary:hover { background: var(--text); color: var(--bg); }

    /* Cards container - same size/position as grid */
    .cards-container {
      position: absolute;
      top: 0;
      right: 0;
      width: calc(var(--cell) * 8);
      height: 100%;
      z-index: 10;
      pointer-events: none;
    }

    /* Individual card - exactly 2x3 cells */
    .card-slot {
      position: absolute;
      width: var(--card-w);
      height: var(--card-h);
      pointer-events: auto;
      perspective: 1500px;
    }

    /* Card positions - col/row from top-left of grid */
    /* Grid is 8 cols wide, we need cards to not overflow */
    /* Card takes 2 cols, so max col = 6 (0-indexed) */
    .card-slot[data-pos="0"] { left: calc(var(--cell) * 0); top: calc(var(--cell) * 0); }
    .card-slot[data-pos="1"] { left: calc(var(--cell) * 4); top: calc(var(--cell) * 0); }
    .card-slot[data-pos="2"] { left: calc(var(--cell) * 2); top: calc(var(--cell) * 1); }
    .card-slot[data-pos="3"] { left: calc(var(--cell) * 6); top: calc(var(--cell) * 1); }
    .card-slot[data-pos="4"] { left: calc(var(--cell) * 0); top: calc(var(--cell) * 3); }
    .card-slot[data-pos="5"] { left: calc(var(--cell) * 4); top: calc(var(--cell) * 2); }
    .card-slot[data-pos="6"] { left: calc(var(--cell) * 2); top: calc(var(--cell) * 4); }
    .card-slot[data-pos="7"] { left: calc(var(--cell) * 6); top: calc(var(--cell) * 4); }
    .card-slot[data-pos="8"] { left: calc(var(--cell) * 0); top: calc(var(--cell) * 5); }
    .card-slot[data-pos="9"] { left: calc(var(--cell) * 4); top: calc(var(--cell) * 5); }

    /* SVG fills card exactly */
    .card-slot img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 1;
      filter: drop-shadow(0 15px 35px rgba(0,0,0,0.4));
    }

    /* Fold overlay - 2 cols x 3 rows to match SVG structure */
    .fold-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(3, 1fr);
      z-index: 2;
    }

    .fold-panel {
      position: relative;
      transform-style: preserve-3d;
    }

    .fold-panel-inner {
      position: absolute;
      inset: 0;
      backface-visibility: hidden;
      transition: transform 0.45s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.45s ease;
    }

    /* Fold origins */
    .fold-panel.from-top .fold-panel-inner { transform-origin: top center; }
    .fold-panel.from-bottom .fold-panel-inner { transform-origin: bottom center; }
    .fold-panel.from-left .fold-panel-inner { transform-origin: left center; }
    .fold-panel.from-right .fold-panel-inner { transform-origin: right center; }

    /* Initial: panels flat, covering SVG */
    .fold-panel .fold-panel-inner {
      transform: rotateX(0deg) rotateY(0deg);
      opacity: 1;
    }

    /* Revealed: panels fold away */
    .fold-panel.revealed.from-top .fold-panel-inner { transform: rotateX(-100deg); opacity: 0; }
    .fold-panel.revealed.from-bottom .fold-panel-inner { transform: rotateX(100deg); opacity: 0; }
    .fold-panel.revealed.from-left .fold-panel-inner { transform: rotateY(100deg); opacity: 0; }
    .fold-panel.revealed.from-right .fold-panel-inner { transform: rotateY(-100deg); opacity: 0; }

    /* Panel colors */
    .fold-panel-inner.mint { background: var(--mint); }
    .fold-panel-inner.purple { background: var(--purple); }
    .fold-panel-inner.cyan { background: var(--cyan); }
    .fold-panel-inner.coral { background: var(--coral); }
    .fold-panel-inner.yellow { background: var(--yellow); }
    .fold-panel-inner.dark { background: #1a1a1a; }

    /* RESPONSIVE */
    @media (max-width: 1800px) {
      :root { --cell: 105px; }
      .hero-headline { font-size: 64px; }
    }

    @media (max-width: 1600px) {
      :root { --cell: 95px; }
      .hero-headline { font-size: 58px; }
    }

    @media (max-width: 1400px) {
      :root { --cell: 85px; }
      .hero-headline { font-size: 52px; }
      .hero-content { max-width: 400px; }
    }

    @media (max-width: 1200px) {
      :root { --cell: 75px; }
      .hero-headline { font-size: 46px; }
    }

    @media (max-width: 1000px) {
      .cards-container, .hero-grid { display: none; }
      .hero { justify-content: center; padding: 120px 24px; }
      .hero-content { max-width: 100%; text-align: center; }
      .hero-buttons { justify-content: center; }
    }

    @media (max-width: 600px) {
      .hero-headline { font-size: 36px; }
      .hero-sub { font-size: 16px; }
      .hero-buttons { flex-direction: column; }
      .btn { width: 100%; justify-content: center; }
    }
  </style>
</head>

<body>
  <Nav />

  <section class="hero">
    <div class="hero-grid"></div>

    <div class="hero-content">
      <h1 class="hero-headline">Your calls,<br><em>working for you</em></h1>
      <p class="hero-sub">Every sales call triggers AI agents that update your CRM, alert your team, and draft follow-upsâ€”automatically.</p>
      <div class="hero-buttons">
        <a href="#" class="btn btn-primary">Book a Demo</a>
        <a href="#how-it-works" class="btn btn-secondary">See How It Works</a>
      </div>
    </div>

    <div class="cards-container" id="cards-container">
      <!-- Cards injected by JS -->
    </div>
  </section>

  <Footer />

  <script>
    // Card data - all 10 agents
    const cards = [
      { src: '/cards/card-01-call-trigger.svg', color: 'mint' },
      { src: '/cards/card-02-intel-agent.svg', color: 'purple' },
      { src: '/cards/card-03-crm-agent.svg', color: 'cyan' },
      { src: '/cards/card-04-risk-agent.svg', color: 'coral' },
      { src: '/cards/card-05-email-agent.svg', color: 'yellow' },
      { src: '/cards/card-06-coaching-agent.svg', color: 'purple' },
      { src: '/cards/card-07-multithread-agent.svg', color: 'mint' },
      { src: '/cards/card-08-quote-agent.svg', color: 'cyan' },
      { src: '/cards/card-09-task-agent.svg', color: 'coral' },
      { src: '/cards/card-10-prep-agent.svg', color: 'yellow' },
    ];

    // 6 panels (2x3 grid), fold directions for each
    const foldPatterns = [
      ['from-left', 'from-top', 'from-left', 'from-right', 'from-bottom', 'from-left'],
      ['from-top', 'from-right', 'from-left', 'from-bottom', 'from-left', 'from-right'],
      ['from-right', 'from-left', 'from-top', 'from-left', 'from-right', 'from-bottom'],
      ['from-left', 'from-left', 'from-bottom', 'from-top', 'from-left', 'from-right'],
    ];

    function buildCard(cardData, patternIndex) {
      const pattern = foldPatterns[patternIndex % foldPatterns.length];
      
      // 6 panels to match the 2x3 grid structure of the SVG
      const panels = pattern.map((dir, i) => `
        <div class="fold-panel ${dir}" data-index="${i}">
          <div class="fold-panel-inner ${cardData.color}"></div>
        </div>
      `).join('');

      return `
        <img src="${cardData.src}" alt="Agent Card" />
        <div class="fold-overlay">${panels}</div>
      `;
    }

    function unfoldCard(slot, delay = 0) {
      setTimeout(() => {
        const panels = slot.querySelectorAll('.fold-panel');
        panels.forEach((panel, i) => {
          setTimeout(() => panel.classList.add('revealed'), i * 80);
        });
      }, delay);
    }

    document.addEventListener('DOMContentLoaded', () => {
      const container = document.getElementById('cards-container');
      
      // Only show first 6 cards to avoid too much overlap
      const visibleCards = cards.slice(0, 6);
      
      // Create card slots
      visibleCards.forEach((card, i) => {
        const slot = document.createElement('div');
        slot.className = 'card-slot';
        slot.dataset.pos = i.toString();
        slot.innerHTML = buildCard(card, i);
        container.appendChild(slot);
        
        // Stagger the unfold
        unfoldCard(slot, 300 + (i * 200));
      });
    });
  </script>
</body>
</html>
