    <div class="grid-wrapper">
      <!-- SVG Grid: 9 cols × 8 rows with stepped edges
           Column pattern per row: 9,8,7,6,6,7,8,9
           Cell = 160px, so multiply by 160 for coordinates
           
           Row widths:
           Row 0: 9 cols = 1440px (x: 0-1440)
           Row 1: 8 cols = 1280px (x: 0-1280)
           Row 2: 7 cols = 1120px (x: 0-1120)
           Row 3: 6 cols = 960px (x: 0-960)
           Row 4: 6 cols = 960px (x: 0-960)
           Row 5: 7 cols = 1120px (x: 0-1120)
           Row 6: 8 cols = 1280px (x: 0-1280)
           Row 7: 9 cols = 1440px (x: 0-1440)
      -->
      <svg class="grid-svg" viewBox="0 0 1440 1280" preserveAspectRatio="xMidYMid meet">
        <!-- Horizontal lines -->
        <line x1="0" y1="0" x2="1440" y2="0"/>
        <line x1="0" y1="160" x2="1280" y2="160"/>
        <line x1="0" y1="320" x2="1120" y2="320"/>
        <line x1="0" y1="480" x2="960" y2="480"/>
        <line x1="0" y1="640" x2="960" y2="640"/>
        <line x1="0" y1="800" x2="1120" y2="800"/>
        <line x1="0" y1="960" x2="1280" y2="960"/>
        <line x1="0" y1="1120" x2="1440" y2="1120"/>
        <line x1="0" y1="1280" x2="1440" y2="1280"/>

        <!-- Vertical lines - left edge -->
        <line x1="0" y1="0" x2="0" y2="1280"/>
        
        <!-- Vertical lines - interior (all full height where they exist) -->
        <line x1="160" y1="0" x2="160" y2="1280"/>
        <line x1="320" y1="0" x2="320" y2="1280"/>
        <line x1="480" y1="0" x2="480" y2="1280"/>
        <line x1="640" y1="0" x2="640" y2="1280"/>
        <line x1="800" y1="0" x2="800" y2="1280"/>
        <line x1="960" y1="0" x2="960" y2="1280"/>
        
        <!-- Vertical lines - outer sections (stepped) -->
        <line x1="1120" y1="0" x2="1120" y2="320"/>
        <line x1="1120" y1="800" x2="1120" y2="1280"/>
        
        <line x1="1280" y1="0" x2="1280" y2="160"/>
        <line x1="1280" y1="960" x2="1280" y2="1280"/>
        
        <line x1="1440" y1="0" x2="1440" y2="0"/>
        <line x1="1440" y1="1120" x2="1440" y2="1280"/>

        <!-- Right edge stepped connectors -->
        <line x1="1280" y1="160" x2="1440" y2="160"/>
        <line x1="1120" y1="320" x2="1280" y2="320"/>
        <line x1="960" y1="480" x2="1120" y2="480"/>
        <line x1="960" y1="800" x2="1120" y2="800"/>
        <line x1="1120" y1="960" x2="1280" y2="960"/>
        <line x1="1280" y1="1120" x2="1440" y2="1120"/>
      </svg>

