---
// Hero - 3 cards, no overlap, animated entrances, cycling
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import BaseHead from '../components/BaseHead.astro';
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <BaseHead title="recrd - AI agents that close deals" description="Revenue intelligence for sales teams." />
  
  <style is:global>
    :root { 
      --cell: 120px;
      --card-w: calc(var(--cell) * 2);
      --card-h: calc(var(--cell) * 3);
      --grid-line: rgba(255,255,255,0.08);
      --mint: #46FCAF;
      --purple: #A678F4;
      --cyan: #5CEBDF;
      --coral: #FF6B7A;
      --yellow: #FFD84D;
      --bg: #0A0A0A;
      --text: #FFFFFF;
      --text-muted: rgba(255,255,255,0.6);
    }

    * { box-sizing: border-box; }

    .hero {
      min-height: 100vh;
      display: flex;
      align-items: center;
      padding: 72px 48px 0;
      position: relative;
      overflow: hidden;
      background: var(--bg);
    }

    /* Grid */
    .hero-grid {
      position: absolute;
      top: 0;
      right: 0;
      width: calc(var(--cell) * 8);
      height: 100%;
      background-image: 
        linear-gradient(to right, var(--grid-line) 1px, transparent 1px),
        linear-gradient(to bottom, var(--grid-line) 1px, transparent 1px);
      background-size: var(--cell) var(--cell);
      z-index: 1;
    }

    .hero-grid::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: calc(var(--cell) * 2);
      height: 100%;
      background: linear-gradient(to right, var(--bg), transparent);
      z-index: 2;
    }

    .hero-content {
      max-width: 480px;
      z-index: 100;
      padding: 48px 0;
    }

    .hero-headline {
      font-size: 72px;
      font-weight: 350;
      line-height: 1.0;
      letter-spacing: -0.03em;
      margin-bottom: 28px;
    }

    .hero-headline em { 
      font-style: normal; 
      color: var(--mint);
      font-weight: 400;
    }

    .hero-sub {
      font-size: 18px;
      font-weight: 400;
      line-height: 1.6;
      margin-bottom: 40px;
      color: var(--text-muted);
    }

    .hero-buttons { display: flex; gap: 16px; }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      padding: 16px 28px;
      font-weight: 500;
      font-size: 15px;
      text-decoration: none;
      transition: all 0.2s ease;
      cursor: pointer;
      border: none;
    }
    
    .btn-primary { background: var(--text); color: var(--bg); }
    .btn-primary:hover { background: var(--mint); color: #0a0a0a; transform: translateY(-2px); }
    
    .btn-secondary { background: transparent; color: var(--text); border: 1px solid rgba(255,255,255,0.2); }
    .btn-secondary:hover { background: var(--text); color: var(--bg); }

    /* Cards container */
    .cards-container {
      position: absolute;
      top: 0;
      right: 0;
      width: calc(var(--cell) * 8);
      height: 100%;
      z-index: 10;
      pointer-events: none;
    }

    /* Card slot - 2x3 cells */
    .card-slot {
      position: absolute;
      width: var(--card-w);
      height: var(--card-h);
      pointer-events: auto;
      opacity: 0;
      visibility: hidden;
    }

    .card-slot.active {
      visibility: visible;
    }

    /* 3 positions - spread out, no overlap */
    /* Position 0: top-left area */
    .card-slot[data-pos="0"] { 
      left: calc(var(--cell) * 0); 
      top: calc(var(--cell) * 0.5); 
    }
    /* Position 1: middle-right area */
    .card-slot[data-pos="1"] { 
      left: calc(var(--cell) * 3); 
      top: calc(var(--cell) * 2.5); 
    }
    /* Position 2: top-right area */
    .card-slot[data-pos="2"] { 
      left: calc(var(--cell) * 6); 
      top: calc(var(--cell) * 0); 
    }

    /* Card image */
    .card-slot img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 1;
      filter: drop-shadow(0 20px 40px rgba(0,0,0,0.5));
    }

    /* ========== PIXELATE ANIMATION ========== */
    .card-slot.anim-pixelate img {
      opacity: 0;
    }

    .card-slot.anim-pixelate.active img {
      animation: pixelateIn 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    }

    .card-slot.anim-pixelate.exiting img {
      animation: pixelateOut 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    }

    @keyframes pixelateIn {
      0% { 
        opacity: 0; 
        filter: drop-shadow(0 20px 40px rgba(0,0,0,0.5)) blur(8px);
        transform: scale(0.9);
      }
      30% { 
        opacity: 0.5; 
        filter: drop-shadow(0 20px 40px rgba(0,0,0,0.5)) blur(4px);
      }
      100% { 
        opacity: 1; 
        filter: drop-shadow(0 20px 40px rgba(0,0,0,0.5)) blur(0);
        transform: scale(1);
      }
    }

    @keyframes pixelateOut {
      0% { 
        opacity: 1; 
        filter: drop-shadow(0 20px 40px rgba(0,0,0,0.5)) blur(0);
        transform: scale(1);
      }
      100% { 
        opacity: 0; 
        filter: drop-shadow(0 20px 40px rgba(0,0,0,0.5)) blur(8px);
        transform: scale(0.95);
      }
    }

    /* Static/glitch effect overlay */
    .static-overlay {
      position: absolute;
      inset: 0;
      z-index: 3;
      pointer-events: none;
      opacity: 0;
      background: repeating-linear-gradient(
        0deg,
        transparent,
        transparent 2px,
        rgba(255,255,255,0.03) 2px,
        rgba(255,255,255,0.03) 4px
      );
    }

    .card-slot.anim-pixelate.active .static-overlay {
      animation: staticFlicker 0.8s ease-out forwards;
    }

    @keyframes staticFlicker {
      0%, 10%, 20%, 30% { opacity: 1; }
      5%, 15%, 25% { opacity: 0.5; }
      100% { opacity: 0; }
    }

    /* ========== ORIGAMI FOLD ANIMATION ========== */
    .fold-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(3, 1fr);
      z-index: 2;
    }

    .fold-panel {
      position: relative;
      transform-style: preserve-3d;
      perspective: 800px;
    }

    .fold-panel-inner {
      position: absolute;
      inset: 0;
      backface-visibility: hidden;
      transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.4s ease;
    }

    /* Fold origins */
    .fold-panel.from-top .fold-panel-inner { transform-origin: top center; }
    .fold-panel.from-bottom .fold-panel-inner { transform-origin: bottom center; }
    .fold-panel.from-left .fold-panel-inner { transform-origin: left center; }
    .fold-panel.from-right .fold-panel-inner { transform-origin: right center; }

    /* Initial: panels cover SVG */
    .fold-panel .fold-panel-inner {
      transform: rotateX(0deg) rotateY(0deg);
      opacity: 1;
    }

    /* Revealed: panels fold away */
    .fold-panel.revealed.from-top .fold-panel-inner { transform: rotateX(-95deg); opacity: 0; }
    .fold-panel.revealed.from-bottom .fold-panel-inner { transform: rotateX(95deg); opacity: 0; }
    .fold-panel.revealed.from-left .fold-panel-inner { transform: rotateY(95deg); opacity: 0; }
    .fold-panel.revealed.from-right .fold-panel-inner { transform: rotateY(-95deg); opacity: 0; }

    /* Closing: panels fold back */
    .fold-panel.closing.from-top .fold-panel-inner { transform: rotateX(0deg); opacity: 1; }
    .fold-panel.closing.from-bottom .fold-panel-inner { transform: rotateX(0deg); opacity: 1; }
    .fold-panel.closing.from-left .fold-panel-inner { transform: rotateY(0deg); opacity: 1; }
    .fold-panel.closing.from-right .fold-panel-inner { transform: rotateY(0deg); opacity: 1; }

    /* Panel colors */
    .fold-panel-inner.mint { background: var(--mint); }
    .fold-panel-inner.purple { background: var(--purple); }
    .fold-panel-inner.cyan { background: var(--cyan); }
    .fold-panel-inner.coral { background: var(--coral); }
    .fold-panel-inner.yellow { background: var(--yellow); }
    .fold-panel-inner.dark { background: #1a1a1a; }

    .card-slot.anim-fold {
      opacity: 1;
    }

    /* ========== SLIDE ANIMATION ========== */
    .card-slot.anim-slide img {
      opacity: 0;
      transform: translateY(40px);
    }

    .card-slot.anim-slide.active img {
      animation: slideIn 0.7s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    .card-slot.anim-slide.exiting img {
      animation: slideOut 0.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    }

    @keyframes slideIn {
      0% { opacity: 0; transform: translateY(50px); }
      100% { opacity: 1; transform: translateY(0); }
    }

    @keyframes slideOut {
      0% { opacity: 1; transform: translateY(0); }
      100% { opacity: 0; transform: translateY(-30px); }
    }

    /* RESPONSIVE */
    @media (max-width: 1800px) {
      :root { --cell: 105px; }
      .hero-headline { font-size: 64px; }
    }

    @media (max-width: 1600px) {
      :root { --cell: 95px; }
      .hero-headline { font-size: 58px; }
    }

    @media (max-width: 1400px) {
      :root { --cell: 85px; }
      .hero-headline { font-size: 50px; }
      .hero-content { max-width: 380px; }
    }

    @media (max-width: 1200px) {
      :root { --cell: 75px; }
      .hero-headline { font-size: 44px; }
    }

    @media (max-width: 1000px) {
      .cards-container, .hero-grid { display: none; }
      .hero { justify-content: center; padding: 120px 24px; }
      .hero-content { max-width: 100%; text-align: center; }
      .hero-buttons { justify-content: center; }
    }

    @media (max-width: 600px) {
      .hero-headline { font-size: 36px; }
      .hero-sub { font-size: 16px; }
      .hero-buttons { flex-direction: column; }
      .btn { width: 100%; justify-content: center; }
    }
  </style>
</head>

<body>
  <Nav />

  <section class="hero">
    <div class="hero-grid"></div>

    <div class="hero-content">
      <h1 class="hero-headline">Your calls,<br><em>working for you</em></h1>
      <p class="hero-sub">Every sales call triggers AI agents that update your CRM, alert your team, and draft follow-upsâ€”automatically.</p>
      <div class="hero-buttons">
        <a href="#" class="btn btn-primary">Book a Demo</a>
        <a href="#how-it-works" class="btn btn-secondary">See How It Works</a>
      </div>
    </div>

    <div class="cards-container">
      <!-- 3 card slots - always present, content swapped -->
      <div class="card-slot" data-pos="0" id="slot-0"></div>
      <div class="card-slot" data-pos="1" id="slot-1"></div>
      <div class="card-slot" data-pos="2" id="slot-2"></div>
    </div>
  </section>

  <Footer />

  <script>
    const cards = [
      { src: '/cards/card-01-call-trigger.svg', color: 'mint' },
      { src: '/cards/card-02-intel-agent.svg', color: 'purple' },
      { src: '/cards/card-03-crm-agent.svg', color: 'cyan' },
      { src: '/cards/card-04-risk-agent.svg', color: 'coral' },
      { src: '/cards/card-05-email-agent.svg', color: 'yellow' },
      { src: '/cards/card-06-coaching-agent.svg', color: 'purple' },
      { src: '/cards/card-07-multithread-agent.svg', color: 'mint' },
      { src: '/cards/card-08-quote-agent.svg', color: 'cyan' },
      { src: '/cards/card-09-task-agent.svg', color: 'coral' },
      { src: '/cards/card-10-prep-agent.svg', color: 'yellow' },
    ];

    const animTypes = ['pixelate', 'fold', 'slide'];
    const foldDirs = ['from-top', 'from-left', 'from-right', 'from-bottom', 'from-left', 'from-top'];

    let currentCards = [0, 1, 2]; // indices into cards array
    let currentAnims = [0, 1, 2]; // indices into animTypes

    function buildPixelateCard(card) {
      return `
        <img src="${card.src}" alt="Agent" />
        <div class="static-overlay"></div>
      `;
    }

    function buildFoldCard(card) {
      const panels = foldDirs.map((dir, i) => `
        <div class="fold-panel ${dir}" data-index="${i}">
          <div class="fold-panel-inner ${card.color}"></div>
        </div>
      `).join('');
      
      return `
        <img src="${card.src}" alt="Agent" />
        <div class="fold-overlay">${panels}</div>
      `;
    }

    function buildSlideCard(card) {
      return `<img src="${card.src}" alt="Agent" />`;
    }

    function showCard(slotIndex, cardIndex, animIndex) {
      const slot = document.getElementById(`slot-${slotIndex}`);
      const card = cards[cardIndex];
      const animType = animTypes[animIndex % animTypes.length];

      // Clear previous
      slot.className = 'card-slot';
      slot.dataset.pos = slotIndex;

      // Build card based on animation type
      if (animType === 'pixelate') {
        slot.innerHTML = buildPixelateCard(card);
        slot.classList.add('anim-pixelate');
      } else if (animType === 'fold') {
        slot.innerHTML = buildFoldCard(card);
        slot.classList.add('anim-fold');
      } else {
        slot.innerHTML = buildSlideCard(card);
        slot.classList.add('anim-slide');
      }

      // Trigger entrance
      requestAnimationFrame(() => {
        slot.classList.add('active');
        
        // For fold animation, reveal panels with stagger
        if (animType === 'fold') {
          const panels = slot.querySelectorAll('.fold-panel');
          panels.forEach((panel, i) => {
            setTimeout(() => panel.classList.add('revealed'), i * 70);
          });
        }
      });
    }

    function hideCard(slotIndex, callback) {
      const slot = document.getElementById(`slot-${slotIndex}`);
      const isFold = slot.classList.contains('anim-fold');
      const isPixelate = slot.classList.contains('anim-pixelate');
      const isSlide = slot.classList.contains('anim-slide');

      if (isFold) {
        // Fold panels back
        const panels = Array.from(slot.querySelectorAll('.fold-panel')).reverse();
        panels.forEach((panel, i) => {
          setTimeout(() => {
            panel.classList.remove('revealed');
            panel.classList.add('closing');
          }, i * 60);
        });
        setTimeout(() => {
          slot.classList.remove('active');
          if (callback) callback();
        }, panels.length * 60 + 400);
      } else {
        // Pixelate or slide out
        slot.classList.add('exiting');
        setTimeout(() => {
          slot.classList.remove('active', 'exiting');
          if (callback) callback();
        }, 600);
      }
    }

    function cycleSlot(slotIndex) {
      hideCard(slotIndex, () => {
        // Get next card (cycle through all 10)
        currentCards[slotIndex] = (currentCards[slotIndex] + 3) % cards.length;
        // Rotate animation type
        currentAnims[slotIndex] = (currentAnims[slotIndex] + 1) % animTypes.length;
        
        showCard(slotIndex, currentCards[slotIndex], currentAnims[slotIndex]);
      });
    }

    document.addEventListener('DOMContentLoaded', () => {
      // Initial display with stagger
      setTimeout(() => showCard(0, 0, 0), 300);
      setTimeout(() => showCard(1, 1, 1), 600);
      setTimeout(() => showCard(2, 2, 2), 900);

      // Cycle each slot on offset timers
      const cycleInterval = 4500;
      
      setTimeout(() => setInterval(() => cycleSlot(0), cycleInterval), 3500);
      setTimeout(() => setInterval(() => cycleSlot(1), cycleInterval), 5000);
      setTimeout(() => setInterval(() => cycleSlot(2), cycleInterval), 6500);
    });
  </script>
</body>
</html>
