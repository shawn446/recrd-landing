  <script>
    import { gsap } from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';
    import Lenis from 'lenis';

    // Register GSAP plugins
    gsap.registerPlugin(ScrollTrigger);

    // Theme toggle
    function setTheme(theme) {
      document.documentElement.setAttribute('data-theme', theme);
      document.getElementById('btn-dark')?.classList.toggle('active', theme === 'dark');
      document.getElementById('btn-light')?.classList.toggle('active', theme === 'light');
    }
    window.setTheme = setTheme;

    // Initialize Lenis smooth scroll
    const lenis = new Lenis({
      duration: 1.2,
      easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
      smoothWheel: true,
    });

    function raf(time) {
      lenis.raf(time);
      requestAnimationFrame(raf);
    }
    requestAnimationFrame(raf);

    // Calculate actual path lengths for accurate dash animation
    function getPathLength(pathId) {
      const path = document.querySelector(pathId);
      return path ? path.getTotalLength() : 500;
    }

    // Create master timeline that loops
    function createTimeline() {
      // Get actual path lengths
      const path1Length = getPathLength('#path1');
      const path2Length = getPathLength('#path2');
      const path3Length = getPathLength('#path3');
      const path4Length = getPathLength('#path4');

      // Set initial states with actual lengths
      gsap.set('.cell', { opacity: 0, scale: 0.92 });
      gsap.set('#path1', { strokeDasharray: path1Length, strokeDashoffset: path1Length });
      gsap.set('#path2', { strokeDasharray: path2Length, strokeDashoffset: path2Length });
      gsap.set('#path3', { strokeDasharray: path3Length, strokeDashoffset: path3Length });
      gsap.set('#path4', { strokeDasharray: path4Length, strokeDashoffset: path4Length });

      const tl = gsap.timeline({
        repeat: -1,
        repeatDelay: 3,
        onRepeat: () => {
          gsap.set('.cell', { opacity: 0, scale: 0.92 });
          gsap.set('#path1', { strokeDashoffset: path1Length });
          gsap.set('#path2', { strokeDashoffset: path2Length });
          gsap.set('#path3', { strokeDashoffset: path3Length });
          gsap.set('#path4', { strokeDashoffset: path4Length });
        }
      });

      // Cell 1 fades in (the trigger)
      tl.to('#cell1', {
        opacity: 1,
        scale: 1,
        duration: 0.6,
        ease: 'power2.out'
      });

      // Path 1 draws as cell 1 settles
      tl.to('#path1', {
        strokeDashoffset: 0,
        duration: 1.4,
        ease: 'power1.inOut'
      }, '-=0.1');

      // Cell 2 fades in as path arrives
      tl.to('#cell2', {
        opacity: 1,
        scale: 1,
        duration: 0.6,
        ease: 'power2.out'
      }, '-=0.3');

      // Brief pause to read cell 2
      tl.to({}, { duration: 0.4 });

      // Path 2 draws
      tl.to('#path2', {
        strokeDashoffset: 0,
        duration: 0.8,
        ease: 'power1.inOut'
      });

      // Cell 3 fades in
      tl.to('#cell3', {
        opacity: 1,
        scale: 1,
        duration: 0.6,
        ease: 'power2.out'
      }, '-=0.25');

      // Brief pause
      tl.to({}, { duration: 0.3 });

      // Path 3 draws
      tl.to('#path3', {
        strokeDashoffset: 0,
        duration: 0.7,
        ease: 'power1.inOut'
      });

      // Cell 4 fades in
      tl.to('#cell4', {
        opacity: 1,
        scale: 1,
        duration: 0.6,
        ease: 'power2.out'
      }, '-=0.2');

      // Brief pause
      tl.to({}, { duration: 0.3 });

      // Path 4 draws (longest path)
      tl.to('#path4', {
        strokeDashoffset: 0,
        duration: 1.6,
        ease: 'power1.inOut'
      });

      // Cell 5 fades in
      tl.to('#cell5', {
        opacity: 1,
        scale: 1,
        duration: 0.6,
        ease: 'power2.out'
      }, '-=0.4');

      // Hold at end before loop
      tl.to({}, { duration: 1.5 });

      return tl;
    }

    // Start animation when DOM ready
    document.addEventListener('DOMContentLoaded', () => {
      setTimeout(createTimeline, 100);
    });
  </script>
