<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>recrd — AI Agents for Revenue Teams</title>
  <style>
    /* FONTS */
    @font-face {
      font-family: 'Roobert';
      src: url('/fonts/RoobertCollectionVF-TRIAL.woff2') format('woff2');
      font-weight: 100 900;
      font-display: swap;
    }
    @font-face {
      font-family: 'Fraktion Mono';
      src: url('/fonts/PPFraktionMono-Regular.otf') format('opentype');
      font-weight: 400;
      font-display: swap;
    }

    /* VARIABLES */
    :root {
      --mint: #46FCAF;
      --purple: #A678F4;
      --cyan: #02C0FF;
      --coral: #FF4F5E;
      --yellow: #FFE869;
      --font: 'Roobert', system-ui, sans-serif;
      --mono: 'Fraktion Mono', monospace;
    }

    [data-theme="dark"] {
      --bg: #0A0A0A;
      --bg-elevated: #111111;
      --border: #1a1a1a;
      --border-strong: #333333;
      --text: #ffffff;
      --text-secondary: #999999;
      --text-muted: #555555;
      --accent-text: var(--mint);
      --btn-primary-bg: #ffffff;
      --btn-primary-text: #0a0a0a;
      --btn-primary-fill: var(--mint);
      --btn-secondary-border: var(--mint);
      --btn-secondary-fill: var(--mint);
      --grid-line: rgba(255,255,255,0.08);
      --grid-line-strong: rgba(255,255,255,0.15);
      --cell-glow: rgba(70,252,175,0.15);
    }

    [data-theme="light"] {
      --bg: #fafafa;
      --bg-elevated: #ffffff;
      --border: #e5e5e5;
      --border-strong: #cccccc;
      --text: #0a0a0a;
      --text-secondary: #555555;
      --text-muted: #888888;
      --accent-text: var(--purple);
      --btn-primary-bg: #0a0a0a;
      --btn-primary-text: #ffffff;
      --btn-primary-fill: var(--mint);
      --btn-secondary-border: var(--purple);
      --btn-secondary-fill: var(--purple);
      --grid-line: rgba(0,0,0,0.08);
      --grid-line-strong: rgba(0,0,0,0.15);
      --cell-glow: rgba(166,120,244,0.12);
    }

    /* RESET */
    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      background: var(--bg);
      color: var(--text);
      font-family: var(--font);
      font-weight: 400;
      line-height: 1.5;
      transition: background 0.2s, color 0.2s;
    }

    /* CONTROLS */
    .controls {
      position: fixed;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      gap: 6px;
      background: var(--bg-elevated);
      border: 1px solid var(--border);
      padding: 8px 12px;
      z-index: 1000;
    }

    .control-btn {
      background: transparent;
      border: 1px solid var(--border);
      color: var(--text-muted);
      padding: 6px 12px;
      font-size: 10px;
      font-family: var(--mono);
      cursor: pointer;
      transition: all 0.15s;
    }

    .control-btn:hover {
      color: var(--text-secondary);
      border-color: var(--text-muted);
    }

    .control-btn.active {
      background: var(--mint);
      color: #0a0a0a;
      border-color: var(--mint);
    }

    /* NAV */
    .nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px 48px;
      border-bottom: 1px solid var(--border);
      position: relative;
      z-index: 10;
    }

    .nav-logo {
      display: flex;
      align-items: center;
      gap: 12px;
      text-decoration: none;
    }

    .nav-logo svg {
      width: 32px;
      height: 32px;
    }

    .nav-wordmark {
      font-family: var(--font);
      font-weight: 600;
      font-size: 22px;
      color: var(--text);
      letter-spacing: -0.02em;
    }

    .nav-links {
      display: flex;
      gap: 36px;
      list-style: none;
    }

    .nav-links a {
      color: var(--text-secondary);
      text-decoration: none;
      font-size: 14px;
      font-weight: 400;
      transition: color 0.15s;
    }

    .nav-links a:hover {
      color: var(--text);
    }

    .nav-cta {
      background: var(--btn-primary-bg);
      color: var(--btn-primary-text);
      padding: 12px 24px;
      font-family: var(--font);
      font-weight: 500;
      font-size: 14px;
      text-decoration: none;
      position: relative;
      overflow: hidden;
      z-index: 1;
    }

    .nav-cta::before {
      content: '';
      position: absolute;
      left: 0;
      bottom: 0;
      width: 0%;
      height: 100%;
      background: var(--cyan);
      transition: width 0.3s ease;
      z-index: -1;
    }

    .nav-cta:hover::before {
      width: 100%;
    }

    /* HERO */
    .hero {
      position: relative;
      min-height: calc(100vh - 73px);
      display: flex;
      overflow: hidden;
    }

    /* GRID */
    .hero-grid {
      position: absolute;
      top: 50%;
      right: 0;
      transform: translateY(-50%);
      width: 60%;
      height: auto;
      z-index: 0;
    }

    .hero-grid svg {
      width: 100%;
      height: auto;
    }

    .hero-grid rect {
      stroke: var(--grid-line);
      fill: transparent;
      transition: fill 0.4s ease, stroke 0.3s ease;
    }

    /* Random cell glow animation */
    @keyframes cellPulse {
      0%, 100% { fill: transparent; }
      50% { fill: var(--cell-glow); }
    }

    .hero-grid rect.glow {
      animation: cellPulse 2s ease-in-out;
    }

    .hero-content {
      position: relative;
      z-index: 10;
      padding: 100px 48px;
      max-width: 640px;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .hero-headline {
      font-family: var(--font);
      font-weight: 700;
      font-size: 72px;
      line-height: 1.0;
      letter-spacing: -0.03em;
      margin-bottom: 24px;
    }

    .hero-headline em {
      font-style: normal;
      color: var(--accent-text);
    }

    .hero-sub {
      font-size: 20px;
      font-weight: 500;
      color: var(--text-secondary);
      line-height: 1.5;
      margin-bottom: 40px;
      max-width: 520px;
    }

    .hero-body {
      font-size: 16px;
      font-weight: 200;
      color: var(--text-secondary);
      line-height: 1.7;
      margin-bottom: 40px;
      max-width: 480px;
    }

    .hero-buttons {
      display: flex;
      gap: 12px;
    }

    /* BUTTONS WITH FILL HOVER */
    .btn {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      padding: 16px 28px;
      font-family: var(--font);
      font-weight: 500;
      font-size: 15px;
      text-decoration: none;
      cursor: pointer;
      border: none;
      position: relative;
      overflow: hidden;
      transition: color 0.3s ease;
    }

    .btn-primary {
      background: var(--btn-primary-bg);
      color: var(--btn-primary-text);
    }

    .btn-primary::before {
      content: '';
      position: absolute;
      left: 0;
      bottom: 0;
      width: 0%;
      height: 100%;
      background: var(--btn-primary-fill);
      transition: width 0.4s ease;
      z-index: 0;
    }

    .btn-primary:hover::before {
      width: 100%;
    }

    .btn-primary span {
      position: relative;
      z-index: 1;
    }

    .btn-secondary {
      background: transparent;
      border: 1px solid var(--btn-secondary-border);
      color: var(--text);
    }

    .btn-secondary::before {
      content: '';
      position: absolute;
      left: 0;
      bottom: 0;
      width: 0%;
      height: 100%;
      background: var(--btn-secondary-fill);
      transition: width 0.4s ease;
      z-index: 0;
    }

    .btn-secondary:hover {
      color: #0a0a0a;
    }

    .btn-secondary:hover::before {
      width: 100%;
    }

    .btn-secondary span {
      position: relative;
      z-index: 1;
    }

    .btn-arrow {
      position: relative;
      z-index: 1;
      display: flex;
      gap: 2px;
    }

    .btn-arrow i {
      width: 4px;
      height: 4px;
      background: currentColor;
    }

    /* HERO VISUAL - Floating blocks */
    .hero-visual {
      position: absolute;
      top: 0;
      right: 0;
      width: 55%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 5;
    }

    .blocks {
      position: relative;
      width: 500px;
      height: 500px;
    }

    .block {
      position: absolute;
      animation: float 6s ease-in-out infinite;
    }

    .block:nth-child(1) { width: 180px; height: 120px; top: 60px; left: 80px; animation-delay: 0s; }
    .block:nth-child(2) { width: 120px; height: 80px; top: 40px; left: 280px; animation-delay: 0.5s; }
    .block:nth-child(3) { width: 200px; height: 140px; top: 160px; left: 160px; animation-delay: 1s; }
    .block:nth-child(4) { width: 100px; height: 60px; top: 200px; left: 30px; animation-delay: 1.5s; }
    .block:nth-child(5) { width: 160px; height: 100px; top: 280px; left: 260px; animation-delay: 2s; }
    .block:nth-child(6) { width: 80px; height: 80px; top: 340px; left: 100px; animation-delay: 2.5s; }
    .block:nth-child(7) { width: 140px; height: 90px; top: 380px; left: 200px; animation-delay: 3s; }
    .block:nth-child(8) { width: 60px; height: 40px; top: 120px; left: 380px; animation-delay: 3.5s; }

    /* Dark mode blocks */
    [data-theme="dark"] .block.purple { background: var(--purple); }
    [data-theme="dark"] .block.mint { background: var(--mint); }
    [data-theme="dark"] .block.dark { background: #151515; border: 1px solid #252525; }
    [data-theme="dark"] .block.white { background: rgba(255,255,255,0.95); }

    /* Light mode blocks */
    [data-theme="light"] .block.purple { background: var(--purple); }
    [data-theme="light"] .block.mint { background: var(--mint); }
    [data-theme="light"] .block.dark { background: #0a0a0a; }
    [data-theme="light"] .block.white { background: #ffffff; border: 1px solid #e0e0e0; }

    .block .bar {
      position: absolute;
      height: 8px;
      left: 12px;
    }

    .block .bar:nth-child(1) { top: 16px; width: 55%; }
    .block .bar:nth-child(2) { top: 32px; width: 75%; }
    .block .bar:nth-child(3) { top: 48px; width: 35%; }
    .block .bar:nth-child(4) { top: 64px; width: 65%; }

    [data-theme="dark"] .bar.white { background: rgba(255,255,255,0.9); }
    [data-theme="dark"] .bar.mint { background: var(--mint); }
    [data-theme="dark"] .bar.purple { background: var(--purple); }
    [data-theme="dark"] .bar.coral { background: var(--coral); }

    [data-theme="light"] .bar.dark { background: #0a0a0a; }
    [data-theme="light"] .bar.mint { background: var(--mint); }
    [data-theme="light"] .bar.purple { background: var(--purple); }
    [data-theme="light"] .bar.white { background: #ffffff; }

    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-12px); }
    }

    /* Gradient blobs */
    .blob {
      position: absolute;
      border-radius: 50%;
      filter: blur(120px);
      pointer-events: none;
      z-index: 1;
    }

    [data-theme="dark"] .blob-1 {
      width: 600px;
      height: 600px;
      background: radial-gradient(circle, var(--mint) 0%, transparent 70%);
      top: -150px;
      right: 10%;
      opacity: 0.12;
    }

    [data-theme="dark"] .blob-2 {
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, var(--purple) 0%, transparent 70%);
      top: 250px;
      right: 25%;
      opacity: 0.1;
    }

    [data-theme="light"] .blob-1 {
      width: 700px;
      height: 700px;
      background: radial-gradient(circle, var(--mint) 0%, transparent 70%);
      top: -100px;
      right: 5%;
      opacity: 0.3;
    }

    [data-theme="light"] .blob-2 {
      width: 500px;
      height: 500px;
      background: radial-gradient(circle, var(--purple) 0%, transparent 70%);
      top: 300px;
      right: 20%;
      opacity: 0.2;
    }

    /* MOBILE */
    @media (max-width: 900px) {
      .nav { padding: 16px 24px; }
      .nav-links { display: none; }
      
      .hero { flex-direction: column; }
      .hero-content { padding: 60px 24px; max-width: none; }
      .hero-headline { font-size: 52px; }
      .hero-sub { font-size: 18px; }
      
      .hero-visual {
        position: relative;
        width: 100%;
        height: 400px;
      }
      
      .blocks {
        transform: scale(0.7);
      }
      
      .hero-buttons { flex-direction: column; }
      .btn { justify-content: center; }

      .grid-cell { height: 60px; }
    }

    @media (max-width: 500px) {
      .hero-headline { font-size: 40px; }
      .controls { 
        bottom: 10px;
        padding: 6px 10px;
      }
      .control-btn { padding: 5px 8px; font-size: 9px; }
      .grid-cell { height: 50px; }
    }
  </style>
</head>
<body>

