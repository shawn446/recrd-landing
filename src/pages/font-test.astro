  <style>
    /* FONTS */
    @font-face {
      font-family: 'Roobert';
      src: url('/fonts/RoobertCollectionVF-TRIAL.woff2') format('woff2');
      font-weight: 100 900;
      font-display: swap;
    }
    @font-face {
      font-family: 'Fraktion Mono';
      src: url('/fonts/PPFraktionMono-Regular.otf') format('opentype');
      font-weight: 400;
      font-display: swap;
    }

    /* VARIABLES */
    :root {
      --mint: #46FCAF;
      --purple: #A678F4;
      --cyan: #02C0FF;
      --coral: #FF4F5E;
      --yellow: #FFE869;
      --font: 'Roobert', system-ui, sans-serif;
      --mono: 'Fraktion Mono', monospace;
    }

    [data-theme="dark"] {
      --bg: #0A0A0A;
      --bg-elevated: #111111;
      --border: #1a1a1a;
      --border-strong: #333333;
      --text: #ffffff;
      --text-secondary: #999999;
      --text-muted: #555555;
      --accent-text: var(--mint);
      --btn-primary-bg: #ffffff;
      --btn-primary-text: #0a0a0a;
      --btn-primary-fill: var(--mint);
      --btn-secondary-border: var(--mint);
      --btn-secondary-fill: var(--mint);
      --grid-line: rgba(255,255,255,0.08);
      --grid-line-strong: rgba(255,255,255,0.15);
      --cell-glow: rgba(70,252,175,0.15);
    }

    [data-theme="light"] {
      --bg: #fafafa;
      --bg-elevated: #ffffff;
      --border: #e5e5e5;
      --border-strong: #cccccc;
      --text: #0a0a0a;
      --text-secondary: #555555;
      --text-muted: #888888;
      --accent-text: var(--purple);
      --btn-primary-bg: #0a0a0a;
      --btn-primary-text: #ffffff;
      --btn-primary-fill: var(--mint);
      --btn-secondary-border: var(--purple);
      --btn-secondary-fill: var(--purple);
      --grid-line: rgba(0,0,0,0.08);
      --grid-line-strong: rgba(0,0,0,0.15);
      --cell-glow: rgba(166,120,244,0.12);
    }

    /* RESET */
    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      background: var(--bg);
      color: var(--text);
      font-family: var(--font);
      font-weight: 400;
      line-height: 1.5;
      transition: background 0.2s, color 0.2s;
    }

    /* CONTROLS */
    .controls {
      position: fixed;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      gap: 6px;
      background: var(--bg-elevated);
      border: 1px solid var(--border);
      padding: 8px 12px;
      z-index: 1000;
    }

    .control-btn {
      background: transparent;
      border: 1px solid var(--border);
      color: var(--text-muted);
      padding: 6px 12px;
      font-size: 10px;
      font-family: var(--mono);
      cursor: pointer;
      transition: all 0.15s;
    }

    .control-btn:hover {
      color: var(--text-secondary);
      border-color: var(--text-muted);
    }

    .control-btn.active {
      background: var(--mint);
      color: #0a0a0a;
      border-color: var(--mint);
    }

    /* NAV */
    .nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px 48px;
      border-bottom: 1px solid var(--border);
      position: relative;
      z-index: 10;
    }

    .nav-logo {
      display: flex;
      align-items: center;
      gap: 12px;
      text-decoration: none;
    }

    .nav-logo svg {
      width: 32px;
      height: 32px;
    }

    .nav-wordmark {
      font-family: var(--font);
      font-weight: 600;
      font-size: 22px;
      color: var(--text);
      letter-spacing: -0.02em;
    }

    .nav-links {
      display: flex;
      gap: 36px;
      list-style: none;
    }

    .nav-links a {
      color: var(--text-secondary);
      text-decoration: none;
      font-size: 14px;
      font-weight: 400;
      transition: color 0.15s;
    }

    .nav-links a:hover {
      color: var(--text);
    }

    .nav-cta {
      background: var(--btn-primary-bg);
      color: var(--btn-primary-text);
      padding: 12px 24px;
      font-family: var(--font);
      font-weight: 500;
      font-size: 14px;
      text-decoration: none;
      position: relative;
      overflow: hidden;
      z-index: 1;
    }

    .nav-cta::before {
      content: '';
      position: absolute;
      left: 0;
      bottom: 0;
      width: 0%;
      height: 100%;
      background: var(--cyan);
      transition: width 0.3s ease;
      z-index: -1;
    }

    .nav-cta:hover::before {
      width: 100%;
    }

    /* HERO */
    .hero {
      position: relative;
      min-height: calc(100vh - 73px);
      display: flex;
      overflow: hidden;
    }

    /* GRID */
    .hero-grid {
      position: absolute;
      top: 50%;
      right: 0;
      transform: translateY(-50%);
      width: 60%;
      height: auto;
      z-index: 0;
    }

    .hero-grid svg {
      width: 100%;
      height: auto;
    }

    .hero-grid rect {
      stroke: var(--grid-line);
      fill: transparent;
      transition: fill 0.4s ease, stroke 0.3s ease;
    }

    /* Random cell glow animation */
    @keyframes cellPulse {
      0%, 100% { fill: transparent; }
      50% { fill: var(--cell-glow); }
    }

    .hero-grid rect.glow {
      animation: cellPulse 2s ease-in-out;
    }

    .hero-content {
      position: relative;
      z-index: 10;
      padding: 100px 48px;
      max-width: 640px;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .hero-headline {
      font-family: var(--font);
      font-weight: 700;
      font-size: 90px;
      line-height: 0.95;
      letter-spacing: -0.035em;
      margin-bottom: 28px;
    }

    .hero-headline em {
      font-style: normal;
      color: var(--accent-text);
    }

    .hero-sub {
      font-size: 40px;
      font-weight: 500;
      color: var(--text);
      line-height: 1.2;
      margin-bottom: 20px;
      max-width: 520px;
      letter-spacing: -0.02em;
    }

    .hero-body {
      font-size: 18px;
      font-weight: 300;
      color: var(--text-secondary);
      line-height: 1.6;
      margin-bottom: 44px;
      max-width: 480px;
    }

    .hero-buttons {
      display: flex;
      gap: 12px;
    }

    /* BUTTONS WITH FILL HOVER */
    .btn {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      padding: 16px 28px;
      font-family: var(--font);
      font-weight: 500;
      font-size: 15px;
      text-decoration: none;
      cursor: pointer;
      border: none;
      position: relative;
      overflow: hidden;
      transition: color 0.3s ease;
    }

    .btn-primary {
      background: var(--btn-primary-bg);
      color: var(--btn-primary-text);
    }

    .btn-primary::before {
      content: '';
      position: absolute;
      left: 0;
      bottom: 0;
      width: 0%;
      height: 100%;
      background: var(--btn-primary-fill);
      transition: width 0.4s ease;
      z-index: 0;
    }

    .btn-primary:hover::before {
      width: 100%;
    }

    .btn-primary span {
      position: relative;
      z-index: 1;
    }

    .btn-secondary {
      background: transparent;
      border: 1px solid var(--btn-secondary-border);
      color: var(--text);
    }

    .btn-secondary::before {
      content: '';
      position: absolute;
      left: 0;
      bottom: 0;
      width: 0%;
      height: 100%;
      background: var(--btn-secondary-fill);
      transition: width 0.4s ease;
      z-index: 0;
    }

    .btn-secondary:hover {
      color: #0a0a0a;
    }

    .btn-secondary:hover::before {
      width: 100%;
    }

    .btn-secondary span {
      position: relative;
      z-index: 1;
    }

    .btn-arrow {
      position: relative;
      z-index: 1;
      display: flex;
      gap: 2px;
    }

    .btn-arrow i {
      width: 4px;
      height: 4px;
      background: currentColor;
    }

    /* FLOW VISUALIZATION */
    .hero-visual {
      position: absolute;
      top: 50%;
      right: 5%;
      transform: translateY(-50%);
      width: 520px;
      height: 440px;
      z-index: 5;
    }

    .flow {
      position: relative;
      width: 100%;
      height: 100%;
    }

    .flow-node {
      position: absolute;
      background: var(--bg-elevated);
      border: 1px solid var(--border);
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 14px 18px;
      font-size: 13px;
      font-weight: 500;
      font-family: var(--font);
      color: var(--text);
      transition: border-color 0.3s ease, transform 0.3s ease;
    }

    .flow-node:hover {
      border-color: var(--mint);
      transform: translateY(-2px);
    }

    .flow-node .icon {
      width: 18px;
      height: 18px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
    }

    .flow-node .icon svg {
      width: 100%;
      height: 100%;
    }

    /* Source node - Call */
    .flow-source {
      top: 50%;
      left: 0;
      transform: translateY(-50%);
      background: var(--mint);
      color: #0a0a0a;
      border-color: var(--mint);
      padding: 18px 22px;
      font-weight: 600;
      font-size: 14px;
    }

    .flow-source .icon svg {
      fill: #0a0a0a;
    }

    /* Center hub - AI */
    .flow-hub {
      top: 50%;
      left: 170px;
      transform: translateY(-50%);
      background: var(--purple);
      color: white;
      border-color: var(--purple);
      padding: 20px 24px;
      font-weight: 600;
      font-size: 14px;
    }

    .flow-hub .icon svg {
      stroke: white;
      fill: none;
    }

    /* Connector line from source to hub */
    .flow-connector {
      position: absolute;
      top: 50%;
      left: 115px;
      width: 55px;
      height: 2px;
      background: var(--mint);
      transform: translateY(-50%);
    }

    .flow-connector::after {
      content: '';
      position: absolute;
      right: 0;
      top: 50%;
      transform: translateY(-50%);
      width: 0;
      height: 0;
      border-top: 5px solid transparent;
      border-bottom: 5px solid transparent;
      border-left: 6px solid var(--mint);
    }

    /* Agent nodes */
    .flow-agent {
      opacity: 0;
      animation: agentAppear 5s ease-out infinite;
    }

    .flow-agent-1 { top: 0; right: 0; animation-delay: 0.4s; }
    .flow-agent-2 { top: 70px; right: 40px; animation-delay: 0.7s; }
    .flow-agent-3 { top: 140px; right: 0; animation-delay: 1.0s; }
    .flow-agent-4 { top: 210px; right: 40px; animation-delay: 1.3s; }
    .flow-agent-5 { top: 280px; right: 0; animation-delay: 1.6s; }
    .flow-agent-6 { top: 350px; right: 40px; animation-delay: 1.9s; }

    .flow-agent .status {
      width: 8px;
      height: 8px;
      background: var(--mint);
      flex-shrink: 0;
    }

    /* SVG Lines - angular L-shapes */
    .flow-lines {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
    }

    .flow-line {
      stroke: var(--border);
      stroke-width: 1;
      fill: none;
      opacity: 0;
      animation: lineAppear 5s ease-out infinite;
    }

    .flow-line:nth-child(1) { animation-delay: 0.4s; }
    .flow-line:nth-child(2) { animation-delay: 0.7s; }
    .flow-line:nth-child(3) { animation-delay: 1.0s; }
    .flow-line:nth-child(4) { animation-delay: 1.3s; }
    .flow-line:nth-child(5) { animation-delay: 1.6s; }
    .flow-line:nth-child(6) { animation-delay: 1.9s; }

    @keyframes agentAppear {
      0%, 5% { opacity: 0; transform: translateX(8px); }
      15%, 80% { opacity: 1; transform: translateX(0); }
      90%, 100% { opacity: 0; transform: translateX(0); }
    }

    @keyframes lineAppear {
      0%, 5% { opacity: 0; stroke: var(--border); }
      15%, 80% { opacity: 1; stroke: var(--mint); }
      90%, 100% { opacity: 0; stroke: var(--border); }
    }

    /* Gradient blobs */
    .blob {
      position: absolute;
      border-radius: 50%;
      filter: blur(120px);
      pointer-events: none;
      z-index: 1;
    }

    [data-theme="dark"] .blob-1 {
      width: 600px;
      height: 600px;
      background: radial-gradient(circle, var(--mint) 0%, transparent 70%);
      top: -150px;
      right: 10%;
      opacity: 0.12;
    }

    [data-theme="dark"] .blob-2 {
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, var(--purple) 0%, transparent 70%);
      top: 250px;
      right: 25%;
      opacity: 0.1;
    }

    [data-theme="light"] .blob-1 {
      width: 700px;
      height: 700px;
      background: radial-gradient(circle, var(--mint) 0%, transparent 70%);
      top: -100px;
      right: 5%;
      opacity: 0.3;
    }

    [data-theme="light"] .blob-2 {
      width: 500px;
      height: 500px;
      background: radial-gradient(circle, var(--purple) 0%, transparent 70%);
      top: 300px;
      right: 20%;
      opacity: 0.2;
    }

    /* MOBILE */
    @media (max-width: 900px) {
      .nav { padding: 16px 24px; }
      .nav-links { display: none; }
      
      .hero { flex-direction: column; }
      .hero-content { padding: 60px 24px; max-width: none; }
      .hero-headline { font-size: 64px; }
      .hero-sub { font-size: 28px; }
      .hero-sub { font-size: 18px; }
      
      .hero-visual {
        position: relative;
        width: 100%;
        height: 350px;
        right: auto;
        top: auto;
        transform: none;
        margin-top: 40px;
      }
      
      .flow {
        transform: scale(0.75);
        transform-origin: top center;
      }
      
      .hero-buttons { flex-direction: column; }
      .btn { justify-content: center; }

      .grid-cell { height: 60px; }
    }

    @media (max-width: 500px) {
      .hero-headline { font-size: 48px; }
      .hero-sub { font-size: 22px; }
      .controls { 
        bottom: 10px;
        padding: 6px 10px;
      }
      .control-btn { padding: 5px 8px; font-size: 9px; }
      .grid-cell { height: 50px; }
    }
  </style>
</head>
