  <script>
    // Card showcase with origami flip animation
    // Display order ensures no same colors adjacent:
    // 0-mint, 3-red, 1-purple, 5-dark, 2-cyan, 4-yellow, 7-purple, 6-mint, 9-yellow, 8-cyan
    const displayOrder = [0, 3, 1, 5, 2, 4, 7, 6, 9, 8];
    
    const VISIBLE_CARDS = 5;
    const CARD_WIDTH = 160;
    const CARD_GAP = 20;
    const FLIP_INTERVAL = 2500;
    const ANIMATION_DURATION = 600;

    let currentIndex = 0;
    let cards;
    let isAnimating = false;

    function getSlotPosition(slot) {
      return {
        x: slot * (CARD_WIDTH + CARD_GAP),
        rotation: (slot - 2) * 5, // -10, -5, 0, 5, 10 degrees
        z: 10 - slot
      };
    }

    function setCardPosition(card, slot, animated = true) {
      const pos = getSlotPosition(slot);
      const duration = animated ? ANIMATION_DURATION : 0;
      
      card.style.transition = animated ? `all ${duration}ms cubic-bezier(0.4, 0, 0.2, 1)` : 'none';
      card.style.left = `${pos.x}px`;
      card.style.transform = `translateY(-50%) rotate(${pos.rotation}deg)`;
      card.style.zIndex = pos.z;
    }

    function showInitialCards() {
      for (let i = 0; i < VISIBLE_CARDS; i++) {
        const cardIndex = displayOrder[i];
        const card = cards[cardIndex];
        
        setCardPosition(card, i, false);
        card.style.opacity = '0';
        
        // Staggered entrance
        setTimeout(() => {
          card.style.transition = `opacity ${ANIMATION_DURATION}ms ease-out`;
          card.style.opacity = '1';
        }, i * 150);
      }
    }

    function flipCard() {
      if (isAnimating) return;
      isAnimating = true;

      const outgoingOrderIndex = currentIndex % displayOrder.length;
      const incomingOrderIndex = (currentIndex + VISIBLE_CARDS) % displayOrder.length;
      
      const outgoingCardIndex = displayOrder[outgoingOrderIndex];
      const incomingCardIndex = displayOrder[incomingOrderIndex];
      
      const outgoingCard = cards[outgoingCardIndex];
      const incomingCard = cards[incomingCardIndex];
      const slot = currentIndex % VISIBLE_CARDS;
      const pos = getSlotPosition(slot);

      // Fold out - origami style
      outgoingCard.style.transition = `all ${ANIMATION_DURATION}ms cubic-bezier(0.4, 0, 0.2, 1)`;
      outgoingCard.style.transform = `translateY(-50%) rotate(${pos.rotation}deg) rotateY(-90deg) scaleX(0.5)`;
      outgoingCard.style.opacity = '0';

      // Prepare incoming card
      incomingCard.style.transition = 'none';
      incomingCard.style.left = `${pos.x}px`;
      incomingCard.style.transform = `translateY(-50%) rotate(${pos.rotation}deg) rotateY(90deg) scaleX(0.5)`;
      incomingCard.style.opacity = '0';
      incomingCard.style.zIndex = pos.z;

      // Fold in after delay
      setTimeout(() => {
        incomingCard.style.transition = `all ${ANIMATION_DURATION}ms cubic-bezier(0.4, 0, 0.2, 1)`;
        incomingCard.style.transform = `translateY(-50%) rotate(${pos.rotation}deg) rotateY(0deg) scaleX(1)`;
        incomingCard.style.opacity = '1';
      }, ANIMATION_DURATION * 0.4);

      // Reset outgoing card after animation
      setTimeout(() => {
        outgoingCard.style.transition = 'none';
        outgoingCard.style.transform = `translateY(-50%) rotateY(0deg) scaleX(1)`;
        isAnimating = false;
      }, ANIMATION_DURATION);

      currentIndex++;
    }

    document.addEventListener('DOMContentLoaded', () => {
      cards = document.querySelectorAll('.card-item');
      
      // Initialize
      showInitialCards();

      // Start flipping after initial entrance
      setTimeout(() => {
        setInterval(flipCard, FLIP_INTERVAL);
      }, VISIBLE_CARDS * 150 + 1500);
    });
  </script>
