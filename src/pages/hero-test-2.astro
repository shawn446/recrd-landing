---
// Hero - pixels show actual card image pieces
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import BaseHead from '../components/BaseHead.astro';
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <BaseHead title="recrd - AI agents that close deals" description="Revenue intelligence for sales teams." />
  
  <style is:global>
    :root { 
      --cell: 120px;
      --card-w: calc(var(--cell) * 2);
      --card-h: calc(var(--cell) * 3);
      --grid-line: rgba(255,255,255,0.08);
      --mint: #46FCAF;
      --purple: #A678F4;
      --cyan: #5CEBDF;
      --coral: #FF6B7A;
      --yellow: #FFD84D;
      --bg: #0A0A0A;
      --text: #FFFFFF;
      --text-muted: rgba(255,255,255,0.6);
    }

    * { box-sizing: border-box; }

    .hero {
      min-height: 100vh;
      display: flex;
      align-items: center;
      padding: 72px 48px 0;
      position: relative;
      overflow: hidden;
      background: var(--bg);
    }

    .hero-grid {
      position: absolute;
      top: 0;
      right: 0;
      width: calc(var(--cell) * 8);
      height: 100%;
      background-image: 
        linear-gradient(to right, var(--grid-line) 1px, transparent 1px),
        linear-gradient(to bottom, var(--grid-line) 1px, transparent 1px);
      background-size: var(--cell) var(--cell);
      z-index: 1;
    }

    .hero-grid::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: calc(var(--cell) * 2);
      height: 100%;
      background: linear-gradient(to right, var(--bg), transparent);
      z-index: 2;
    }

    .hero-content {
      max-width: 480px;
      z-index: 100;
      padding: 48px 0;
    }

    .hero-headline {
      font-size: 72px;
      font-weight: 350;
      line-height: 1.0;
      letter-spacing: -0.03em;
      margin-bottom: 28px;
    }

    .hero-headline em { 
      font-style: normal; 
      color: var(--mint);
      font-weight: 400;
    }

    .hero-sub {
      font-size: 18px;
      font-weight: 400;
      line-height: 1.6;
      margin-bottom: 40px;
      color: var(--text-muted);
    }

    .hero-buttons { display: flex; gap: 16px; }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      padding: 16px 28px;
      font-weight: 500;
      font-size: 15px;
      text-decoration: none;
      transition: all 0.2s ease;
      cursor: pointer;
      border: none;
    }
    
    .btn-primary { background: var(--text); color: var(--bg); }
    .btn-primary:hover { background: var(--mint); color: #0a0a0a; transform: translateY(-2px); }
    
    .btn-secondary { background: transparent; color: var(--text); border: 1px solid rgba(255,255,255,0.2); }
    .btn-secondary:hover { background: var(--text); color: var(--bg); }

    .cards-container {
      position: absolute;
      top: 0;
      right: 0;
      width: calc(var(--cell) * 8);
      height: 100%;
      z-index: 10;
      pointer-events: none;
    }

    .card-slot {
      position: absolute;
      width: var(--card-w);
      height: var(--card-h);
      pointer-events: auto;
      filter: drop-shadow(0 20px 40px rgba(0,0,0,0.5));
    }

    .card-slot[data-pos="0"] { 
      left: calc(var(--cell) * 0); 
      top: calc(var(--cell) * 1); 
    }
    .card-slot[data-pos="1"] { 
      left: calc(var(--cell) * 3); 
      top: calc(var(--cell) * 2); 
    }
    .card-slot[data-pos="2"] { 
      left: calc(var(--cell) * 6); 
      top: calc(var(--cell) * 1); 
    }

    /* ========== PIXEL GRID - shows actual image pieces ========== */
    .pixel-grid {
      width: 100%;
      height: 100%;
      display: grid;
      grid-template-columns: repeat(8, 1fr);
      grid-template-rows: repeat(12, 1fr);
    }

    .pixel-cell {
      opacity: 0;
      transform: scale(0.5);
      transition: opacity 0.12s ease-out, transform 0.15s cubic-bezier(0.34, 1.56, 0.64, 1);
      /* Each cell shows a piece of the background image */
      background-size: 800% 1200%;
    }

    .pixel-cell.visible {
      opacity: 1;
      transform: scale(1);
    }

    /* ========== FOLD GRID ========== */
    .fold-grid {
      width: 100%;
      height: 100%;
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(3, 1fr);
    }

    .fold-cell {
      transform-style: preserve-3d;
      perspective: 1000px;
      /* Each cell shows a piece of the background image */
      background-size: 200% 300%;
    }

    .fold-cell .fold-inner {
      width: 100%;
      height: 100%;
      backface-visibility: hidden;
      transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      background: inherit;
      background-size: inherit;
      background-position: inherit;
    }

    .fold-cell.from-top .fold-inner {
      transform-origin: top center;
      transform: rotateX(-90deg);
    }
    .fold-cell.from-bottom .fold-inner {
      transform-origin: bottom center;
      transform: rotateX(90deg);
    }
    .fold-cell.from-left .fold-inner {
      transform-origin: left center;
      transform: rotateY(90deg);
    }
    .fold-cell.from-right .fold-inner {
      transform-origin: right center;
      transform: rotateY(-90deg);
    }

    .fold-cell.visible .fold-inner {
      transform: rotateX(0deg) rotateY(0deg);
    }

    /* RESPONSIVE */
    @media (max-width: 1800px) {
      :root { --cell: 100px; }
      .hero-headline { font-size: 64px; }
    }

    @media (max-width: 1600px) {
      :root { --cell: 90px; }
      .hero-headline { font-size: 56px; }
    }

    @media (max-width: 1400px) {
      :root { --cell: 80px; }
      .hero-headline { font-size: 48px; }
      .hero-content { max-width: 380px; }
    }

    @media (max-width: 1200px) {
      :root { --cell: 70px; }
      .hero-headline { font-size: 42px; }
    }

    @media (max-width: 1000px) {
      .cards-container, .hero-grid { display: none; }
      .hero { justify-content: center; padding: 120px 24px; }
      .hero-content { max-width: 100%; text-align: center; }
      .hero-buttons { justify-content: center; }
    }

    @media (max-width: 600px) {
      .hero-headline { font-size: 36px; }
      .hero-sub { font-size: 16px; }
      .hero-buttons { flex-direction: column; }
      .btn { width: 100%; justify-content: center; }
    }
  </style>
</head>

<body>
  <Nav />

  <section class="hero">
    <div class="hero-grid"></div>

    <div class="hero-content">
      <h1 class="hero-headline">Your calls,<br><em>working for you</em></h1>
      <p class="hero-sub">Every sales call triggers AI agents that update your CRM, alert your team, and draft follow-upsâ€”automatically.</p>
      <div class="hero-buttons">
        <a href="#" class="btn btn-primary">Book a Demo</a>
        <a href="#how-it-works" class="btn btn-secondary">See How It Works</a>
      </div>
    </div>

    <div class="cards-container">
      <div class="card-slot" data-pos="0" id="slot-0"></div>
      <div class="card-slot" data-pos="1" id="slot-1"></div>
      <div class="card-slot" data-pos="2" id="slot-2"></div>
    </div>
  </section>

  <Footer />

  <script>
    const cards = [
      { src: '/cards/card-01-call-trigger.svg' },
      { src: '/cards/card-02-intel-agent.svg' },
      { src: '/cards/card-03-crm-agent.svg' },
      { src: '/cards/card-04-risk-agent.svg' },
      { src: '/cards/card-05-email-agent.svg' },
      { src: '/cards/card-06-coaching-agent.svg' },
      { src: '/cards/card-07-multithread-agent.svg' },
      { src: '/cards/card-08-quote-agent.svg' },
      { src: '/cards/card-09-task-agent.svg' },
      { src: '/cards/card-10-prep-agent.svg' },
    ];

    const foldDirs = ['from-left', 'from-top', 'from-right', 'from-left', 'from-bottom', 'from-right'];
    
    let currentCards = [0, 1, 2];
    let animTypes = ['pixel', 'fold', 'pixel'];

    function shuffle(arr) {
      const a = [...arr];
      for (let i = a.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [a[i], a[j]] = [a[j], a[i]];
      }
      return a;
    }

    // Build pixel grid - each cell shows a piece of the card image
    function buildPixelCard(card) {
      let cells = '';
      const cols = 8;
      const rows = 12;
      
      for (let row = 0; row < rows; row++) {
        for (let col = 0; col < cols; col++) {
          // background-position to show correct piece of image
          const xPos = (col / (cols - 1)) * 100;
          const yPos = (row / (rows - 1)) * 100;
          cells += `<div class="pixel-cell" style="background-image: url('${card.src}'); background-position: ${xPos}% ${yPos}%;"></div>`;
        }
      }
      
      return `<div class="pixel-grid" data-anim="pixel">${cells}</div>`;
    }

    // Build fold grid - each cell shows a piece of the card image
    function buildFoldCard(card) {
      let cells = '';
      const cols = 2;
      const rows = 3;
      
      for (let row = 0; row < rows; row++) {
        for (let col = 0; col < cols; col++) {
          const idx = row * cols + col;
          const dir = foldDirs[idx];
          const xPos = (col / (cols - 1)) * 100;
          const yPos = (row / (rows - 1)) * 100;
          cells += `
            <div class="fold-cell ${dir}" style="background-image: url('${card.src}'); background-position: ${xPos}% ${yPos}%;">
              <div class="fold-inner"></div>
            </div>
          `;
        }
      }
      
      return `<div class="fold-grid" data-anim="fold">${cells}</div>`;
    }

    function animatePixelIn(slot, callback) {
      const cells = slot.querySelectorAll('.pixel-cell');
      const indices = shuffle([...Array(cells.length).keys()]);

      indices.forEach((idx, i) => {
        setTimeout(() => {
          cells[idx].classList.add('visible');
        }, i * 12);
      });

      setTimeout(() => {
        if (callback) callback();
      }, cells.length * 12 + 200);
    }

    function animatePixelOut(slot, callback) {
      const cells = slot.querySelectorAll('.pixel-cell');
      const indices = shuffle([...Array(cells.length).keys()]);

      indices.forEach((idx, i) => {
        setTimeout(() => {
          cells[idx].classList.remove('visible');
        }, i * 10);
      });

      setTimeout(() => {
        slot.innerHTML = '';
        if (callback) callback();
      }, cells.length * 10 + 200);
    }

    function animateFoldIn(slot, callback) {
      const cells = slot.querySelectorAll('.fold-cell');

      cells.forEach((cell, i) => {
        setTimeout(() => {
          cell.classList.add('visible');
        }, i * 120);
      });

      setTimeout(() => {
        if (callback) callback();
      }, cells.length * 120 + 400);
    }

    function animateFoldOut(slot, callback) {
      const cells = Array.from(slot.querySelectorAll('.fold-cell')).reverse();

      cells.forEach((cell, i) => {
        setTimeout(() => {
          cell.classList.remove('visible');
        }, i * 100);
      });

      setTimeout(() => {
        slot.innerHTML = '';
        if (callback) callback();
      }, cells.length * 100 + 400);
    }

    function showCard(slotIndex, cardIndex, animType) {
      const slot = document.getElementById(`slot-${slotIndex}`);
      const card = cards[cardIndex];

      if (animType === 'pixel') {
        slot.innerHTML = buildPixelCard(card);
        animatePixelIn(slot);
      } else {
        slot.innerHTML = buildFoldCard(card);
        animateFoldIn(slot);
      }
    }

    function hideCard(slotIndex, callback) {
      const slot = document.getElementById(`slot-${slotIndex}`);
      const grid = slot.querySelector('[data-anim]');
      
      if (!grid) {
        if (callback) callback();
        return;
      }

      const animType = grid.dataset.anim;

      if (animType === 'pixel') {
        animatePixelOut(slot, callback);
      } else {
        animateFoldOut(slot, callback);
      }
    }

    function cycleSlot(slotIndex) {
      hideCard(slotIndex, () => {
        // Pause with empty slot
        setTimeout(() => {
          currentCards[slotIndex] = (currentCards[slotIndex] + 3) % cards.length;
          animTypes[slotIndex] = animTypes[slotIndex] === 'pixel' ? 'fold' : 'pixel';
          showCard(slotIndex, currentCards[slotIndex], animTypes[slotIndex]);
        }, 600);
      });
    }

    document.addEventListener('DOMContentLoaded', () => {
      setTimeout(() => showCard(0, 0, 'pixel'), 500);
      setTimeout(() => showCard(1, 1, 'fold'), 900);
      setTimeout(() => showCard(2, 2, 'pixel'), 1300);

      const cycleTime = 6000;
      setTimeout(() => setInterval(() => cycleSlot(0), cycleTime), 5000);
      setTimeout(() => setInterval(() => cycleSlot(1), cycleTime), 6500);
      setTimeout(() => setInterval(() => cycleSlot(2), cycleTime), 8000);
    });
  </script>
</body>
</html>
