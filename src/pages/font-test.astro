  <script>
    import { gsap } from 'gsap';
    import Lenis from 'lenis';

    function setTheme(theme) {
      document.documentElement.setAttribute('data-theme', theme);
      document.getElementById('btn-dark')?.classList.toggle('active', theme === 'dark');
      document.getElementById('btn-light')?.classList.toggle('active', theme === 'light');
    }
    window.setTheme = setTheme;

    const lenis = new Lenis({
      duration: 1.2,
      easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
      smoothWheel: true,
    });
    function raf(time) { lenis.raf(time); requestAnimationFrame(raf); }
    requestAnimationFrame(raf);

    function createTimeline() {
      const paths = document.querySelectorAll('.flow-path');
      
      paths.forEach(path => {
        const length = path.getTotalLength();
        path.style.strokeDasharray = length;
        path.style.strokeDashoffset = length;
      });

      gsap.set('.card', { opacity: 0, y: 30, scale: 0.96 });
      gsap.set('.forecast-fill', { width: '0%' });

      // No repeat - plays once and stays
      const tl = gsap.timeline();

      // Card 1: Call completed
      tl.to('#card1', { opacity: 1, y: 0, scale: 1, duration: 1, ease: 'power2.out' });
      
      // Pause to read
      tl.to({}, { duration: 0.8 });
      
      // Path 1: to Card 2
      tl.to('#path1', { strokeDashoffset: 0, duration: 1.5, ease: 'power1.inOut' });
      
      // Card 2: Analyzing
      tl.to('#card2', { opacity: 1, y: 0, scale: 1, duration: 1, ease: 'power2.out' }, '-=0.3');
      
      // Pause while "analyzing"
      tl.to({}, { duration: 1.5 });
      
      // Paths 2 & 3 branch out simultaneously
      tl.to('#path2', { strokeDashoffset: 0, duration: 1.2, ease: 'power1.inOut' });
      tl.to('#path3', { strokeDashoffset: 0, duration: 1.5, ease: 'power1.inOut' }, '-=1.2');
      
      // Cards 3 & 4 appear
      tl.to('#card3', { opacity: 1, y: 0, scale: 1, duration: 0.8, ease: 'power2.out' }, '-=0.5');
      tl.to('#card4', { opacity: 1, y: 0, scale: 1, duration: 0.8, ease: 'power2.out' }, '-=0.7');
      
      // Pause to read
      tl.to({}, { duration: 1 });
      
      // Paths 4 & 5
      tl.to('#path4', { strokeDashoffset: 0, duration: 1, ease: 'power1.inOut' });
      tl.to('#path5', { strokeDashoffset: 0, duration: 1.2, ease: 'power1.inOut' }, '-=0.8');
      
      // Cards 5 & 6
      tl.to('#card5', { opacity: 1, y: 0, scale: 1, duration: 0.8, ease: 'power2.out' }, '-=0.4');
      tl.to('#card6', { opacity: 1, y: 0, scale: 1, duration: 0.8, ease: 'power2.out' }, '-=0.6');
      
      // Pause to read
      tl.to({}, { duration: 0.8 });
      
      // Path 6 & Card 7
      tl.to('#path6', { strokeDashoffset: 0, duration: 0.8, ease: 'power1.inOut' });
      tl.to('#card7', { opacity: 1, y: 0, scale: 1, duration: 0.8, ease: 'power2.out' }, '-=0.3');
      
      // Animate forecast fill
      tl.to('.forecast-fill', { width: '73%', duration: 1.2, ease: 'power2.out' }, '-=0.5');

      return tl;
    }

    document.addEventListener('DOMContentLoaded', () => {
      setTimeout(createTimeline, 400);
    });
  </script>
