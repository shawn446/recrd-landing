---
// Hero Section - Grid Storytelling Animation
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>recrd - AI agents that close deals</title>
  
  <style>
    @font-face {
      font-family: 'Roobert';
      src: url('/fonts/Roobert-Regular.woff2') format('woff2');
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: 'Roobert';
      src: url('/fonts/Roobert-Medium.woff2') format('woff2');
      font-weight: 500;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: 'Roobert';
      src: url('/fonts/Roobert-SemiBold.woff2') format('woff2');
      font-weight: 600;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: 'Roobert';
      src: url('/fonts/Roobert-Bold.woff2') format('woff2');
      font-weight: 700;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: 'Fraktion Mono';
      src: url('/fonts/FraktionMono-Regular.woff2') format('woff2');
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }

    :root {
      --font: 'Roobert', -apple-system, BlinkMacSystemFont, sans-serif;
      --mono: 'Fraktion Mono', monospace;
      --mint: #46FCAF;
      --purple: #A678F4;
      --cyan: #02C0FF;
      --coral: #FF4F5E;
    }

    [data-theme="dark"] {
      --bg: #0A0A0A;
      --text: #ffffff;
      --text-muted: #666666;
      --grid-line: rgba(255,255,255,0.1);
    }

    [data-theme="light"] {
      --bg: #fafafa;
      --text: #0a0a0a;
      --text-muted: #888888;
      --grid-line: rgba(0,0,0,0.1);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: var(--font);
      background: var(--bg);
      color: var(--text);
      min-height: 100vh;
      overflow-x: hidden;
    }

    /* NAV */
    nav {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      height: 72px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 48px;
      z-index: 100;
      background: var(--bg);
      border-bottom: 1px solid var(--grid-line);
    }

    .nav-logo {
      display: flex;
      align-items: center;
      gap: 12px;
      text-decoration: none;
    }

    .nav-logo svg {
      width: 32px;
      height: 32px;
    }

    .nav-wordmark {
      font-weight: 600;
      font-size: 18px;
      color: var(--text);
    }

    .nav-links {
      display: flex;
      gap: 40px;
      list-style: none;
    }

    .nav-links a {
      color: var(--text-muted);
      text-decoration: none;
      font-size: 14px;
      font-weight: 500;
      transition: color 0.2s;
    }

    .nav-links a:hover {
      color: var(--text);
    }

    .nav-cta {
      background: var(--text);
      color: var(--bg);
      padding: 12px 24px;
      font-weight: 500;
      font-size: 14px;
      text-decoration: none;
    }

    /* HERO */
    .hero {
      min-height: 100vh;
      display: flex;
      align-items: center;
      padding: 120px 48px 48px;
      position: relative;
    }

    .hero-content {
      max-width: 520px;
      z-index: 10;
    }

    .hero-headline {
      font-size: 90px;
      font-weight: 700;
      line-height: 0.95;
      letter-spacing: -0.035em;
      margin-bottom: 28px;
    }

    .hero-headline em {
      font-style: normal;
      color: var(--mint);
    }

    [data-theme="light"] .hero-headline em {
      color: var(--purple);
    }

    .hero-sub {
      font-size: 40px;
      font-weight: 500;
      line-height: 1.2;
      margin-bottom: 20px;
      letter-spacing: -0.02em;
    }

    .hero-body {
      font-size: 18px;
      font-weight: 300;
      color: var(--text-muted);
      line-height: 1.6;
      margin-bottom: 44px;
    }

    .hero-buttons {
      display: flex;
      gap: 16px;
    }

    .btn {
      padding: 16px 32px;
      font-family: var(--font);
      font-weight: 500;
      font-size: 15px;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 12px;
      position: relative;
      overflow: hidden;
    }

    .btn-primary {
      background: #fff;
      color: #0a0a0a;
    }

    .btn-primary::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      width: 0%;
      height: 100%;
      background: var(--mint);
      transition: width 0.4s ease;
      z-index: -1;
    }

    .btn-primary:hover::before {
      width: 100%;
    }

    .btn-secondary {
      background: transparent;
      color: var(--text);
      border: 1px solid var(--mint);
    }

    [data-theme="light"] .btn-secondary {
      border-color: var(--purple);
    }

    /* ========================================
       GRID SYSTEM - Varied columns, square cells
       ======================================== */
    
    .grid-container {
      position: absolute;
      top: 50%;
      right: 24px;
      transform: translateY(-50%);
      width: 62%;
      max-width: 750px;
      aspect-ratio: 640 / 560;
    }

    /* Base grid lines SVG - must match container exactly */
    .grid-svg {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }

    .grid-line {
      stroke: var(--grid-line);
      stroke-width: 1;
    }

    /* Animated path that follows grid lines */
    .grid-path {
      stroke-width: 3;
      fill: none;
      stroke-dasharray: 1000;
      stroke-dashoffset: 1000;
      opacity: 0;
      stroke-linecap: butt;
      stroke-linejoin: miter;
      will-change: stroke-dashoffset, opacity;
    }

    .grid-path.active {
      opacity: 1;
      animation: tracePath var(--draw-duration, 2s) cubic-bezier(0.25, 0.1, 0.25, 1) forwards;
    }

    @keyframes tracePath {
      to { stroke-dashoffset: 0; }
    }

    /* Cell content - positioned absolutely over SVG */
    .grid-cells {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
    }

    .cell {
      position: absolute;
      opacity: 0;
      transform: scale(0.96);
      display: flex;
      flex-direction: column;
      justify-content: center;
      padding: 14px;
      transition: none;
      will-change: opacity, transform;
      backface-visibility: hidden;
    }

    .cell.active {
      animation: cellFadeIn 0.7s cubic-bezier(0.25, 0.1, 0.25, 1) forwards;
    }

    @keyframes cellFadeIn {
      0% {
        opacity: 0;
        transform: scale(0.96);
      }
      100% {
        opacity: 1;
        transform: scale(1);
      }
    }

    .cell-badge {
      font-family: var(--mono);
      font-size: 10px;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      padding: 5px 10px;
      margin-bottom: 8px;
      width: fit-content;
    }

    .cell-title {
      font-size: 15px;
      font-weight: 600;
      line-height: 1.3;
      margin-bottom: 4px;
    }

    .cell-desc {
      font-size: 11px;
      font-weight: 400;
      line-height: 1.4;
      opacity: 0.8;
    }

    /* Cell color variants */
    .cell.mint {
      background: var(--mint);
      color: #0a0a0a;
    }
    .cell.mint .cell-badge {
      background: rgba(0,0,0,0.12);
    }

    .cell.purple {
      background: var(--purple);
      color: #fff;
    }
    .cell.purple .cell-badge {
      background: rgba(255,255,255,0.2);
    }

    .cell.cyan {
      background: var(--cyan);
      color: #0a0a0a;
    }
    .cell.cyan .cell-badge {
      background: rgba(0,0,0,0.12);
    }

    .cell.coral {
      background: var(--coral);
      color: #fff;
    }
    .cell.coral .cell-badge {
      background: rgba(255,255,255,0.2);
    }

    /* Theme toggle */
    .theme-toggle {
      position: fixed;
      bottom: 24px;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      background: var(--bg);
      border: 1px solid var(--grid-line);
      z-index: 1000;
    }

    .theme-toggle button {
      padding: 10px 20px;
      background: none;
      border: none;
      color: var(--text-muted);
      font-family: var(--font);
      font-size: 13px;
      cursor: pointer;
    }

    .theme-toggle button.active {
      background: var(--text);
      color: var(--bg);
    }

    /* Mobile */
    @media (max-width: 1024px) {
      .grid-container {
        display: none;
      }
      .hero-content {
        max-width: 100%;
      }
      .hero-headline {
        font-size: 56px;
      }
      .hero-sub {
        font-size: 28px;
      }
    }
  </style>
</head>

<body>
  <nav>
    <a href="/" class="nav-logo">
      <svg viewBox="0 0 52 52" fill="none">
        <rect y="16" width="28" height="28" fill="#A678F4"/>
        <rect x="16" width="28" height="28" rx="6" fill="#46FCAF"/>
      </svg>
      <span class="nav-wordmark">recrd</span>
    </a>
    <ul class="nav-links">
      <li><a href="#">Features</a></li>
      <li><a href="#">Pricing</a></li>
      <li><a href="#">Docs</a></li>
      <li><a href="#">Blog</a></li>
    </ul>
    <a href="#" class="nav-cta">Dashboard</a>
  </nav>

  <section class="hero">
    <div class="hero-content">
      <h1 class="hero-headline">AI agents that <em>close deals</em></h1>
      <p class="hero-sub">One call. Six agents. Zero setup.</p>
      <p class="hero-body">Record your sales calls and let AI handle the follow-ups, CRM updates, and coaching insights.</p>
      <div class="hero-buttons">
        <a href="#" class="btn btn-primary">Get Started Free</a>
        <a href="#" class="btn btn-secondary">Watch Demo</a>
      </div>
    </div>

    <!-- Grid Animation Container -->
    <div class="grid-container">
      <!-- 
        Grid structure - VARIED columns per row, 80x80 SQUARE cells:
        Row 1: 8 cells starting at x=0
        Row 2: 7 cells starting at x=80  (stepped in)
        Row 3: 6 cells starting at x=160 (stepped in more)
        Row 4: 6 cells starting at x=160
        Row 5: 7 cells starting at x=80  (stepped out)
        Row 6: 7 cells starting at x=80
        Row 7: 8 cells starting at x=0   (full width)
        
        Creates stepped left edge silhouette
      -->
      <svg class="grid-svg" viewBox="0 0 640 560" preserveAspectRatio="xMidYMid meet">
        <!-- Row 1: 8 cells, x: 0-640 -->
        <rect class="grid-line" x="0" y="0" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="80" y="0" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="160" y="0" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="240" y="0" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="320" y="0" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="400" y="0" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="480" y="0" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="560" y="0" width="80" height="80" fill="none"/>
        
        <!-- Row 2: 7 cells, x: 80-640 (stepped in 1) -->
        <rect class="grid-line" x="80" y="80" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="160" y="80" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="240" y="80" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="320" y="80" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="400" y="80" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="480" y="80" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="560" y="80" width="80" height="80" fill="none"/>
        
        <!-- Row 3: 6 cells, x: 160-640 (stepped in 2) -->
        <rect class="grid-line" x="160" y="160" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="240" y="160" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="320" y="160" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="400" y="160" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="480" y="160" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="560" y="160" width="80" height="80" fill="none"/>
        
        <!-- Row 4: 6 cells, x: 160-640 (same as row 3) -->
        <rect class="grid-line" x="160" y="240" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="240" y="240" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="320" y="240" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="400" y="240" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="480" y="240" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="560" y="240" width="80" height="80" fill="none"/>
        
        <!-- Row 5: 7 cells, x: 80-640 (stepped out) -->
        <rect class="grid-line" x="80" y="320" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="160" y="320" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="240" y="320" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="320" y="320" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="400" y="320" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="480" y="320" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="560" y="320" width="80" height="80" fill="none"/>
        
        <!-- Row 6: 7 cells, x: 80-640 -->
        <rect class="grid-line" x="80" y="400" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="160" y="400" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="240" y="400" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="320" y="400" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="400" y="400" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="480" y="400" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="560" y="400" width="80" height="80" fill="none"/>
        
        <!-- Row 7: 8 cells, x: 0-640 (full) -->
        <rect class="grid-line" x="0" y="480" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="80" y="480" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="160" y="480" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="240" y="480" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="320" y="480" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="400" y="480" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="480" y="480" width="80" height="80" fill="none"/>
        <rect class="grid-line" x="560" y="480" width="80" height="80" fill="none"/>

        <!-- Animated paths - follow EXACT grid lines between cells -->
        <!-- Path 1 (mint): Cell1 (0-80,0-80) corner → down → right to Cell2 (160,160) -->
        <path id="path1" class="grid-path" stroke="#46FCAF" 
              d="M 80,80 V 160 H 160"/>
        
        <!-- Path 2 (purple): Cell2 right (320,320) → right to Cell3 left (400,320) -->
        <path id="path2" class="grid-path" stroke="#A678F4" 
              d="M 320,320 H 400"/>
        
        <!-- Path 3 (cyan): Cell3 bottom (480,400) → down to Cell4 top (480,480) -->
        <path id="path3" class="grid-path" stroke="#02C0FF" 
              d="M 480,400 V 480"/>
        
        <!-- Path 4 (coral): Cell4 left (400,480) → left along y=480 → to Cell5 right (160,480) -->
        <path id="path4" class="grid-path" stroke="#FF4F5E" 
              d="M 400,480 H 160"/>
      </svg>

      <!-- Cell Content Overlays -->
      <div class="grid-cells">
        <!-- Cell 1: Row 1, Col 1 (mint) - 0,0 to 80,80 -->
        <div class="cell mint" id="cell1" style="left: 0%; top: 0%; width: 12.5%; height: 14.28%;">
          <span class="cell-badge">Incoming</span>
          <span class="cell-title">Sales Call</span>
        </div>

        <!-- Cell 2: Row 3-4, Cols 3-4 (purple) - 160,160 to 320,320 - spans 2 rows -->
        <div class="cell purple" id="cell2" style="left: 25%; top: 28.57%; width: 25%; height: 28.57%;">
          <span class="cell-badge">Processing</span>
          <span class="cell-title">recrd analyzes</span>
          <span class="cell-desc">AI extracts insights from your conversation</span>
        </div>

        <!-- Cell 3: Row 5, Cols 6-7 (cyan) - 400,320 to 560,400 -->
        <div class="cell cyan" id="cell3" style="left: 62.5%; top: 57.14%; width: 25%; height: 14.28%;">
          <span class="cell-badge">Forecast</span>
          <span class="cell-title">Pipeline updated</span>
          <span class="cell-desc">Deal stage advanced</span>
        </div>

        <!-- Cell 4: Row 7, Cols 6-7 (coral) - 400,480 to 560,560 -->
        <div class="cell coral" id="cell4" style="left: 62.5%; top: 85.71%; width: 25%; height: 14.28%;">
          <span class="cell-badge">Risk Alert</span>
          <span class="cell-title">Manager notified</span>
          <span class="cell-desc">Budget concerns flagged</span>
        </div>

        <!-- Cell 5: Row 7, Cols 1-2 (mint) - 0,480 to 160,560 -->
        <div class="cell mint" id="cell5" style="left: 0%; top: 85.71%; width: 25%; height: 14.28%;">
          <span class="cell-badge">Content</span>
          <span class="cell-title">Marketing alerted</span>
          <span class="cell-desc">Winning quote captured</span>
        </div>
      </div>
    </div>
  </section>

  <div class="theme-toggle">
    <button id="btn-dark" class="active" onclick="setTheme('dark')">Dark</button>
    <button id="btn-light" onclick="setTheme('light')">Light</button>
  </div>

  <script>
    function setTheme(theme) {
      document.documentElement.setAttribute('data-theme', theme);
      document.getElementById('btn-dark').classList.toggle('active', theme === 'dark');
      document.getElementById('btn-light').classList.toggle('active', theme === 'light');
    }

    // Smooth animation - cells fade in AS paths reach them
    function runAnimation() {
      const cell1 = document.getElementById('cell1');
      const cell2 = document.getElementById('cell2');
      const cell3 = document.getElementById('cell3');
      const cell4 = document.getElementById('cell4');
      const cell5 = document.getElementById('cell5');
      
      const path1 = document.getElementById('path1');
      const path2 = document.getElementById('path2');
      const path3 = document.getElementById('path3');
      const path4 = document.getElementById('path4');

      // Set different durations based on path length
      path1.style.setProperty('--draw-duration', '2s');
      path2.style.setProperty('--draw-duration', '2s');
      path3.style.setProperty('--draw-duration', '1s');
      path4.style.setProperty('--draw-duration', '2.5s');

      function reset() {
        [cell1, cell2, cell3, cell4, cell5].forEach(c => c.classList.remove('active'));
        [path1, path2, path3, path4].forEach(p => p.classList.remove('active'));
      }

      function animate() {
        reset();

        // Cell 1 fades in
        setTimeout(() => cell1.classList.add('active'), 0);

        // Path 1 starts after Cell 1 is visible
        setTimeout(() => path1.classList.add('active'), 1200);

        // Cell 2 starts fading in as path 1 nears end
        setTimeout(() => cell2.classList.add('active'), 2800);

        // Path 2 starts after Cell 2 settles
        setTimeout(() => path2.classList.add('active'), 4200);

        // Cell 3 fades in as path 2 nears end
        setTimeout(() => cell3.classList.add('active'), 5800);

        // Path 3 starts (shorter path)
        setTimeout(() => path3.classList.add('active'), 7200);

        // Cell 4 fades in
        setTimeout(() => cell4.classList.add('active'), 7900);

        // Path 4 starts
        setTimeout(() => path4.classList.add('active'), 9300);

        // Cell 5 fades in as path 4 nears end
        setTimeout(() => cell5.classList.add('active'), 11300);

        // Hold complete state, then restart
        setTimeout(() => animate(), 16000);
      }

      animate();
    }

    document.addEventListener('DOMContentLoaded', runAnimation);
  </script>
</body>
</html>
