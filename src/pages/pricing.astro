    @font-face {
      font-family: 'Matter';
      src: url('/fonts/Matter-TRIAL-Regular.otf') format('opentype');
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: 'Matter';
      src: url('/fonts/Matter-TRIAL-Medium.ttf') format('truetype');
      font-weight: 500;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: 'Object Sans';
      src: url('/fonts/PPObjectSans-Regular.otf') format('opentype');
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
