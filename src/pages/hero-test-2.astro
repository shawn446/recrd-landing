---
// Hero - 3 cards, pixel build + fold in, no overlap, pause between
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import BaseHead from '../components/BaseHead.astro';
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <BaseHead title="recrd - AI agents that close deals" description="Revenue intelligence for sales teams." />
  
  <style is:global>
    :root { 
      --cell: 120px;
      --card-w: calc(var(--cell) * 2);
      --card-h: calc(var(--cell) * 3);
      --grid-line: rgba(255,255,255,0.08);
      --mint: #46FCAF;
      --purple: #A678F4;
      --cyan: #5CEBDF;
      --coral: #FF6B7A;
      --yellow: #FFD84D;
      --bg: #0A0A0A;
      --text: #FFFFFF;
      --text-muted: rgba(255,255,255,0.6);
    }

    * { box-sizing: border-box; }

    .hero {
      min-height: 100vh;
      display: flex;
      align-items: center;
      padding: 72px 48px 0;
      position: relative;
      overflow: hidden;
      background: var(--bg);
    }

    .hero-grid {
      position: absolute;
      top: 0;
      right: 0;
      width: calc(var(--cell) * 8);
      height: 100%;
      background-image: 
        linear-gradient(to right, var(--grid-line) 1px, transparent 1px),
        linear-gradient(to bottom, var(--grid-line) 1px, transparent 1px);
      background-size: var(--cell) var(--cell);
      z-index: 1;
    }

    .hero-grid::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: calc(var(--cell) * 2);
      height: 100%;
      background: linear-gradient(to right, var(--bg), transparent);
      z-index: 2;
    }

    .hero-content {
      max-width: 480px;
      z-index: 100;
      padding: 48px 0;
    }

    .hero-headline {
      font-size: 72px;
      font-weight: 350;
      line-height: 1.0;
      letter-spacing: -0.03em;
      margin-bottom: 28px;
    }

    .hero-headline em { 
      font-style: normal; 
      color: var(--mint);
      font-weight: 400;
    }

    .hero-sub {
      font-size: 18px;
      font-weight: 400;
      line-height: 1.6;
      margin-bottom: 40px;
      color: var(--text-muted);
    }

    .hero-buttons { display: flex; gap: 16px; }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      padding: 16px 28px;
      font-weight: 500;
      font-size: 15px;
      text-decoration: none;
      transition: all 0.2s ease;
      cursor: pointer;
      border: none;
    }
    
    .btn-primary { background: var(--text); color: var(--bg); }
    .btn-primary:hover { background: var(--mint); color: #0a0a0a; transform: translateY(-2px); }
    
    .btn-secondary { background: transparent; color: var(--text); border: 1px solid rgba(255,255,255,0.2); }
    .btn-secondary:hover { background: var(--text); color: var(--bg); }

    /* Cards container */
    .cards-container {
      position: absolute;
      top: 0;
      right: 0;
      width: calc(var(--cell) * 8);
      height: 100%;
      z-index: 10;
      pointer-events: none;
    }

    /* Card slot */
    .card-slot {
      position: absolute;
      width: var(--card-w);
      height: var(--card-h);
      pointer-events: auto;
    }

    /* 3 positions - grid snapped, spaced apart */
    .card-slot[data-pos="0"] { 
      left: calc(var(--cell) * 0); 
      top: calc(var(--cell) * 1); 
    }
    .card-slot[data-pos="1"] { 
      left: calc(var(--cell) * 3); 
      top: calc(var(--cell) * 2); 
    }
    .card-slot[data-pos="2"] { 
      left: calc(var(--cell) * 6); 
      top: calc(var(--cell) * 1); 
    }

    /* Card wrapper */
    .card-wrapper {
      position: relative;
      width: 100%;
      height: 100%;
      filter: drop-shadow(0 20px 40px rgba(0,0,0,0.5));
    }

    /* SVG Image - hidden until animation completes */
    .card-wrapper img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      opacity: 0;
      z-index: 1;
    }

    .card-wrapper.revealed img {
      opacity: 1;
    }

    /* ========== PIXEL BUILD ========== */
    .pixel-grid {
      position: absolute;
      inset: 0;
      display: grid;
      grid-template-columns: repeat(8, 1fr);
      grid-template-rows: repeat(12, 1fr);
      z-index: 2;
    }

    .pixel-box {
      opacity: 0;
      transform: scale(0);
      transition: opacity 0.1s ease, transform 0.15s cubic-bezier(0.34, 1.56, 0.64, 1);
    }

    .pixel-box.visible {
      opacity: 1;
      transform: scale(1);
    }

    .pixel-box.mint { background: var(--mint); }
    .pixel-box.purple { background: var(--purple); }
    .pixel-box.cyan { background: var(--cyan); }
    .pixel-box.coral { background: var(--coral); }
    .pixel-box.yellow { background: var(--yellow); }

    /* ========== FOLD BUILD ========== */
    .fold-grid {
      position: absolute;
      inset: 0;
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(3, 1fr);
      z-index: 2;
    }

    .fold-panel {
      transform-style: preserve-3d;
      perspective: 1000px;
    }

    .fold-panel-inner {
      width: 100%;
      height: 100%;
      backface-visibility: hidden;
      transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Start folded away (invisible) */
    .fold-panel.from-top .fold-panel-inner {
      transform-origin: top center;
      transform: rotateX(-90deg);
    }
    .fold-panel.from-bottom .fold-panel-inner {
      transform-origin: bottom center;
      transform: rotateX(90deg);
    }
    .fold-panel.from-left .fold-panel-inner {
      transform-origin: left center;
      transform: rotateY(90deg);
    }
    .fold-panel.from-right .fold-panel-inner {
      transform-origin: right center;
      transform: rotateY(-90deg);
    }

    /* Folded in (visible) */
    .fold-panel.visible .fold-panel-inner {
      transform: rotateX(0deg) rotateY(0deg);
    }

    .fold-panel-inner.mint { background: var(--mint); }
    .fold-panel-inner.purple { background: var(--purple); }
    .fold-panel-inner.cyan { background: var(--cyan); }
    .fold-panel-inner.coral { background: var(--coral); }
    .fold-panel-inner.yellow { background: var(--yellow); }

    /* RESPONSIVE */
    @media (max-width: 1800px) {
      :root { --cell: 100px; }
      .hero-headline { font-size: 64px; }
    }

    @media (max-width: 1600px) {
      :root { --cell: 90px; }
      .hero-headline { font-size: 56px; }
    }

    @media (max-width: 1400px) {
      :root { --cell: 80px; }
      .hero-headline { font-size: 48px; }
      .hero-content { max-width: 380px; }
    }

    @media (max-width: 1200px) {
      :root { --cell: 70px; }
      .hero-headline { font-size: 42px; }
    }

    @media (max-width: 1000px) {
      .cards-container, .hero-grid { display: none; }
      .hero { justify-content: center; padding: 120px 24px; }
      .hero-content { max-width: 100%; text-align: center; }
      .hero-buttons { justify-content: center; }
    }

    @media (max-width: 600px) {
      .hero-headline { font-size: 36px; }
      .hero-sub { font-size: 16px; }
      .hero-buttons { flex-direction: column; }
      .btn { width: 100%; justify-content: center; }
    }
  </style>
</head>

<body>
  <Nav />

  <section class="hero">
    <div class="hero-grid"></div>

    <div class="hero-content">
      <h1 class="hero-headline">Your calls,<br><em>working for you</em></h1>
      <p class="hero-sub">Every sales call triggers AI agents that update your CRM, alert your team, and draft follow-upsâ€”automatically.</p>
      <div class="hero-buttons">
        <a href="#" class="btn btn-primary">Book a Demo</a>
        <a href="#how-it-works" class="btn btn-secondary">See How It Works</a>
      </div>
    </div>

    <div class="cards-container">
      <div class="card-slot" data-pos="0" id="slot-0"></div>
      <div class="card-slot" data-pos="1" id="slot-1"></div>
      <div class="card-slot" data-pos="2" id="slot-2"></div>
    </div>
  </section>

  <Footer />

  <script>
    const cards = [
      { src: '/cards/card-01-call-trigger.svg', color: 'mint' },
      { src: '/cards/card-02-intel-agent.svg', color: 'purple' },
      { src: '/cards/card-03-crm-agent.svg', color: 'cyan' },
      { src: '/cards/card-04-risk-agent.svg', color: 'coral' },
      { src: '/cards/card-05-email-agent.svg', color: 'yellow' },
      { src: '/cards/card-06-coaching-agent.svg', color: 'purple' },
      { src: '/cards/card-07-multithread-agent.svg', color: 'mint' },
      { src: '/cards/card-08-quote-agent.svg', color: 'cyan' },
      { src: '/cards/card-09-task-agent.svg', color: 'coral' },
      { src: '/cards/card-10-prep-agent.svg', color: 'yellow' },
    ];

    const foldDirs = ['from-left', 'from-top', 'from-right', 'from-left', 'from-bottom', 'from-right'];
    
    let currentCards = [0, 1, 2];
    let animTypes = ['pixel', 'fold', 'pixel']; // alternate

    function shuffle(arr) {
      const a = [...arr];
      for (let i = a.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [a[i], a[j]] = [a[j], a[i]];
      }
      return a;
    }

    function buildPixelCard(card) {
      let pixels = '';
      for (let i = 0; i < 96; i++) {
        pixels += `<div class="pixel-box ${card.color}" data-i="${i}"></div>`;
      }
      return `
        <div class="card-wrapper" data-anim="pixel">
          <img src="${card.src}" alt="Agent" />
          <div class="pixel-grid">${pixels}</div>
        </div>
      `;
    }

    function buildFoldCard(card) {
      const panels = foldDirs.map((dir, i) => `
        <div class="fold-panel ${dir}" data-i="${i}">
          <div class="fold-panel-inner ${card.color}"></div>
        </div>
      `).join('');
      return `
        <div class="card-wrapper" data-anim="fold">
          <img src="${card.src}" alt="Agent" />
          <div class="fold-grid">${panels}</div>
        </div>
      `;
    }

    // PIXEL IN: pixels appear one by one, then show SVG
    function animatePixelIn(slot, callback) {
      const wrapper = slot.querySelector('.card-wrapper');
      const pixels = slot.querySelectorAll('.pixel-box');
      const img = slot.querySelector('img');
      const indices = shuffle([...Array(96).keys()]);

      // Pixels appear
      indices.forEach((idx, i) => {
        setTimeout(() => {
          pixels[idx].classList.add('visible');
        }, i * 10);
      });

      // After all pixels, show image and hide pixels
      setTimeout(() => {
        wrapper.classList.add('revealed');
        pixels.forEach(p => p.style.opacity = '0');
        if (callback) callback();
      }, 96 * 10 + 200);
    }

    // PIXEL OUT: pixels reappear, then disappear
    function animatePixelOut(slot, callback) {
      const pixels = slot.querySelectorAll('.pixel-box');
      const wrapper = slot.querySelector('.card-wrapper');
      const indices = shuffle([...Array(96).keys()]);

      // Show pixels again
      pixels.forEach(p => p.style.opacity = '');
      wrapper.classList.remove('revealed');

      // Pixels disappear
      setTimeout(() => {
        indices.forEach((idx, i) => {
          setTimeout(() => {
            pixels[idx].classList.remove('visible');
          }, i * 8);
        });
      }, 100);

      setTimeout(() => {
        slot.innerHTML = '';
        if (callback) callback();
      }, 96 * 8 + 300);
    }

    // FOLD IN: panels fold into view, then show SVG
    function animateFoldIn(slot, callback) {
      const wrapper = slot.querySelector('.card-wrapper');
      const panels = slot.querySelectorAll('.fold-panel');
      const img = slot.querySelector('img');

      panels.forEach((panel, i) => {
        setTimeout(() => {
          panel.classList.add('visible');
        }, i * 100);
      });

      // After all panels, show image
      setTimeout(() => {
        wrapper.classList.add('revealed');
        // Hide panels
        panels.forEach(p => p.querySelector('.fold-panel-inner').style.opacity = '0');
        if (callback) callback();
      }, panels.length * 100 + 400);
    }

    // FOLD OUT: panels fold back out
    function animateFoldOut(slot, callback) {
      const panels = Array.from(slot.querySelectorAll('.fold-panel')).reverse();
      const wrapper = slot.querySelector('.card-wrapper');

      // Show panels again
      panels.forEach(p => p.querySelector('.fold-panel-inner').style.opacity = '');
      wrapper.classList.remove('revealed');

      setTimeout(() => {
        panels.forEach((panel, i) => {
          setTimeout(() => {
            panel.classList.remove('visible');
          }, i * 80);
        });
      }, 100);

      setTimeout(() => {
        slot.innerHTML = '';
        if (callback) callback();
      }, panels.length * 80 + 500);
    }

    function showCard(slotIndex, cardIndex, animType) {
      const slot = document.getElementById(`slot-${slotIndex}`);
      const card = cards[cardIndex];

      if (animType === 'pixel') {
        slot.innerHTML = buildPixelCard(card);
        animatePixelIn(slot);
      } else {
        slot.innerHTML = buildFoldCard(card);
        animateFoldIn(slot);
      }
    }

    function hideCard(slotIndex, callback) {
      const slot = document.getElementById(`slot-${slotIndex}`);
      const wrapper = slot.querySelector('.card-wrapper');
      
      if (!wrapper) {
        if (callback) callback();
        return;
      }

      const animType = wrapper.dataset.anim;

      if (animType === 'pixel') {
        animatePixelOut(slot, callback);
      } else {
        animateFoldOut(slot, callback);
      }
    }

    function cycleSlot(slotIndex) {
      hideCard(slotIndex, () => {
        // Pause before showing next card
        setTimeout(() => {
          currentCards[slotIndex] = (currentCards[slotIndex] + 3) % cards.length;
          // Alternate animation type
          animTypes[slotIndex] = animTypes[slotIndex] === 'pixel' ? 'fold' : 'pixel';
          showCard(slotIndex, currentCards[slotIndex], animTypes[slotIndex]);
        }, 800); // 800ms pause with empty slot
      });
    }

    document.addEventListener('DOMContentLoaded', () => {
      // Staggered initial load
      setTimeout(() => showCard(0, 0, 'pixel'), 500);
      setTimeout(() => showCard(1, 1, 'fold'), 900);
      setTimeout(() => showCard(2, 2, 'pixel'), 1300);

      // Cycle on offset timers
      const cycleTime = 6000;
      setTimeout(() => setInterval(() => cycleSlot(0), cycleTime), 5000);
      setTimeout(() => setInterval(() => cycleSlot(1), cycleTime), 6500);
      setTimeout(() => setInterval(() => cycleSlot(2), cycleTime), 8000);
    });
  </script>
</body>
</html>
