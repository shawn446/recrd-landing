---
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import BaseHead from '../components/BaseHead.astro';
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <BaseHead title="Pricing - recrd" description="Simple pricing for AI-powered revenue intelligence. Start with Starter, scale with Advanced." />
  
  <style>
    .beta-banner { text-align: center; padding: 12px 24px; font-size: 14px; }
    .beta-banner strong { font-weight: 600; }
    [data-theme="dark"] .beta-banner { background: var(--mint); color: #0a0a0a; }
    [data-theme="light"] .beta-banner { background: var(--purple); color: #fff; }

    .pricing-header { padding: 120px 48px 60px; text-align: center; }
    .pricing-headline { font-size: 64px; font-weight: 350; line-height: 1.1; letter-spacing: -0.03em; margin-bottom: 20px; }
    .pricing-sub { font-size: 18px; color: var(--text-muted); max-width: 500px; margin: 0 auto 40px; }

    /* Billing Toggle - Tab Style */
    .billing-toggle { display: flex; align-items: center; justify-content: center; gap: 16px; margin-bottom: 16px; }
    .billing-tabs { display: inline-flex; border: 1px solid var(--border); }
    .billing-tab { padding: 10px 24px; font-size: 14px; cursor: pointer; transition: all 0.2s; background: transparent; color: var(--text-muted); }
    .billing-tab.active { background: var(--mint); color: #0a0a0a; font-weight: 500; }
    .billing-tab:not(.active):hover { background: var(--bg-card); }
    .billing-savings { font-family: var(--mono); font-size: 11px; color: var(--mint); background: rgba(70, 252, 175, 0.1); padding: 6px 12px; border: 1px solid var(--mint); text-transform: uppercase; letter-spacing: 0.05em; }

    /* User Counter */
    .user-counter { display: flex; align-items: center; justify-content: center; gap: 24px; padding: 24px; background: var(--bg-card); border: 1px solid var(--border); max-width: 500px; margin: 0 auto 60px; }
    .counter-label { font-size: 14px; color: var(--text-muted); }
    .counter-controls { display: flex; align-items: center; gap: 16px; }
    .counter-btn { width: 36px; height: 36px; display: flex; align-items: center; justify-content: center; background: var(--bg); border: 1px solid var(--border); cursor: pointer; font-size: 18px; transition: all 0.2s; }
    .counter-btn:hover { border-color: var(--mint); color: var(--mint); }
    .counter-btn:disabled { opacity: 0.3; cursor: not-allowed; }
    .counter-value { font-size: 24px; font-weight: 500; min-width: 48px; text-align: center; font-family: var(--mono); }
    .counter-total { text-align: right; }
    .counter-total-label { font-size: 12px; color: var(--text-muted); margin-bottom: 4px; }
    .counter-total-value { font-size: 24px; font-weight: 500; font-family: var(--mono); }
    .counter-total-value .period { font-size: 14px; color: var(--text-muted); font-weight: 400; }

    .pricing-section { padding: 0 48px 80px; }
    .pricing-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 24px; max-width: 1200px; margin: 0 auto; }

    .pricing-card { background: var(--bg-card); border: 1px solid var(--border); padding: 40px 32px; position: relative; transition: border-color 0.2s; }
    .pricing-card.selectable { cursor: pointer; }
    .pricing-card.selectable:hover { border-color: var(--text-muted); }
    .pricing-card.selected { border-color: var(--mint); }
    .pricing-card.featured { border-color: var(--mint); }
    .pricing-badge { position: absolute; top: -12px; left: 50%; transform: translateX(-50%); background: var(--mint); color: #0a0a0a; font-size: 11px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; padding: 6px 16px; }

    .pricing-tier { font-size: 14px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.1em; color: var(--text-muted); margin-bottom: 16px; }
    .pricing-price { display: flex; align-items: baseline; gap: 2px; margin-bottom: 8px; }
    .price-currency { font-size: 24px; font-weight: 500; }
    .price-amount { font-size: 56px; font-weight: 350; letter-spacing: -0.03em; }
    .price-period { font-size: 14px; color: var(--text-muted); }
    .price-original { font-size: 18px; color: var(--text-muted); text-decoration: line-through; margin-bottom: 8px; font-family: var(--mono); }
    .pricing-desc { font-size: 14px; color: var(--text-muted); line-height: 1.6; margin-bottom: 32px; min-height: 44px; }

    .pricing-cta { margin-bottom: 32px; }
    .btn { display: inline-flex; align-items: center; gap: 12px; padding: 16px 28px; font-weight: 500; font-size: 14px; text-decoration: none; transition: all 0.2s ease; cursor: pointer; position: relative; overflow: hidden; width: 100%; justify-content: center; }
    .btn-primary { background: transparent; color: var(--text); border: 1px solid var(--btn-outline); }
    .btn-primary::before { content: ''; position: absolute; top: 0; left: 0; width: 0; height: 100%; background: var(--mint); transition: width 0.3s ease; z-index: 0; }
    .btn-primary:hover::before { width: 100%; }
    .btn-primary:hover { color: #0a0a0a; border-color: var(--mint); }
    .btn-primary span, .btn-primary img { position: relative; z-index: 1; }
    .btn-featured { background: var(--mint); color: #0a0a0a; border: 1px solid var(--mint); font-weight: 600; }
    .btn-featured::before { content: ''; position: absolute; top: 0; left: 0; width: 0; height: 100%; background: #3de09d; transition: width 0.3s ease; z-index: 0; }
    .btn-featured:hover::before { width: 100%; }
    .btn-featured span, .btn-featured img { position: relative; z-index: 1; }
    .btn-secondary { background: transparent; color: var(--text); border: 1px solid var(--btn-outline); }
    .btn-secondary::before { content: ''; position: absolute; top: 0; left: 0; width: 0; height: 100%; background: var(--purple); transition: width 0.3s ease; z-index: 0; }
    .btn-secondary:hover::before { width: 100%; }
    .btn-secondary:hover { color: #fff; border-color: var(--purple); }
    .btn-secondary span, .btn-secondary img { position: relative; z-index: 1; }
    .btn-arrow { display: inline-flex; transition: transform 0.2s ease; }
    .btn-arrow img { width: 16px; height: 16px; }
    .btn:hover .btn-arrow { transform: translateX(4px); }
    .btn-arrow .chevron-hover { display: none; }
    .btn:hover .chevron-default { display: none; }
    .btn:hover .chevron-hover { display: block; }

    .pricing-features { list-style: none; }
    .pricing-features li { display: flex; align-items: flex-start; gap: 12px; padding: 10px 0; border-bottom: 1px solid var(--border); font-size: 14px; }
    .pricing-features li:last-child { border-bottom: none; }
    .check-icon { width: 20px; height: 20px; display: flex; align-items: center; justify-content: center; flex-shrink: 0; }
    .check-icon svg { width: 14px; height: 14px; }
    .check-icon.mint svg { stroke: var(--mint); }
    .check-icon.purple svg { stroke: var(--purple); }
    .feature-highlight { color: var(--mint); font-weight: 500; }

    /* Feature Comparison Table */
    .comparison-section { padding: 80px 48px 120px; border-top: 1px solid var(--border); }
    .comparison-header { text-align: center; margin-bottom: 60px; }
    .comparison-headline { font-size: 40px; font-weight: 350; letter-spacing: -0.02em; margin-bottom: 16px; }
    .comparison-sub { font-size: 16px; color: var(--text-muted); }

    .comparison-table { max-width: 1000px; margin: 0 auto; }
    .comparison-row { display: grid; grid-template-columns: 1.5fr 1fr 1fr 1fr; padding: 16px 0; }
    .comparison-row.header { border-bottom: 1px solid var(--border); padding-bottom: 20px; margin-bottom: 8px; }
    .comparison-row.category { padding: 40px 0 16px; }
    .comparison-row.category:first-of-type { padding-top: 20px; }
    .comparison-cell { display: flex; align-items: center; font-size: 15px; }
    .comparison-cell:not(:first-child) { justify-content: center; }
    .comparison-cell.feature-name { color: var(--text-muted); }
    .comparison-cell.tier-name { font-weight: 600; font-size: 14px; text-transform: uppercase; letter-spacing: 0.05em; }
    .category-name { font-weight: 600; font-size: 18px; color: var(--text); }
    .check { color: var(--mint); font-size: 18px; }
    .dash { color: var(--text-muted); opacity: 0.3; font-size: 18px; }
    .coming-soon-badge { font-family: var(--mono); font-size: 9px; text-transform: uppercase; letter-spacing: 0.05em; padding: 3px 6px; background: var(--border); color: var(--text-muted); margin-left: 8px; }
    .feature-value { font-family: var(--mono); font-size: 14px; }
    .feature-span { grid-column: 2 / 5; text-align: center; color: var(--text-muted); font-size: 14px; }

    .faq-section { padding: 120px 48px; border-top: 1px solid var(--border); }
    .faq-header { text-align: center; margin-bottom: 60px; }
    .faq-headline { font-size: 40px; font-weight: 350; letter-spacing: -0.02em; }
    .faq-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 32px; max-width: 1000px; margin: 0 auto; }
    .faq-item { padding: 24px; background: var(--bg-card); border: 1px solid var(--border); }
    .faq-question { font-size: 16px; font-weight: 600; margin-bottom: 12px; }
    .faq-answer { font-size: 14px; color: var(--text-muted); line-height: 1.6; }

    .cta-section { padding: 120px 48px; background: var(--bg-alt); text-align: center; border-top: 1px solid var(--border); }
    .cta-headline { font-size: 48px; font-weight: 350; line-height: 1.2; letter-spacing: -0.02em; margin-bottom: 20px; }
    .cta-sub { font-size: 18px; color: var(--text-muted); margin-bottom: 40px; }
    .cta-buttons { display: flex; gap: 16px; justify-content: center; }
    .cta-buttons .btn { width: auto; }
    .cta-buttons .btn span { position: relative; z-index: 1; }

    @media (max-width: 1000px) { .pricing-grid { grid-template-columns: 1fr; max-width: 450px; } .comparison-table { overflow-x: auto; } .comparison-row { min-width: 600px; } }
    @media (max-width: 900px) { .pricing-header { padding: 100px 24px 40px; } .pricing-headline { font-size: 44px; } .pricing-section { padding: 0 24px 60px; } .user-counter { flex-direction: column; gap: 16px; margin: 0 24px 40px; max-width: none; } .counter-total { text-align: center; } .comparison-section { padding: 60px 24px 80px; } .faq-section { padding: 80px 24px; } .faq-grid { grid-template-columns: 1fr; } .cta-section { padding: 80px 24px; } .cta-headline { font-size: 32px; } .cta-buttons { flex-direction: column; } .cta-buttons .btn { width: 100%; } }
  </style>
</head>

