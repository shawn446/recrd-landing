  <script>
    // Pricing configuration
    const pricing = {
      starter: { monthly: 29, annual: 24, maxUsers: 5 },
      advanced: { monthly: 79, annual: 65, maxUsers: 25 }
    };

    let isAnnual = false;
    let userCount = 1;
    let selectedTier = 'starter';

    // DOM elements
    const billingTabs = document.querySelectorAll('.billing-tab');
    const decreaseBtn = document.getElementById('decreaseUsers');
    const increaseBtn = document.getElementById('increaseUsers');
    const userCountEl = document.getElementById('userCount');
    const totalPriceEl = document.getElementById('totalPrice');
    const selectedTierLabelEl = document.getElementById('selectedTierLabel');
    const starterPriceEl = document.getElementById('starterPrice');
    const advancedPriceEl = document.getElementById('advancedPrice');
    const starterOriginalEl = document.getElementById('starterOriginal');
    const advancedOriginalEl = document.getElementById('advancedOriginal');
    const pricingCards = document.querySelectorAll('.pricing-card.selectable');

    function updatePrices() {
      const starterPrice = isAnnual ? pricing.starter.annual : pricing.starter.monthly;
      const advancedPrice = isAnnual ? pricing.advanced.annual : pricing.advanced.monthly;

      starterPriceEl.textContent = starterPrice;
      advancedPriceEl.textContent = advancedPrice;

      // Show original price when annual
      if (isAnnual) {
        starterOriginalEl.textContent = `$${pricing.starter.monthly}`;
        starterOriginalEl.style.visibility = 'visible';
        advancedOriginalEl.textContent = `$${pricing.advanced.monthly}`;
        advancedOriginalEl.style.visibility = 'visible';
      } else {
        starterOriginalEl.style.visibility = 'hidden';
        advancedOriginalEl.style.visibility = 'hidden';
      }

      updateTotal();
    }

    function updateTotal() {
      const tierPricing = pricing[selectedTier];
      const price = isAnnual ? tierPricing.annual : tierPricing.monthly;
      const total = price * userCount;
      totalPriceEl.textContent = `$${total.toLocaleString()}`;
    }

    function selectTier(tier) {
      selectedTier = tier;
      
      // Update tier label
      selectedTierLabelEl.textContent = tier.charAt(0).toUpperCase() + tier.slice(1);
      
      // Update card selection state
      pricingCards.forEach(card => {
        card.classList.remove('selected');
        if (card.dataset.tier === tier) {
          card.classList.add('selected');
        }
      });

      // Enforce user limits
      const maxUsers = pricing[tier].maxUsers;
      if (userCount > maxUsers) {
        userCount = maxUsers;
      }
      
      updateUserCount();
    }

    function updateUserCount() {
      userCountEl.textContent = userCount;
      
      // Enable/disable buttons based on tier limits
      const maxUsers = pricing[selectedTier].maxUsers;
      decreaseBtn.disabled = userCount <= 1;
      increaseBtn.disabled = userCount >= maxUsers;
      
      updateTotal();
    }

    // Billing tab events
    billingTabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const billing = tab.dataset.billing;
        isAnnual = billing === 'annual';
        
        billingTabs.forEach(t => t.classList.remove('active'));
        tab.classList.add('active');
        
        updatePrices();
      });
    });

    // Tier card selection
    pricingCards.forEach(card => {
      card.addEventListener('click', (e) => {
        // Don't select if clicking the CTA button
        if (e.target.closest('.btn')) return;
        selectTier(card.dataset.tier);
      });
    });

    // User counter
    decreaseBtn.addEventListener('click', () => {
      if (userCount > 1) {
        userCount--;
        updateUserCount();
      }
    });

    increaseBtn.addEventListener('click', () => {
      const maxUsers = pricing[selectedTier].maxUsers;
      if (userCount < maxUsers) {
        userCount++;
        updateUserCount();
      }
    });

    // Initialize
    updatePrices();
    updateUserCount();
  </script>
