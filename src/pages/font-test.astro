---
// Hero Section - Professional Grid Animation with GSAP + Lenis
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>recrd - AI agents that close deals</title>
  
  <!-- Smooth Scroll -->
  <script src="https://unpkg.com/lenis@1.0.42/dist/lenis.min.js"></script>
  
  <!-- GSAP + ScrollTrigger -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
  
  <style>
    @font-face {
      font-family: 'Roobert';
      src: url('/fonts/Roobert-Regular.woff2') format('woff2');
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: 'Roobert';
      src: url('/fonts/Roobert-Medium.woff2') format('woff2');
      font-weight: 500;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: 'Roobert';
      src: url('/fonts/Roobert-SemiBold.woff2') format('woff2');
      font-weight: 600;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: 'Roobert';
      src: url('/fonts/Roobert-Bold.woff2') format('woff2');
      font-weight: 700;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: 'Fraktion Mono';
      src: url('/fonts/FraktionMono-Regular.woff2') format('woff2');
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }

    :root {
      --font: 'Roobert', -apple-system, BlinkMacSystemFont, sans-serif;
      --mono: 'Fraktion Mono', monospace;
      --mint: #46FCAF;
      --purple: #A678F4;
      --cyan: #02C0FF;
      --coral: #FF4F5E;
      
      /* Grid dimensions - 100px cells */
      --cell: 100px;
      --cols: 7;
      --rows: 6;
    }

    [data-theme="dark"] {
      --bg: #0A0A0A;
      --text: #ffffff;
      --text-muted: #888888;
      --grid-line: rgba(255,255,255,0.12);
    }

    [data-theme="light"] {
      --bg: #fafafa;
      --text: #0a0a0a;
      --text-muted: #666666;
      --grid-line: rgba(0,0,0,0.1);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html.lenis, html.lenis body {
      height: auto;
    }

    body {
      font-family: var(--font);
      background: var(--bg);
      color: var(--text);
      min-height: 100vh;
      overflow-x: hidden;
    }

    /* NAV */
    nav {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      height: 72px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 48px;
      z-index: 100;
      background: var(--bg);
      border-bottom: 1px solid var(--grid-line);
    }

    .nav-logo {
      display: flex;
      align-items: center;
      gap: 12px;
      text-decoration: none;
    }

    .nav-logo svg {
      width: 32px;
      height: 32px;
    }

    .nav-wordmark {
      font-weight: 600;
      font-size: 18px;
      color: var(--text);
    }

    .nav-links {
      display: flex;
      gap: 40px;
      list-style: none;
    }

    .nav-links a {
      color: var(--text-muted);
      text-decoration: none;
      font-size: 14px;
      font-weight: 500;
      transition: color 0.2s;
    }

    .nav-links a:hover {
      color: var(--text);
    }

    .nav-cta {
      background: var(--text);
      color: var(--bg);
      padding: 12px 24px;
      font-weight: 500;
      font-size: 14px;
      text-decoration: none;
      transition: background 0.2s, color 0.2s;
    }

    .nav-cta:hover {
      background: var(--mint);
      color: #0a0a0a;
    }

    /* HERO */
    .hero {
      min-height: 100vh;
      display: flex;
      align-items: center;
      padding: 120px 48px 48px;
      position: relative;
      overflow: hidden;
    }

    .hero-content {
      max-width: 480px;
      z-index: 10;
    }

    .hero-headline {
      font-size: clamp(48px, 8vw, 88px);
      font-weight: 700;
      line-height: 0.95;
      letter-spacing: -0.035em;
      margin-bottom: 24px;
    }

    .hero-headline em {
      font-style: normal;
      color: var(--mint);
    }

    [data-theme="light"] .hero-headline em {
      color: var(--purple);
    }

    .hero-sub {
      font-size: clamp(24px, 3.5vw, 38px);
      font-weight: 500;
      line-height: 1.2;
      margin-bottom: 20px;
      letter-spacing: -0.02em;
    }

    .hero-body {
      font-size: 18px;
      font-weight: 300;
      color: var(--text-muted);
      line-height: 1.6;
      margin-bottom: 40px;
    }

    .hero-buttons {
      display: flex;
      gap: 16px;
    }

    .btn {
      padding: 16px 32px;
      font-family: var(--font);
      font-weight: 500;
      font-size: 15px;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 12px;
      transition: all 0.3s ease;
    }

    .btn-primary {
      background: #fff;
      color: #0a0a0a;
    }

    .btn-primary:hover {
      background: var(--mint);
    }

    .btn-secondary {
      background: transparent;
      color: var(--text);
      border: 1px solid var(--grid-line);
    }

    .btn-secondary:hover {
      border-color: var(--mint);
    }

    [data-theme="light"] .btn-secondary:hover {
      border-color: var(--purple);
    }

    /* ========================================
       GRID ANIMATION SYSTEM
       ======================================== */
    
    .grid-container {
      position: absolute;
      top: 50%;
      right: 5%;
      transform: translateY(-50%);
      /* 7 cols x 6 rows of 100px cells = 700x600 */
      width: 700px;
      height: 600px;
    }

    .grid-svg {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      overflow: visible;
    }

    /* Grid cell outlines */
    .grid-cell-bg {
      fill: none;
      stroke: var(--grid-line);
      stroke-width: 1;
    }

    /* Animated connecting lines */
    .grid-path {
      fill: none;
      stroke-width: 3;
      stroke-linecap: butt;
      stroke-linejoin: miter;
    }

    /* Cell content boxes */
    .cell {
      position: absolute;
      display: flex;
      flex-direction: column;
      justify-content: center;
      padding: 16px;
      opacity: 0;
      transform: scale(0.92);
    }

    .cell-badge {
      font-family: var(--mono);
      font-size: 10px;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      padding: 5px 10px;
      margin-bottom: 10px;
      width: fit-content;
    }

    .cell-title {
      font-size: 16px;
      font-weight: 600;
      line-height: 1.25;
      margin-bottom: 6px;
    }

    .cell-desc {
      font-size: 12px;
      font-weight: 400;
      line-height: 1.4;
      opacity: 0.8;
    }

    /* Cell color variants */
    .cell.mint {
      background: var(--mint);
      color: #0a0a0a;
    }
    .cell.mint .cell-badge {
      background: rgba(0,0,0,0.1);
    }

    .cell.purple {
      background: var(--purple);
      color: #fff;
    }
    .cell.purple .cell-badge {
      background: rgba(255,255,255,0.2);
    }

    .cell.cyan {
      background: var(--cyan);
      color: #0a0a0a;
    }
    .cell.cyan .cell-badge {
      background: rgba(0,0,0,0.1);
    }

    .cell.coral {
      background: var(--coral);
      color: #fff;
    }
    .cell.coral .cell-badge {
      background: rgba(255,255,255,0.2);
    }

    /* Theme toggle */
    .theme-toggle {
      position: fixed;
      bottom: 24px;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      background: var(--bg);
      border: 1px solid var(--grid-line);
      z-index: 1000;
    }

    .theme-toggle button {
      padding: 10px 20px;
      background: none;
      border: none;
      color: var(--text-muted);
      font-family: var(--font);
      font-size: 13px;
      cursor: pointer;
      transition: all 0.2s;
    }

    .theme-toggle button.active {
      background: var(--text);
      color: var(--bg);
    }

    /* ========================================
       RESPONSIVE
       ======================================== */
    @media (max-width: 1400px) {
      .grid-container {
        width: 560px;
        height: 480px;
        right: 3%;
      }
      .grid-container .cell {
        padding: 12px;
      }
      .grid-container .cell-title {
        font-size: 14px;
      }
      .grid-container .cell-desc {
        font-size: 11px;
      }
    }

    @media (max-width: 1100px) {
      .grid-container {
        width: 420px;
        height: 360px;
        right: 2%;
      }
      .grid-container .cell {
        padding: 10px;
      }
      .grid-container .cell-badge {
        font-size: 8px;
        padding: 4px 8px;
        margin-bottom: 6px;
      }
      .grid-container .cell-title {
        font-size: 12px;
        margin-bottom: 4px;
      }
      .grid-container .cell-desc {
        font-size: 10px;
        display: none;
      }
    }

    @media (max-width: 900px) {
      .hero {
        flex-direction: column;
        justify-content: center;
        text-align: center;
        padding: 120px 24px 48px;
      }
      .hero-content {
        max-width: 100%;
      }
      .hero-buttons {
        justify-content: center;
      }
      .grid-container {
        position: relative;
        top: auto;
        right: auto;
        transform: none;
        margin-top: 48px;
        width: 100%;
        max-width: 500px;
        height: auto;
        aspect-ratio: 7/6;
      }
      nav {
        padding: 0 24px;
      }
      .nav-links {
        display: none;
      }
    }

    @media (max-width: 600px) {
      .hero-headline {
        font-size: 40px;
      }
      .hero-sub {
        font-size: 22px;
      }
      .hero-body {
        font-size: 16px;
      }
      .btn {
        padding: 14px 24px;
        font-size: 14px;
      }
      .grid-container .cell-badge {
        font-size: 7px;
      }
      .grid-container .cell-title {
        font-size: 10px;
      }
    }
  </style>
</head>

<body>
  <nav>
    <a href="/" class="nav-logo">
      <svg viewBox="0 0 52 52" fill="none">
        <rect y="16" width="28" height="28" fill="#A678F4"/>
        <rect x="16" width="28" height="28" rx="6" fill="#46FCAF"/>
      </svg>
      <span class="nav-wordmark">recrd</span>
    </a>
    <ul class="nav-links">
      <li><a href="#">Features</a></li>
      <li><a href="#">Pricing</a></li>
      <li><a href="#">Docs</a></li>
      <li><a href="#">Blog</a></li>
    </ul>
    <a href="#" class="nav-cta">Dashboard</a>
  </nav>

  <section class="hero">
    <div class="hero-content">
      <h1 class="hero-headline">AI agents that <em>close deals</em></h1>
      <p class="hero-sub">One call. Six agents. Zero setup.</p>
      <p class="hero-body">Record your sales calls and let AI handle the follow-ups, CRM updates, and coaching insights.</p>
      <div class="hero-buttons">
        <a href="#" class="btn btn-primary">Get Started Free</a>
        <a href="#" class="btn btn-secondary">Watch Demo</a>
      </div>
    </div>

    <!-- Grid Animation -->
    <div class="grid-container">
      <svg class="grid-svg" viewBox="0 0 700 600" preserveAspectRatio="xMidYMid meet">
        <!-- Row 1: 7 cells -->
        <rect class="grid-cell-bg" x="0" y="0" width="100" height="100"/>
        <rect class="grid-cell-bg" x="100" y="0" width="100" height="100"/>
        <rect class="grid-cell-bg" x="200" y="0" width="100" height="100"/>
        <rect class="grid-cell-bg" x="300" y="0" width="100" height="100"/>
        <rect class="grid-cell-bg" x="400" y="0" width="100" height="100"/>
        <rect class="grid-cell-bg" x="500" y="0" width="100" height="100"/>
        <rect class="grid-cell-bg" x="600" y="0" width="100" height="100"/>
        
        <!-- Row 2: 6 cells (offset) -->
        <rect class="grid-cell-bg" x="100" y="100" width="100" height="100"/>
        <rect class="grid-cell-bg" x="200" y="100" width="100" height="100"/>
        <rect class="grid-cell-bg" x="300" y="100" width="100" height="100"/>
        <rect class="grid-cell-bg" x="400" y="100" width="100" height="100"/>
        <rect class="grid-cell-bg" x="500" y="100" width="100" height="100"/>
        <rect class="grid-cell-bg" x="600" y="100" width="100" height="100"/>
        
        <!-- Row 3: 6 cells (offset) -->
        <rect class="grid-cell-bg" x="100" y="200" width="100" height="100"/>
        <rect class="grid-cell-bg" x="200" y="200" width="100" height="100"/>
        <rect class="grid-cell-bg" x="300" y="200" width="100" height="100"/>
        <rect class="grid-cell-bg" x="400" y="200" width="100" height="100"/>
        <rect class="grid-cell-bg" x="500" y="200" width="100" height="100"/>
        <rect class="grid-cell-bg" x="600" y="200" width="100" height="100"/>
        
        <!-- Row 4: 6 cells (offset) -->
        <rect class="grid-cell-bg" x="100" y="300" width="100" height="100"/>
        <rect class="grid-cell-bg" x="200" y="300" width="100" height="100"/>
        <rect class="grid-cell-bg" x="300" y="300" width="100" height="100"/>
        <rect class="grid-cell-bg" x="400" y="300" width="100" height="100"/>
        <rect class="grid-cell-bg" x="500" y="300" width="100" height="100"/>
        <rect class="grid-cell-bg" x="600" y="300" width="100" height="100"/>
        
        <!-- Row 5: 6 cells (offset) -->
        <rect class="grid-cell-bg" x="100" y="400" width="100" height="100"/>
        <rect class="grid-cell-bg" x="200" y="400" width="100" height="100"/>
        <rect class="grid-cell-bg" x="300" y="400" width="100" height="100"/>
        <rect class="grid-cell-bg" x="400" y="400" width="100" height="100"/>
        <rect class="grid-cell-bg" x="500" y="400" width="100" height="100"/>
        <rect class="grid-cell-bg" x="600" y="400" width="100" height="100"/>
        
        <!-- Row 6: 7 cells -->
        <rect class="grid-cell-bg" x="0" y="500" width="100" height="100"/>
        <rect class="grid-cell-bg" x="100" y="500" width="100" height="100"/>
        <rect class="grid-cell-bg" x="200" y="500" width="100" height="100"/>
        <rect class="grid-cell-bg" x="300" y="500" width="100" height="100"/>
        <rect class="grid-cell-bg" x="400" y="500" width="100" height="100"/>
        <rect class="grid-cell-bg" x="500" y="500" width="100" height="100"/>
        <rect class="grid-cell-bg" x="600" y="500" width="100" height="100"/>

        <!-- Animated paths - PIXEL PERFECT on grid lines -->
        <!-- Path 1: Cell1 bottom (100,100) → down → right to Cell2 (200,200) -->
        <path id="path1" class="grid-path" stroke="#46FCAF" d="M 100,100 L 100,200 L 200,200"/>
        
        <!-- Path 2: Cell2 right (400,300) → right to Cell3 (500,300) -->
        <path id="path2" class="grid-path" stroke="#A678F4" d="M 400,300 L 500,300"/>
        
        <!-- Path 3: Cell3 bottom (600,400) → down to Cell4 (600,500) -->
        <path id="path3" class="grid-path" stroke="#02C0FF" d="M 600,400 L 600,500"/>
        
        <!-- Path 4: Cell4 left (500,550) → left to Cell5 (200,550) -->
        <path id="path4" class="grid-path" stroke="#FF4F5E" d="M 500,550 L 200,550"/>
      </svg>

      <!-- Cell Content - positioned with exact pixel values as percentages -->
      <!-- Cell 1: 0,0 - 100x100 -->
      <div class="cell mint" id="cell1" style="left: 0%; top: 0%; width: 14.28%; height: 16.66%;">
        <span class="cell-badge">Incoming</span>
        <span class="cell-title">Sales Call</span>
      </div>

      <!-- Cell 2: 200,200 - 200x100 (2 cells wide) -->
      <div class="cell purple" id="cell2" style="left: 28.57%; top: 33.33%; width: 28.57%; height: 16.66%;">
        <span class="cell-badge">Processing</span>
        <span class="cell-title">recrd analyzes</span>
        <span class="cell-desc">AI extracts insights</span>
      </div>

      <!-- Cell 3: 500,300 - 200x100 (2 cells wide) -->
      <div class="cell cyan" id="cell3" style="left: 71.42%; top: 50%; width: 28.57%; height: 16.66%;">
        <span class="cell-badge">Forecast</span>
        <span class="cell-title">Pipeline updated</span>
        <span class="cell-desc">Deal stage advanced</span>
      </div>

      <!-- Cell 4: 500,500 - 200x100 (2 cells wide) -->
      <div class="cell coral" id="cell4" style="left: 71.42%; top: 83.33%; width: 28.57%; height: 16.66%;">
        <span class="cell-badge">Risk Alert</span>
        <span class="cell-title">Manager notified</span>
        <span class="cell-desc">Budget flagged</span>
      </div>

      <!-- Cell 5: 0,500 - 200x100 (2 cells wide) -->
      <div class="cell mint" id="cell5" style="left: 0%; top: 83.33%; width: 28.57%; height: 16.66%;">
        <span class="cell-badge">Content</span>
        <span class="cell-title">Marketing alerted</span>
        <span class="cell-desc">Quote captured</span>
      </div>
    </div>
  </section>

  <div class="theme-toggle">
    <button id="btn-dark" class="active" onclick="setTheme('dark')">Dark</button>
    <button id="btn-light" onclick="setTheme('light')">Light</button>
  </div>

  <script>
    // Theme toggle
    function setTheme(theme) {
      document.documentElement.setAttribute('data-theme', theme);
      document.getElementById('btn-dark').classList.toggle('active', theme === 'dark');
      document.getElementById('btn-light').classList.toggle('active', theme === 'light');
    }

    // Initialize Lenis smooth scroll
    const lenis = new Lenis({
      duration: 1.2,
      easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
      smoothWheel: true,
    });

    function raf(time) {
      lenis.raf(time);
      requestAnimationFrame(raf);
    }
    requestAnimationFrame(raf);

    // GSAP Animation
    gsap.registerPlugin(ScrollTrigger);

    // Set initial states
    gsap.set('.cell', { opacity: 0, scale: 0.92 });
    gsap.set('.grid-path', { strokeDasharray: 1000, strokeDashoffset: 1000 });

    // Create master timeline that loops
    function createTimeline() {
      const tl = gsap.timeline({
        repeat: -1,
        repeatDelay: 2.5,
        onRepeat: () => {
          // Reset everything before repeat
          gsap.set('.cell', { opacity: 0, scale: 0.92 });
          gsap.set('.grid-path', { strokeDashoffset: 1000 });
        }
      });

      // Cell 1 fades in
      tl.to('#cell1', {
        opacity: 1,
        scale: 1,
        duration: 0.8,
        ease: 'power2.out'
      });

      // Path 1 draws (starts slightly before cell1 finishes)
      tl.to('#path1', {
        strokeDashoffset: 0,
        duration: 1.8,
        ease: 'power1.inOut'
      }, '-=0.2');

      // Cell 2 fades in as path arrives
      tl.to('#cell2', {
        opacity: 1,
        scale: 1,
        duration: 0.8,
        ease: 'power2.out'
      }, '-=0.4');

      // Path 2 draws
      tl.to('#path2', {
        strokeDashoffset: 0,
        duration: 1.2,
        ease: 'power1.inOut'
      }, '-=0.2');

      // Cell 3 fades in
      tl.to('#cell3', {
        opacity: 1,
        scale: 1,
        duration: 0.8,
        ease: 'power2.out'
      }, '-=0.4');

      // Path 3 draws (short path)
      tl.to('#path3', {
        strokeDashoffset: 0,
        duration: 1,
        ease: 'power1.inOut'
      }, '-=0.2');

      // Cell 4 fades in
      tl.to('#cell4', {
        opacity: 1,
        scale: 1,
        duration: 0.8,
        ease: 'power2.out'
      }, '-=0.3');

      // Path 4 draws (longer path)
      tl.to('#path4', {
        strokeDashoffset: 0,
        duration: 2,
        ease: 'power1.inOut'
      }, '-=0.2');

      // Cell 5 fades in
      tl.to('#cell5', {
        opacity: 1,
        scale: 1,
        duration: 0.8,
        ease: 'power2.out'
      }, '-=0.5');

      return tl;
    }

    // Start animation when page loads
    document.addEventListener('DOMContentLoaded', () => {
      // Small delay to ensure everything is rendered
      setTimeout(createTimeline, 300);
    });
  </script>
</body>
</html>
