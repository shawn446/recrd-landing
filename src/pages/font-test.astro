---
// src/pages/font-test.astro
// Full landing page - Font & Theme Testing
---
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>recrd — AI Agents for Sales</title>
  <style>
    /* ============================================
       FONT FACE DECLARATIONS
       ============================================ */
    
    /* ROOBERT (Displaay) - Variable Font for BOTH headlines and body */
    @font-face {
      font-family: 'Roobert';
      src: url('/fonts/RoobertCollectionVF-TRIAL.woff2') format('woff2');
      font-weight: 100 900;
      font-style: normal;
      font-display: swap;
    }

    /* MATTER (Displaay) - Body alternative */
    @font-face {
      font-family: 'Matter';
      src: url('/fonts/Matter-TRIAL-Light.otf') format('opentype');
      font-weight: 300;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: 'Matter';
      src: url('/fonts/Matter-TRIAL-Regular.otf') format('opentype');
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: 'Matter';
      src: url('/fonts/Matter-TRIAL-Medium.ttf') format('truetype');
      font-weight: 500;
      font-style: normal;
      font-display: swap;
    }

    /* OBJECT SANS (Pangram Pangram) - Headline alternative */
    @font-face {
      font-family: 'Object Sans';
      src: url('/fonts/PPObjectSans-Heavy.otf') format('opentype');
      font-weight: 900;
      font-style: normal;
      font-display: swap;
    }
    @font-face {
      font-family: 'Object Sans';
      src: url('/fonts/PPObjectSans-Regular.otf') format('opentype');
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }

    /* FRAKTION MONO (Pangram Pangram) - Code/Data */
    @font-face {
      font-family: 'Fraktion Mono';
      src: url('/fonts/PPFraktionMono-Regular.otf') format('opentype');
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }

    /* ============================================
       CSS VARIABLES
       ============================================ */
    :root {
      --mint: #46FCAF;
      --purple: #A678F4;
      --cyan: #02C0FF;
      --coral: #FF4F5E;
      --yellow: #FFE869;
      
      /* Switchable fonts */
      --heading-font: 'Roobert', system-ui, sans-serif;
      --heading-weight: 700;
      --body-font: 'Roobert', system-ui, sans-serif;
      --body-weight: 300;
    }

    [data-theme="dark"] {
      --bg: #0A0A0A;
      --bg-elevated: #111111;
      --bg-card: #141414;
      --border: #1e1e1e;
      --border-hover: #2a2a2a;
      --text-primary: #ffffff;
      --text-secondary: #a1a1aa;
      --text-muted: #52525b;
      --accent: var(--mint);
      --accent-text: #0a0a0a;
      --grid-color: rgba(255,255,255,0.03);
      --glow-mint: rgba(70, 252, 175, 0.12);
      --glow-purple: rgba(166, 120, 244, 0.08);
    }

    [data-theme="light"] {
      --bg: #fafafa;
      --bg-elevated: #ffffff;
      --bg-card: #ffffff;
      --border: #e4e4e7;
      --border-hover: #d4d4d8;
      --text-primary: #09090b;
      --text-secondary: #52525b;
      --text-muted: #a1a1aa;
      --accent: #09090b;
      --accent-text: #ffffff;
      --grid-color: rgba(0,0,0,0.04);
      --glow-mint: rgba(70, 252, 175, 0.2);
      --glow-purple: rgba(166, 120, 244, 0.12);
    }

    /* ============================================
       RESET & BASE
       ============================================ */
    * { margin: 0; padding: 0; box-sizing: border-box; }
    html { scroll-behavior: smooth; }

    body {
      background: var(--bg);
      color: var(--text-primary);
      font-family: var(--body-font);
      font-weight: var(--body-weight);
      line-height: 1.6;
      transition: background 0.3s ease, color 0.3s ease;
      overflow-x: hidden;
    }

    /* ============================================
       FLOATING CONTROLS
       ============================================ */
    .controls {
      position: fixed;
      top: 16px;
      right: 16px;
      z-index: 1000;
      display: flex;
      flex-direction: column;
      gap: 8px;
      background: var(--bg-elevated);
      border: 1px solid var(--border);
      border-radius: 14px;
      padding: 14px;
      box-shadow: 0 8px 32px rgba(0,0,0,0.4);
      min-width: 180px;
    }

    .control-row {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 8px;
    }

    .control-label {
      font-size: 10px;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 1px;
      font-family: 'Fraktion Mono', monospace;
    }

    .control-group {
      display: flex;
      gap: 4px;
    }

    .control-btn {
      background: transparent;
      border: 1px solid var(--border);
      color: var(--text-muted);
      padding: 6px 10px;
      font-size: 10px;
      font-family: 'Fraktion Mono', monospace;
      cursor: pointer;
      border-radius: 6px;
      transition: all 0.2s;
    }

    .control-btn:hover {
      color: var(--text-secondary);
      border-color: var(--border-hover);
    }

    .control-btn.active {
      background: var(--accent);
      color: var(--accent-text);
      border-color: var(--accent);
    }

    .control-divider {
      height: 1px;
      background: var(--border);
      margin: 4px 0;
    }

    /* ============================================
       NAV
       ============================================ */
    .nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 18px 32px;
      border-bottom: 1px solid var(--border);
      position: relative;
      z-index: 10;
    }

    .nav-logo {
      font-family: var(--heading-font);
      font-weight: var(--heading-weight);
      font-size: 24px;
      letter-spacing: -0.03em;
      color: var(--text-primary);
      text-decoration: none;
    }

    .nav-links {
      display: flex;
      gap: 32px;
      list-style: none;
    }

    .nav-links a {
      color: var(--text-secondary);
      text-decoration: none;
      font-size: 14px;
      font-weight: 400;
      transition: color 0.2s;
    }

    .nav-links a:hover { color: var(--text-primary); }

    .nav-cta {
      background: var(--accent);
      color: var(--accent-text);
      padding: 10px 20px;
      font-family: var(--body-font);
      font-weight: 500;
      font-size: 13px;
      text-decoration: none;
      transition: all 0.2s;
    }

    .nav-cta:hover { opacity: 0.9; }

    /* ============================================
       HERO
       ============================================ */
    .hero {
      position: relative;
      padding: 120px 32px 100px;
      text-align: center;
      overflow: hidden;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .hero-grid {
      position: absolute;
      inset: 0;
      background-image: 
        linear-gradient(var(--grid-color) 1px, transparent 1px),
        linear-gradient(90deg, var(--grid-color) 1px, transparent 1px);
      background-size: 64px 64px;
      mask-image: radial-gradient(ellipse 80% 60% at 50% 40%, black 30%, transparent 70%);
      -webkit-mask-image: radial-gradient(ellipse 80% 60% at 50% 40%, black 30%, transparent 70%);
    }

    .hero-blob-1 {
      position: absolute;
      top: -25%;
      left: 50%;
      transform: translateX(-50%);
      width: 900px;
      height: 900px;
      background: radial-gradient(circle, var(--glow-mint) 0%, transparent 55%);
      pointer-events: none;
      animation: float 12s ease-in-out infinite;
    }

    .hero-blob-2 {
      position: absolute;
      bottom: -20%;
      right: -15%;
      width: 700px;
      height: 700px;
      background: radial-gradient(circle, var(--glow-purple) 0%, transparent 55%);
      pointer-events: none;
      animation: float 15s ease-in-out infinite reverse;
    }

    @keyframes float {
      0%, 100% { transform: translateX(-50%) translateY(0); }
      50% { transform: translateX(-50%) translateY(-30px); }
    }

    .hero-content {
      position: relative;
      z-index: 1;
      max-width: 900px;
      margin: 0 auto;
    }

    .hero-badge {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      background: var(--bg-elevated);
      border: 1px solid var(--border);
      padding: 10px 18px;
      border-radius: 100px;
      font-size: 13px;
      color: var(--text-secondary);
      margin-bottom: 32px;
    }

    .hero-badge-dot {
      width: 8px;
      height: 8px;
      background: var(--mint);
      border-radius: 50%;
      animation: pulse 2s infinite;
    }

    @keyframes pulse {
      0%, 100% { opacity: 1; transform: scale(1); }
      50% { opacity: 0.5; transform: scale(1.3); }
    }

    .hero-headline {
      font-family: var(--heading-font);
      font-weight: var(--heading-weight);
      font-size: clamp(40px, 8vw, 76px);
      letter-spacing: -0.035em;
      line-height: 0.95;
      margin-bottom: 24px;
    }

    .hero-headline em {
      font-style: normal;
      color: var(--mint);
    }

    .hero-sub {
      font-size: clamp(17px, 2.5vw, 21px);
      font-weight: var(--body-weight);
      color: var(--text-secondary);
      max-width: 560px;
      margin: 0 auto 40px;
      line-height: 1.6;
    }

    .hero-capture {
      display: flex;
      gap: 0;
      max-width: 420px;
      margin: 0 auto;
    }

    .hero-capture input {
      flex: 1;
      padding: 16px 20px;
      background: var(--bg-elevated);
      border: 1px solid var(--border);
      border-right: none;
      color: var(--text-primary);
      font-size: 14px;
      font-family: var(--body-font);
      font-weight: 400;
      outline: none;
      min-width: 0;
    }

    .hero-capture input::placeholder { color: var(--text-muted); }
    .hero-capture input:focus { border-color: var(--mint); }

    .hero-capture button {
      padding: 16px 24px;
      background: var(--accent);
      color: var(--accent-text);
      border: none;
      font-family: var(--body-font);
      font-weight: 500;
      font-size: 14px;
      cursor: pointer;
      transition: all 0.2s;
      white-space: nowrap;
    }

    .hero-capture button:hover { opacity: 0.9; }

    /* ============================================
       ECOSYSTEM VISUAL
       ============================================ */
    .ecosystem {
      position: relative;
      z-index: 1;
      max-width: 950px;
      margin: 80px auto 0;
    }

    .eco-center {
      width: 110px;
      height: 110px;
      background: var(--bg-card);
      border: 2px solid var(--mint);
      border-radius: 50%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      margin: 0 auto 50px;
      position: relative;
      box-shadow: 0 0 80px var(--glow-mint);
    }

    .eco-center-icon {
      width: 28px;
      height: 28px;
      color: var(--mint);
    }

    .eco-center-label {
      font-size: 9px;
      color: var(--text-muted);
      margin-top: 6px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      font-family: 'Fraktion Mono', monospace;
    }

    .eco-pulse {
      position: absolute;
      inset: -8px;
      border: 1px solid var(--mint);
      border-radius: 50%;
      opacity: 0;
      animation: ripple 3s ease-out infinite;
    }
    .eco-pulse:nth-child(2) { animation-delay: 1s; }
    .eco-pulse:nth-child(3) { animation-delay: 2s; }

    @keyframes ripple {
      0% { transform: scale(1); opacity: 0.5; }
      100% { transform: scale(2.2); opacity: 0; }
    }

    .agent-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 14px;
    }

    .agent-card {
      background: var(--bg-card);
      border: 1px solid var(--border);
      border-radius: 14px;
      padding: 22px;
      text-align: left;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .agent-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 2px;
      background: var(--card-accent, var(--mint));
      opacity: 0;
      transition: opacity 0.3s;
    }

    .agent-card:hover {
      border-color: var(--border-hover);
      transform: translateY(-4px);
      box-shadow: 0 16px 48px rgba(0,0,0,0.25);
    }

    .agent-card:hover::before { opacity: 1; }

    .agent-card.pink { --card-accent: var(--coral); }
    .agent-card.teal { --card-accent: var(--mint); }
    .agent-card.purple { --card-accent: var(--purple); }
    .agent-card.yellow { --card-accent: var(--yellow); }
    .agent-card.blue { --card-accent: var(--cyan); }

    .agent-header {
      display: flex;
      align-items: center;
      gap: 10px;
      margin-bottom: 14px;
    }

    .agent-icon {
      width: 34px;
      height: 34px;
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .agent-icon svg { width: 17px; height: 17px; }

    .agent-icon.pink { background: rgba(255, 79, 94, 0.12); color: var(--coral); }
    .agent-icon.teal { background: rgba(70, 252, 175, 0.12); color: var(--mint); }
    .agent-icon.purple { background: rgba(166, 120, 244, 0.12); color: var(--purple); }
    .agent-icon.yellow { background: rgba(255, 232, 105, 0.12); color: var(--yellow); }
    .agent-icon.blue { background: rgba(2, 192, 255, 0.12); color: var(--cyan); }

    .agent-status {
      font-family: 'Fraktion Mono', monospace;
      font-size: 9px;
      color: var(--mint);
      text-transform: uppercase;
      letter-spacing: 1px;
      background: rgba(70, 252, 175, 0.08);
      padding: 4px 8px;
      border-radius: 4px;
    }

    .agent-name {
      font-family: var(--heading-font);
      font-weight: 500;
      font-size: 14px;
      color: var(--text-primary);
      margin-bottom: 8px;
    }

    .agent-output {
      font-size: 12px;
      color: var(--text-secondary);
      font-weight: var(--body-weight);
    }

    .agent-output p {
      margin-top: 6px;
      font-style: italic;
      opacity: 0.75;
      font-size: 11px;
    }

    .metric-value {
      font-family: 'Fraktion Mono', monospace;
      font-size: 24px;
      color: var(--mint);
    }

    .metric-label {
      font-size: 11px;
      color: var(--text-muted);
      margin-left: 4px;
    }

    /* ============================================
       SECTION COMMON
       ============================================ */
    .section {
      padding: 120px 32px;
      border-top: 1px solid var(--border);
    }

    .section-header {
      text-align: center;
      margin-bottom: 64px;
    }

    .section-label {
      font-family: 'Fraktion Mono', monospace;
      font-size: 11px;
      text-transform: uppercase;
      letter-spacing: 2px;
      margin-bottom: 16px;
    }

    .section-label.purple { color: var(--purple); }
    .section-label.cyan { color: var(--cyan); }
    .section-label.mint { color: var(--mint); }

    .section-title {
      font-family: var(--heading-font);
      font-weight: var(--heading-weight);
      font-size: clamp(30px, 5vw, 44px);
      letter-spacing: -0.025em;
      max-width: 600px;
      margin: 0 auto;
      line-height: 1.1;
    }

    .section-title em {
      font-style: normal;
      color: var(--mint);
    }

    /* ============================================
       FEATURES
       ============================================ */
    .features-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 20px;
      max-width: 1050px;
      margin: 0 auto;
    }

    .feature-card {
      background: var(--bg-card);
      border: 1px solid var(--border);
      border-radius: 16px;
      padding: 32px;
      transition: all 0.3s ease;
    }

    .feature-card:hover {
      border-color: var(--border-hover);
      transform: translateY(-3px);
    }

    .feature-icon {
      width: 48px;
      height: 48px;
      background: var(--bg-elevated);
      border: 1px solid var(--border);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 20px;
      color: var(--mint);
    }

    .feature-icon svg { width: 24px; height: 24px; }

    .feature-title {
      font-family: var(--heading-font);
      font-weight: 600;
      font-size: 18px;
      margin-bottom: 10px;
    }

    .feature-desc {
      font-size: 14px;
      font-weight: var(--body-weight);
      color: var(--text-secondary);
      line-height: 1.65;
    }

    /* ============================================
       PERSONAS
       ============================================ */
    .personas-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 20px;
      max-width: 1050px;
      margin: 0 auto;
    }

    .persona-card {
      background: var(--bg-card);
      border: 1px solid var(--border);
      border-radius: 16px;
      padding: 32px;
    }

    .persona-title {
      font-family: var(--heading-font);
      font-weight: 600;
      font-size: 20px;
      margin-bottom: 12px;
    }

    .persona-desc {
      font-size: 14px;
      font-weight: var(--body-weight);
      color: var(--text-secondary);
      line-height: 1.65;
      margin-bottom: 20px;
    }

    .persona-pills {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
    }

    .persona-pill {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      background: var(--bg-elevated);
      border: 1px solid var(--border);
      padding: 6px 12px;
      border-radius: 100px;
      font-size: 12px;
      color: var(--text-secondary);
    }

    .persona-pill svg {
      width: 13px;
      height: 13px;
      color: var(--mint);
    }

    /* ============================================
       AGENTS SHOWCASE
       ============================================ */
    .showcase-card {
      max-width: 900px;
      margin: 0 auto;
      background: var(--bg-card);
      border: 1px solid var(--border);
      border-radius: 20px;
      padding: 48px;
      position: relative;
      overflow: hidden;
    }

    .showcase-card::before {
      content: '';
      position: absolute;
      top: -150px;
      right: -150px;
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, var(--glow-purple) 0%, transparent 60%);
      pointer-events: none;
    }

    .showcase-header {
      display: flex;
      align-items: center;
      gap: 12px;
      margin-bottom: 32px;
      position: relative;
    }

    .showcase-badge {
      font-family: 'Fraktion Mono', monospace;
      font-size: 10px;
      text-transform: uppercase;
      letter-spacing: 1.5px;
      color: var(--purple);
      background: rgba(166, 120, 244, 0.1);
      padding: 6px 12px;
      border-radius: 6px;
    }

    .showcase-title {
      font-family: var(--heading-font);
      font-weight: var(--heading-weight);
      font-size: 32px;
      letter-spacing: -0.02em;
      margin-bottom: 8px;
      position: relative;
    }

    .showcase-desc {
      font-size: 16px;
      color: var(--text-secondary);
      margin-bottom: 36px;
      position: relative;
    }

    .showcase-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 12px;
      position: relative;
    }

    .showcase-item {
      display: flex;
      align-items: center;
      gap: 14px;
      background: var(--bg-elevated);
      border: 1px solid var(--border);
      border-radius: 12px;
      padding: 18px 20px;
      transition: all 0.2s;
    }

    .showcase-item:hover {
      border-color: var(--border-hover);
    }

    .showcase-item-icon {
      width: 40px;
      height: 40px;
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
    }

    .showcase-item-icon svg { width: 20px; height: 20px; }

    .showcase-item-icon.pink { background: rgba(255, 79, 94, 0.12); color: var(--coral); }
    .showcase-item-icon.teal { background: rgba(70, 252, 175, 0.12); color: var(--mint); }
    .showcase-item-icon.purple { background: rgba(166, 120, 244, 0.12); color: var(--purple); }
    .showcase-item-icon.yellow { background: rgba(255, 232, 105, 0.12); color: var(--yellow); }

    .showcase-item-text { flex: 1; }

    .showcase-item-title {
      font-family: var(--heading-font);
      font-weight: 500;
      font-size: 14px;
      margin-bottom: 2px;
    }

    .showcase-item-desc {
      font-size: 12px;
      color: var(--text-muted);
    }

    /* ============================================
       CTA
       ============================================ */
    .cta-card {
      max-width: 750px;
      margin: 0 auto;
      background: var(--bg-card);
      border: 1px solid var(--border);
      border-radius: 24px;
      padding: 72px 48px;
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .cta-card::before {
      content: '';
      position: absolute;
      top: -100px;
      left: 50%;
      transform: translateX(-50%);
      width: 500px;
      height: 500px;
      background: radial-gradient(circle, var(--glow-mint) 0%, transparent 60%);
      pointer-events: none;
    }

    .cta-title {
      font-family: var(--heading-font);
      font-weight: var(--heading-weight);
      font-size: clamp(26px, 4vw, 36px);
      letter-spacing: -0.02em;
      margin-bottom: 14px;
      position: relative;
    }

    .cta-sub {
      font-size: 16px;
      font-weight: var(--body-weight);
      color: var(--text-secondary);
      margin-bottom: 32px;
      position: relative;
    }

    .cta-btn {
      display: inline-block;
      background: var(--accent);
      color: var(--accent-text);
      padding: 16px 32px;
      font-family: var(--body-font);
      font-weight: 500;
      font-size: 15px;
      text-decoration: none;
      transition: all 0.2s;
