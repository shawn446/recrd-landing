---
import Nav from './components/Nav.astro';
import Footer from './components/Footer.astro';
import ThemeToggle from './components/ThemeToggle.astro';
import BaseHead from './components/BaseHead.astro';
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <BaseHead title="AI Agents - recrd" description="Pre-built AI agents for sales teams. CRM sync, risk alerts, coaching, follow-ups, and more. Deploy with one click." />
  
  <style>
    .hero { padding: 160px 48px 100px; text-align: center; max-width: 900px; margin: 0 auto; }
    .hero-badge { display: inline-flex; align-items: center; gap: 10px; padding: 8px 16px; background: var(--bg-card); border: 1px solid var(--border); font-family: var(--mono); font-size: 12px; text-transform: uppercase; letter-spacing: 0.1em; margin-bottom: 32px; }
    .hero-badge-dot { width: 8px; height: 8px; background: var(--mint); border-radius: 50%; animation: pulse 2s infinite; }
    @keyframes pulse { 0%, 100% { opacity: 1; } 50% { opacity: 0.5; } }
    .hero-headline { font-size: 64px; font-weight: 350; line-height: 1.1; letter-spacing: -0.03em; margin-bottom: 24px; }
    .hero-headline em { font-style: normal; color: var(--purple); }
    [data-theme="light"] .hero-headline em { color: var(--purple); }
    .hero-sub { font-size: 20px; color: var(--text-muted); line-height: 1.6; max-width: 600px; margin: 0 auto; }

    .agents-section { padding: 80px 48px 120px; }
    .section-header { text-align: center; margin-bottom: 60px; }
    .section-label { font-family: var(--mono); font-size: 12px; text-transform: uppercase; letter-spacing: 0.15em; color: var(--text-muted); margin-bottom: 16px; }
    .section-headline { font-size: 36px; font-weight: 350; line-height: 1.2; letter-spacing: -0.02em; }

    .agents-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1px; background: var(--border); max-width: 1200px; margin: 0 auto; }
    .agent-card { background: var(--bg); padding: 32px; position: relative; }
    .agent-card:hover { background: var(--bg-card); }
    .agent-header { display: flex; align-items: flex-start; justify-content: space-between; margin-bottom: 16px; }
    .agent-icon { width: 40px; height: 40px; }
    .agent-status { font-family: var(--mono); font-size: 10px; text-transform: uppercase; letter-spacing: 0.05em; padding: 4px 10px; }
    .agent-status.active { background: var(--mint); color: #0a0a0a; }
    .agent-status.soon { background: var(--border); color: var(--text-muted); }
    .agent-name { font-size: 18px; font-weight: 600; margin-bottom: 8px; letter-spacing: -0.01em; }
    .agent-desc { font-size: 14px; color: var(--text-muted); line-height: 1.5; margin-bottom: 16px; }
    .agent-tags { display: flex; gap: 8px; flex-wrap: wrap; }
    .agent-tag { font-family: var(--mono); font-size: 10px; text-transform: uppercase; letter-spacing: 0.05em; padding: 4px 8px; background: var(--bg-card); border: 1px solid var(--border); color: var(--text-muted); }

    .workflow-section { padding: 120px 48px; background: var(--bg-alt); border-top: 1px solid var(--border); }
    .workflow-container { max-width: 1100px; margin: 0 auto; display: grid; grid-template-columns: 1.2fr 1fr; gap: 80px; align-items: center; }
    .workflow-content { max-width: 450px; }
    .workflow-headline { font-size: 36px; font-weight: 350; line-height: 1.2; letter-spacing: -0.02em; margin-bottom: 20px; }
    .workflow-desc { font-size: 16px; color: var(--text-muted); line-height: 1.7; margin-bottom: 32px; }
    .workflow-features { list-style: none; }
    .workflow-features li { display: flex; align-items: center; gap: 12px; padding: 12px 0; border-bottom: 1px solid var(--border); font-size: 15px; }
    .workflow-features li:last-child { border-bottom: none; }
    .workflow-check { width: 20px; height: 20px; background: var(--purple); display: flex; align-items: center; justify-content: center; }
    .workflow-check svg { width: 12px; height: 12px; stroke: #fff; stroke-width: 3; }
    .workflow-cta { margin-top: 32px; }
    
    .workflow-visual { background: var(--bg); border: 1px solid var(--border); padding: 24px; }
    .workflow-mock { display: flex; align-items: center; gap: 16px; flex-wrap: wrap; }
    .workflow-step { background: var(--bg-card); border: 1px solid var(--border); padding: 16px; text-align: center; min-width: 100px; }
    .workflow-step-icon { font-size: 20px; margin-bottom: 8px; }
    .workflow-step-label { font-size: 11px; color: var(--text-muted); text-transform: uppercase; letter-spacing: 0.05em; }
    .workflow-arrow { color: var(--text-muted); font-size: 20px; }

    .request-section { padding: 100px 48px; border-top: 1px solid var(--border); text-align: center; }
    .request-headline { font-size: 32px; font-weight: 350; letter-spacing: -0.02em; margin-bottom: 32px; }
    .request-buttons { display: flex; gap: 16px; justify-content: center; }

    .btn { display: inline-flex; align-items: center; gap: 12px; padding: 18px 28px; font-weight: 500; font-size: 15px; text-decoration: none; transition: all 0.2s ease; cursor: pointer; position: relative; overflow: hidden; }
    .btn-primary { background: transparent; color: var(--text); border: 1px solid var(--btn-outline); }
    .btn-primary::before { content: ''; position: absolute; top: 0; left: 0; width: 0; height: 100%; background: var(--purple); transition: width 0.3s ease; z-index: -1; }
    .btn-primary:hover::before { width: 100%; }
    .btn-primary:hover { color: #fff; border-color: var(--purple); }
    .btn-secondary { background: transparent; color: var(--text); border: 1px solid var(--btn-outline); }
    .btn-secondary::before { content: ''; position: absolute; top: 0; left: 0; width: 0; height: 100%; background: var(--mint); transition: width 0.3s ease; z-index: -1; }
    .btn-secondary:hover::before { width: 100%; }
    .btn-secondary:hover { color: #0a0a0a; border-color: var(--mint); }
    .btn-arrow { display: inline-flex; transition: transform 0.2s ease; }
    .btn:hover .btn-arrow { transform: translateX(4px); }

    @media (max-width: 1000px) { .agents-grid { grid-template-columns: repeat(2, 1fr); } .workflow-container { grid-template-columns: 1fr; gap: 48px; } }
    @media (max-width: 900px) { .hero { padding: 140px 24px 80px; } .hero-headline { font-size: 44px; } .agents-section { padding: 60px 24px 80px; } .agents-grid { grid-template-columns: 1fr; } .workflow-section { padding: 80px 24px; } .request-section { padding: 80px 24px; } .request-buttons { flex-direction: column; } .btn { width: 100%; justify-content: center; } }
  </style>
</head>

<body>
  <Nav />

  <section class="hero">
    <div class="hero-badge"><span class="hero-badge-dot"></span> Agent Marketplace</div>
    <h1 class="hero-headline">Your AI <em>sales team</em></h1>
    <p class="hero-sub">Pre-built agents that work out of the box. Enable with one click, or build your own custom workflows.</p>
  </section>

  <section class="agents-section">
    <div class="section-header">
      <p class="section-label">Pre-Built Agents</p>
      <h2 class="section-headline">Deploy in seconds, not sprints</h2>
    </div>
    <div class="agents-grid">
      <div class="agent-card">
        <div class="agent-header">
          <div class="agent-icon"><svg viewBox="0 0 40 40" fill="none"><rect x="4" y="4" width="32" height="6" fill="var(--mint)"/><rect x="4" y="12" width="32" height="6" fill="var(--mint)" opacity="0.7"/><rect x="4" y="20" width="32" height="6" fill="var(--mint)" opacity="0.5"/><rect x="26" y="30" width="10" height="6" fill="var(--purple)"/></svg></div>
          <span class="agent-status active">Active</span>
        </div>
        <h3 class="agent-name">CRM Sync Agent</h3>
        <p class="agent-desc">Auto-updates HubSpot or Salesforce with MEDDIC fields, deal stage, and next steps. 12+ fields synced per call.</p>
        <div class="agent-tags"><span class="agent-tag">Post-call</span><span class="agent-tag">‚Üí CRM</span></div>
      </div>
      <div class="agent-card">
        <div class="agent-header">
          <div class="agent-icon"><svg viewBox="0 0 40 40" fill="none"><rect x="16" y="2" width="8" height="4" fill="var(--coral)"/><rect x="12" y="6" width="16" height="4" fill="var(--coral)"/><rect x="8" y="10" width="24" height="14" fill="var(--coral)"/><rect x="4" y="24" width="32" height="4" fill="var(--coral)"/><rect x="16" y="28" width="8" height="4" fill="var(--coral)"/></svg></div>
          <span class="agent-status active">Active</span>
        </div>
        <h3 class="agent-name">Risk Alert Agent</h3>
        <p class="agent-desc">Detects budget objections, competitor mentions, ghosting signals and sends instant Slack alerts.</p>
        <div class="agent-tags"><span class="agent-tag">Real-time</span><span class="agent-tag">‚Üí Slack</span></div>
      </div>
      <div class="agent-card">
        <div class="agent-header">
          <div class="agent-icon"><svg viewBox="0 0 40 40" fill="none"><rect x="4" y="30" width="6" height="6" fill="var(--cyan)" opacity="0.4"/><rect x="12" y="24" width="6" height="12" fill="var(--cyan)" opacity="0.6"/><rect x="20" y="16" width="6" height="20" fill="var(--cyan)" opacity="0.8"/><rect x="28" y="6" width="6" height="30" fill="var(--cyan)"/></svg></div>
          <span class="agent-status active">Active</span>
        </div>
        <h3 class="agent-name">Coaching Agent</h3>
        <p class="agent-desc">Scores every call against MEDDIC, BANT, or custom frameworks. Surfaces specific coaching recommendations.</p>
        <div class="agent-tags"><span class="agent-tag">Post-call</span><span class="agent-tag">‚Üí Dashboard</span></div>
      </div>
      <div class="agent-card">
        <div class="agent-header">
          <div class="agent-icon"><svg viewBox="0 0 40 40" fill="none"><rect x="4" y="8" width="32" height="4" fill="var(--yellow)"/><rect x="4" y="12" width="4" height="16" fill="var(--yellow)"/><rect x="32" y="12" width="4" height="16" fill="var(--yellow)"/><rect x="4" y="28" width="32" height="4" fill="var(--yellow)"/><rect x="26" y="2" width="10" height="10" fill="var(--mint)"/></svg></div>
          <span class="agent-status active">Active</span>
        </div>
        <h3 class="agent-name">Follow-Up Agent</h3>
        <p class="agent-desc">Drafts personalized follow-up emails within 60 seconds of call end. References specific conversation points.</p>
        <div class="agent-tags"><span class="agent-tag">Post-call</span><span class="agent-tag">‚Üí Email</span></div>
      </div>
      <div class="agent-card">
        <div class="agent-header">
          <div class="agent-icon"><svg viewBox="0 0 40 40" fill="none"><rect x="4" y="4" width="32" height="32" fill="var(--purple)" opacity="0.2"/><rect x="8" y="12" width="20" height="3" fill="var(--purple)"/><rect x="8" y="18" width="14" height="3" fill="var(--purple)" opacity="0.7"/><rect x="8" y="24" width="16" height="3" fill="var(--purple)" opacity="0.5"/></svg></div>
          <span class="agent-status active">Active</span>
        </div>
        <h3 class="agent-name">Meeting Prep Agent</h3>
        <p class="agent-desc">Sends pre-meeting briefs with past interactions, stakeholder context, and suggested talking points.</p>
        <div class="agent-tags"><span class="agent-tag">Pre-meeting</span><span class="agent-tag">‚Üí Email</span></div>
      </div>
      <div class="agent-card">
        <div class="agent-header">
          <div class="agent-icon"><svg viewBox="0 0 40 40" fill="none"><rect x="4" y="16" width="14" height="14" fill="var(--coral)" opacity="0.6"/><rect x="22" y="8" width="14" height="14" fill="var(--purple)" opacity="0.6"/><rect x="10" y="16" width="12" height="8" fill="var(--coral)"/></svg></div>
          <span class="agent-status active">Active</span>
        </div>
        <h3 class="agent-name">Competitor Agent</h3>
        <p class="agent-desc">Flags every competitor mention, tracks positioning, objections, and win/loss patterns across all calls.</p>
        <div class="agent-tags"><span class="agent-tag">Real-time</span><span class="agent-tag">‚Üí Dashboard</span></div>
      </div>
      <div class="agent-card">
        <div class="agent-header">
          <div class="agent-icon"><svg viewBox="0 0 40 40" fill="none"><rect x="4" y="18" width="6" height="4" fill="var(--mint)"/><rect x="12" y="14" width="6" height="12" fill="var(--mint)"/><rect x="20" y="8" width="6" height="24" fill="var(--mint)"/><rect x="28" y="4" width="6" height="32" fill="var(--mint)"/></svg></div>
          <span class="agent-status active">Active</span>
        </div>
        <h3 class="agent-name">Deal Signal Agent</h3>
        <p class="agent-desc">Detects 50+ buying signals and logs them to your CRM. Momentum shifts, champion emergence, and more.</p>
        <div class="agent-tags"><span class="agent-tag">Real-time</span><span class="agent-tag">‚Üí CRM</span></div>
      </div>
      <div class="agent-card">
        <div class="agent-header">
          <div class="agent-icon"><svg viewBox="0 0 40 40" fill="none"><rect x="4" y="32" width="32" height="2" fill="var(--yellow)"/><rect x="4" y="6" width="2" height="28" fill="var(--yellow)"/><rect x="8" y="24" width="4" height="4" fill="var(--yellow)"/><rect x="14" y="20" width="4" height="4" fill="var(--yellow)"/><rect x="20" y="14" width="4" height="4" fill="var(--yellow)"/><rect x="26" y="10" width="4" height="4" fill="var(--mint)"/></svg></div>
          <span class="agent-status active">Active</span>
        </div>
        <h3 class="agent-name">Forecast Agent</h3>
        <p class="agent-desc">AI-weighted pipeline predictions based on deal signals and engagement patterns. Updates daily.</p>
        <div class="agent-tags"><span class="agent-tag">Daily</span><span class="agent-tag">‚Üí Dashboard</span></div>
      </div>
      <div class="agent-card">
        <div class="agent-header">
          <div class="agent-icon"><svg viewBox="0 0 40 40" fill="none"><rect x="16" y="2" width="8" height="8" fill="var(--cyan)"/><rect x="4" y="16" width="8" height="8" fill="var(--cyan)" opacity="0.7"/><rect x="28" y="16" width="8" height="8" fill="var(--cyan)" opacity="0.7"/><rect x="10" y="30" width="8" height="8" fill="var(--cyan)" opacity="0.5"/><rect x="22" y="30" width="8" height="8" fill="var(--cyan)" opacity="0.5"/></svg></div>
          <span class="agent-status soon">Coming Soon</span>
        </div>
        <h3 class="agent-name">Stakeholder Agent</h3>
        <p class="agent-desc">Auto-maps the buying committee from call mentions. Tracks relationships and engagement levels.</p>
        <div class="agent-tags"><span class="agent-tag">Post-call</span><span class="agent-tag">‚Üí CRM</span></div>
      </div>
    </div>
  </section>

  <section class="workflow-section">
    <div class="workflow-container">
      <div class="workflow-content">
        <p class="section-label">Custom Workflows</p>
        <h2 class="workflow-headline">Build your own agents</h2>
        <p class="workflow-desc">Connect triggers, conditions, and outputs to create workflows that match exactly how your team sells.</p>
        <ul class="workflow-features">
          <li><span class="workflow-check"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><polyline points="20 6 9 17 4 12"/></svg></span>Custom triggers (call ends, scheduled, deal events)</li>
          <li><span class="workflow-check"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><polyline points="20 6 9 17 4 12"/></svg></span>Chain multiple agents together</li>
          <li><span class="workflow-check"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><polyline points="20 6 9 17 4 12"/></svg></span>Conditional logic (if deal > $50k, then...)</li>
          <li><span class="workflow-check"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor"><polyline points="20 6 9 17 4 12"/></svg></span>Webhook outputs to any system</li>
        </ul>
        <div class="workflow-cta">
          <a href="/#contact" class="btn btn-primary">Request Early Access <span class="btn-arrow"><svg width="10" height="10" viewBox="0 0 10 10" fill="none"><rect x="2" y="0" width="2" height="2" fill="currentColor"/><rect x="4" y="2" width="2" height="2" fill="currentColor"/><rect x="6" y="4" width="2" height="2" fill="currentColor"/><rect x="4" y="6" width="2" height="2" fill="currentColor"/><rect x="2" y="8" width="2" height="2" fill="currentColor"/></svg></span></a>
        </div>
      </div>
      <div class="workflow-visual">
        <div class="workflow-mock">
          <div class="workflow-step"><div class="workflow-step-icon">üéØ</div><div class="workflow-step-label">Trigger</div></div>
          <span class="workflow-arrow">‚Üí</span>
          <div class="workflow-step"><div class="workflow-step-icon">üîç</div><div class="workflow-step-label">Analyze</div></div>
          <span class="workflow-arrow">‚Üí</span>
          <div class="workflow-step"><div class="workflow-step-icon">‚ö°</div><div class="workflow-step-label">Condition</div></div>
          <span class="workflow-arrow">‚Üí</span>
          <div class="workflow-step"><div class="workflow-step-icon">üì§</div><div class="workflow-step-label">Output</div></div>
        </div>
      </div>
    </div>
  </section>

  <section class="request-section">
    <h2 class="request-headline">Need a custom agent?</h2>
    <div class="request-buttons">
      <a href="/#contact" class="btn btn-primary">Request an Agent <span class="btn-arrow"><svg width="10" height="10" viewBox="0 0 10 10" fill="none"><rect x="2" y="0" width="2" height="2" fill="currentColor"/><rect x="4" y="2" width="2" height="2" fill="currentColor"/><rect x="6" y="4" width="2" height="2" fill="currentColor"/><rect x="4" y="6" width="2" height="2" fill="currentColor"/><rect x="2" y="8" width="2" height="2" fill="currentColor"/></svg></span></a>
      <a href="/#contact" class="btn btn-secondary">Talk to Sales <span class="btn-arrow"><svg width="10" height="10" viewBox="0 0 10 10" fill="none"><rect x="2" y="0" width="2" height="2" fill="currentColor"/><rect x="4" y="2" width="2" height="2" fill="currentColor"/><rect x="6" y="4" width="2" height="2" fill="currentColor"/><rect x="4" y="6" width="2" height="2" fill="currentColor"/><rect x="2" y="8" width="2" height="2" fill="currentColor"/></svg></span></a>
    </div>
  </section>

  <Footer />
  <ThemeToggle />
</body>
</html>
