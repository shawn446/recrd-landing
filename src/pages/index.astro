  <script>
    // Card data - SVG paths and colors
    // Order ensures no same colors adjacent when cycling
    const cards = [
      { src: '/cards/card-01-call-trigger.svg', color: 'mint' },
      { src: '/cards/card-04-risk-agent.svg', color: 'coral' },
      { src: '/cards/card-02-intel-agent.svg', color: 'purple' },
      { src: '/cards/card-06-scorecard-agent.svg', color: 'dark' },
      { src: '/cards/card-03-crm-agent.svg', color: 'cyan' },
      { src: '/cards/card-05-email-agent.svg', color: 'yellow' },
      { src: '/cards/card-08-quote-agent.svg', color: 'purple' },
      { src: '/cards/card-07-multithread-agent.svg', color: 'mint' },
      { src: '/cards/card-10-prep-agent.svg', color: 'yellow' },
      { src: '/cards/card-09-task-agent.svg', color: 'cyan' },
    ];

    // Build card: SVG image + colored panels overlay
    // Panels START covering the SVG, then fold away
    function buildCard(cardData) {
      const foldDirs = ['from-left', 'from-left', 'from-top', 'from-left', 'from-top', 'from-left'];
      
      const panels = foldDirs.map((dir, i) => `
        <div class="card-panel ${dir}" data-index="${i}">
          <div class="panel-inner ${cardData.color}"></div>
        </div>
      `).join('');

      return `
        <img src="${cardData.src}" alt="Agent card" />
        <div class="fold-grid">${panels}</div>
      `;
    }

    const UNFOLD_DELAY = 80;
    const CARD_STAGGER = 600;
    const DISPLAY_TIME = 3500;

    let slotCards = [0, 1, 2];
    let nextCardIndex = 3;

    // Panels fold AWAY to reveal SVG
    function unfoldCard(slot) {
      const panels = slot.querySelectorAll('.card-panel');
      slot.classList.add('active');
      panels.forEach((panel, i) => {
        setTimeout(() => panel.classList.add('revealed'), i * UNFOLD_DELAY);
      });
    }

    // Panels fold BACK to cover SVG
    function foldCard(slot) {
      const panels = Array.from(slot.querySelectorAll('.card-panel')).reverse();
      panels.forEach((panel, i) => {
        setTimeout(() => panel.classList.remove('revealed'), i * UNFOLD_DELAY);
      });
      setTimeout(() => slot.classList.remove('active'), panels.length * UNFOLD_DELAY + 150);
    }

    function cycleSlot(slotIndex) {
      const slot = document.getElementById(`card-slot-${slotIndex}`);
      
      foldCard(slot);

      setTimeout(() => {
        slotCards[slotIndex] = nextCardIndex;
        nextCardIndex = (nextCardIndex + 1) % cards.length;
        
        slot.innerHTML = buildCard(cards[slotCards[slotIndex]]);
        unfoldCard(slot);
      }, 6 * UNFOLD_DELAY + 300);
    }

    document.addEventListener('DOMContentLoaded', () => {
      const slots = [
        document.getElementById('card-slot-0'),
        document.getElementById('card-slot-1'),
        document.getElementById('card-slot-2')
      ];

      // Initial render with stagger
      slots.forEach((slot, i) => {
        slot.innerHTML = buildCard(cards[i]);
        setTimeout(() => unfoldCard(slot), i * CARD_STAGGER);
      });

      // Offset cycling for continuous motion
      const cycleInterval = DISPLAY_TIME + (6 * UNFOLD_DELAY * 2) + 600;
      
      setTimeout(() => setInterval(() => cycleSlot(0), cycleInterval), 0);
      setTimeout(() => setInterval(() => cycleSlot(1), cycleInterval), cycleInterval * 0.33);
      setTimeout(() => setInterval(() => cycleSlot(2), cycleInterval), cycleInterval * 0.66);
    });
  </script>
