---
// Hero Test - Full Width Grid with Origami Cards
import BaseHead from '../components/BaseHead.astro';
import Nav from '../components/Nav.astro';
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <BaseHead title="Hero Test - Full Grid" description="Testing full-width grid with origami cards" />
  
  <style is:global>
    :root { 
      --cell: 130px; 
      --grid-line: rgba(255,255,255,0.08);
      
      /* Colors */
      --mint: #46FCAF;
      --purple: #A678F4;
      --cyan: #5CEBDF;
      --coral: #FF4F5E;
      --yellow: #FFD84D;
      --bg: #0A0A0A;
      --text: #FFFFFF;
      --text-muted: rgba(255,255,255,0.6);
      --border: rgba(255,255,255,0.1);
      --mono: 'Fraktion Mono', monospace;
    }

    .hero {
      min-height: 100vh;
      display: flex;
      align-items: center;
      padding: 72px 48px 0;
      position: relative;
      overflow: hidden;
      background: var(--bg);
    }

    /* Grid on RIGHT side only */
    .hero-grid {
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      width: 60%;
      background-image: 
        linear-gradient(to right, var(--grid-line) 1px, transparent 1px),
        linear-gradient(to bottom, var(--grid-line) 1px, transparent 1px);
      background-size: var(--cell) var(--cell);
      z-index: 1;
      mask-image: linear-gradient(to right, transparent 0%, rgba(0,0,0,0.3) 10%, rgba(0,0,0,1) 40%);
      -webkit-mask-image: linear-gradient(to right, transparent 0%, rgba(0,0,0,0.3) 10%, rgba(0,0,0,1) 40%);
    }

    /* Gradient blobs */
    .blob {
      position: absolute;
      border-radius: 50%;
      filter: blur(120px);
      z-index: 0;
    }

    .blob-1 {
      width: 700px;
      height: 700px;
      background: var(--mint);
      top: -250px;
      right: 5%;
      opacity: 0.12;
    }

    .blob-2 {
      width: 500px;
      height: 500px;
      background: var(--purple);
      bottom: -150px;
      right: 25%;
      opacity: 0.1;
    }

    .blob-3 {
      width: 400px;
      height: 400px;
      background: var(--cyan);
      top: 50%;
      left: 30%;
      opacity: 0.06;
    }

    /* Left side visual - subtle arc/glow */
    .hero-glow {
      position: absolute;
      left: 20%;
      top: 50%;
      transform: translate(-50%, -50%);
      width: 600px;
      height: 600px;
      background: radial-gradient(ellipse at center, rgba(70, 252, 175, 0.04) 0%, transparent 70%);
      z-index: 1;
    }

    .hero-content {
      max-width: 550px;
      z-index: 10;
      padding: 48px 0;
    }

    .hero-headline {
      font-size: 80px;
      font-weight: 350;
      line-height: 1.0;
      letter-spacing: -0.03em;
      margin-bottom: 28px;
    }
    .hero-headline em { 
      font-style: normal; 
      color: var(--mint);
      font-weight: 400;
    }

    .hero-sub {
      font-size: 20px;
      font-weight: 400;
      line-height: 1.5;
      margin-bottom: 40px;
      color: var(--text-muted);
    }

    .hero-buttons { display: flex; gap: 16px; }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      padding: 18px 28px;
      font-weight: 500;
      font-size: 15px;
      text-decoration: none;
      transition: all 0.2s ease;
      cursor: pointer;
      border: none;
    }
    
    .btn-primary { background: var(--text); color: var(--bg); }
    .btn-primary:hover { background: var(--mint); color: #0a0a0a; transform: translateY(-2px); }

    /* CARDS AREA - positioned on right grid */
    .cards-area {
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      width: 60%;
      z-index: 10;
      pointer-events: none;
    }

    /* ORIGAMI CARD - now 2x3 grid of larger cells */
    .origami-card {
      position: absolute;
      display: grid;
      grid-template-columns: repeat(2, var(--cell));
      grid-template-rows: repeat(3, var(--cell));
      opacity: 0;
      transition: opacity 0.3s ease;
      pointer-events: auto;
    }

    .origami-card.active {
      opacity: 1;
    }

    /* Card positions - staggered on grid */
    .origami-card.pos-1 {
      top: calc(var(--cell) * 0.5);
      right: calc(var(--cell) * 3);
    }

    .origami-card.pos-2 {
      top: calc(var(--cell) * 2);
      right: calc(var(--cell) * 0.5);
    }

    .origami-card.pos-3 {
      top: calc(var(--cell) * 1);
      right: calc(var(--cell) * 5);
    }

    /* Each cell/panel of the card */
    .card-panel {
      width: var(--cell);
      height: var(--cell);
      position: relative;
      transform-style: preserve-3d;
      perspective: 1000px;
    }

    .panel-inner {
      position: absolute;
      width: 100%;
      height: 100%;
      backface-visibility: hidden;
      opacity: 0;
      transform: rotateY(-90deg);
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 0 4px 24px rgba(0,0,0,0.3);
    }

    .card-panel.from-top .panel-inner {
      transform-origin: top center;
      transform: rotateX(90deg);
    }

    .card-panel.from-left .panel-inner {
      transform-origin: left center;
      transform: rotateY(-90deg);
    }

    .card-panel.revealed .panel-inner {
      opacity: 1;
      transform: rotateY(0deg) rotateX(0deg);
    }

    /* Card colors */
    .panel-inner.mint { background: var(--mint); }
    .panel-inner.purple { background: var(--purple); }
    .panel-inner.cyan { background: var(--cyan); }
    .panel-inner.coral { background: var(--coral); }
    .panel-inner.yellow { background: var(--yellow); }
    .panel-inner.dark { background: #1a1a1a; border: 1px solid var(--border); }

    /* Content inside panels - MORE PADDING */
    .panel-content {
      position: absolute;
      inset: 0;
      padding: 16px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      color: #0a0a0a;
      font-size: 13px;
      overflow: hidden;
    }

    .panel-inner.purple .panel-content,
    .panel-inner.coral .panel-content,
    .panel-inner.dark .panel-content {
      color: #fff;
    }

    .panel-icon {
      width: 32px;
      height: 32px;
      margin-bottom: 10px;
      flex-shrink: 0;
    }

    .panel-icon svg {
      width: 100%;
      height: 100%;
      stroke-width: 2;
      stroke-linecap: round;
      stroke-linejoin: round;
      fill: none;
      stroke: currentColor;
    }

    .panel-badge {
      font-family: var(--mono);
      font-size: 10px;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      padding: 6px 12px;
      background: rgba(0,0,0,0.12);
      display: inline-block;
      width: fit-content;
      border-radius: 2px;
    }

    .panel-inner.purple .panel-badge,
    .panel-inner.coral .panel-badge,
    .panel-inner.dark .panel-badge {
      background: rgba(255,255,255,0.15);
    }

    .panel-title {
      font-size: 20px;
      font-weight: 600;
      line-height: 1.2;
    }

    .panel-text {
      font-size: 13px;
      opacity: 0.85;
      line-height: 1.4;
      margin-top: 4px;
    }

    .panel-stat {
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-family: var(--mono);
      font-size: 12px;
      padding: 10px 0;
      border-top: 1px solid rgba(0,0,0,0.1);
    }

    .panel-inner.purple .panel-stat,
    .panel-inner.coral .panel-stat,
    .panel-inner.dark .panel-stat {
      border-color: rgba(255,255,255,0.15);
    }

    .stat-value { font-weight: 600; }
    .stat-positive { color: #0a0a0a; }
    .panel-inner.purple .stat-positive,
    .panel-inner.coral .stat-positive { color: var(--mint); }
    .panel-inner.dark .stat-positive { color: var(--mint); }

    .meddic-mini {
      display: flex;
      gap: 6px;
      margin-top: 10px;
    }

    .meddic-mini span {
      flex: 1;
      text-align: center;
      padding: 8px 4px;
      background: rgba(0,0,0,0.12);
      font-family: var(--mono);
      font-size: 12px;
      font-weight: 600;
      border-radius: 2px;
    }

    .meddic-mini span.filled {
      background: rgba(0,0,0,0.25);
    }

    .panel-inner.dark .meddic-mini span {
      background: rgba(255,255,255,0.1);
    }
    .panel-inner.dark .meddic-mini span.filled {
      background: rgba(255,255,255,0.25);
    }

    .score-circle {
      width: 56px;
      height: 56px;
      border-radius: 50%;
      background: conic-gradient(var(--mint) 0deg 306deg, rgba(255,255,255,0.1) 306deg 360deg);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 18px;
      font-weight: 700;
      margin: 0 auto;
    }

    .quote-text {
      font-style: italic;
      font-size: 12px;
      line-height: 1.5;
      opacity: 0.9;
    }

    .quote-attr {
      font-size: 11px;
      opacity: 0.7;
      margin-top: 6px;
    }

    /* RESPONSIVE */
    @media (max-width: 1600px) {
      :root { --cell: 115px; }
      .hero-headline { font-size: 70px; }
    }

    @media (max-width: 1400px) {
      :root { --cell: 100px; }
      .hero-headline { font-size: 60px; }
    }

    @media (max-width: 1200px) {
      :root { --cell: 90px; }
      .hero-headline { font-size: 52px; }
      .hero-content { max-width: 450px; }
      .panel-title { font-size: 16px; }
      .panel-text { font-size: 11px; }
    }

    @media (max-width: 1000px) {
      .cards-area { display: none; }
      .hero-grid { display: none; }
      .hero-content { max-width: 100%; text-align: center; }
      .hero-buttons { justify-content: center; }
    }
  </style>
</head>

<body>
  <Nav />

  <section class="hero">
    <!-- Background grid - right side only -->
    <div class="hero-grid"></div>

    <!-- Gradient blobs -->
    <div class="blob blob-1"></div>
    <div class="blob blob-2"></div>
    <div class="blob blob-3"></div>

    <!-- Left side glow -->
    <div class="hero-glow"></div>

    <div class="hero-content">
      <h1 class="hero-headline">Your calls,<br><em>working for you</em></h1>
      <p class="hero-sub">Every sales call triggers six AI agents that update your CRM, alert your team, and draft follow-ups—automatically.</p>
      <div class="hero-buttons">
        <a href="#" class="btn btn-primary">Book a Demo</a>
      </div>
    </div>

    <div class="cards-area">
      <!-- 3 card slots at different positions -->
      <div class="origami-card pos-1" id="card-slot-0"></div>
      <div class="origami-card pos-2" id="card-slot-1"></div>
      <div class="origami-card pos-3" id="card-slot-2"></div>
    </div>
  </section>

  <script>
    // Card definitions - 6 cards total
    const cards = [
      {
        color: 'mint',
        panels: [
          { type: 'icon-badge', icon: 'phone', badge: 'Trigger' },
          { type: 'title', text: 'Call completed' },
          { type: 'text', primary: 'Sarah Chen', secondary: 'VP Sales, Acme Corp' },
          { type: 'text', primary: 'Discovery call', secondary: '32 minutes' },
          { type: 'stat', label: 'Talk ratio', value: '35%' },
          { type: 'stat', label: 'Questions', value: '12' }
        ]
      },
      {
        color: 'purple',
        panels: [
          { type: 'icon-badge', icon: 'activity', badge: 'Processing' },
          { type: 'title', text: 'Analyzing call' },
          { type: 'stat', label: 'Sentiment', value: '87%', positive: true },
          { type: 'stat', label: 'Momentum', value: 'High', positive: true },
          { type: 'stat', label: 'Objections', value: '2' },
          { type: 'stat', label: 'Actions', value: '14' }
        ]
      },
      {
        color: 'cyan',
        panels: [
          { type: 'icon-badge', icon: 'bar-chart', badge: 'CRM Agent' },
          { type: 'title', text: 'Pipeline updated' },
          { type: 'text', primary: 'Stage moved', secondary: '→ Negotiation' },
          { type: 'text', primary: '12 fields synced', secondary: 'to HubSpot' },
          { type: 'meddic', values: ['M', 'E', 'D'], filled: [true, true, true] },
          { type: 'meddic', values: ['D', 'I', 'C'], filled: [true, false, true] }
        ]
      },
      {
        color: 'coral',
        panels: [
          { type: 'icon-badge', icon: 'bell', badge: 'Risk Alert' },
          { type: 'title', text: 'Manager notified' },
          { type: 'quote', text: '"Budget is tight this quarter..."' },
          { type: 'quote-attr', text: '— Sarah Chen' },
          { type: 'text', primary: 'Slack #deals', secondary: '@mike alerted' },
          { type: 'stat', label: 'Risk', value: 'Medium' }
        ]
      },
      {
        color: 'yellow',
        panels: [
          { type: 'icon-badge', icon: 'mail', badge: 'Email Agent' },
          { type: 'title', text: 'Follow-up ready' },
          { type: 'text', primary: 'Personalized email', secondary: 'drafted for review' },
          { type: 'stat', label: 'Length', value: '142 words' },
          { type: 'stat', label: 'Tone', value: 'Professional' },
          { type: 'stat', label: 'CTAs', value: '2' }
        ]
      },
      {
        color: 'dark',
        panels: [
          { type: 'icon-badge', icon: 'edit', badge: 'Coach Agent' },
          { type: 'title', text: 'Scorecard ready' },
          { type: 'score', value: '85' },
          { type: 'stat', label: 'Discovery', value: 'Strong', positive: true },
          { type: 'stat', label: 'Improve', value: 'Closing' },
          { type: 'text', primary: '3 coaching tips', secondary: 'available' }
        ]
      }
    ];

    const icons = {
      phone: '<path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72c.127.96.361 1.903.7 2.81a2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0 1 22 16.92z"/>',
      activity: '<polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/>',
      'bar-chart': '<line x1="18" y1="20" x2="18" y2="10"/><line x1="12" y1="20" x2="12" y2="4"/><line x1="6" y1="20" x2="6" y2="14"/>',
      bell: '<path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/><path d="M13.73 21a2 2 0 0 1-3.46 0"/>',
      mail: '<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/>',
      edit: '<path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>'
    };

    function renderPanel(panel) {
      let content = '';
      
      switch(panel.type) {
        case 'icon-badge':
          content = `
            <div class="panel-icon"><svg viewBox="0 0 24 24">${icons[panel.icon]}</svg></div>
            <span class="panel-badge">${panel.badge}</span>
          `;
          break;
        case 'title':
          content = `<span class="panel-title">${panel.text}</span>`;
          break;
        case 'text':
          content = `
            <span class="panel-text">${panel.primary}</span>
            <span class="panel-text" style="opacity:0.6">${panel.secondary}</span>
          `;
          break;
        case 'stat':
          content = `
            <div class="panel-stat">
              <span>${panel.label}</span>
              <span class="stat-value ${panel.positive ? 'stat-positive' : ''}">${panel.value}</span>
            </div>
          `;
          break;
        case 'meddic':
          content = `
            <div class="meddic-mini">
              ${panel.values.map((v, i) => `<span class="${panel.filled[i] ? 'filled' : ''}">${v}</span>`).join('')}
            </div>
          `;
          break;
        case 'quote':
          content = `<span class="quote-text">${panel.text}</span>`;
          break;
        case 'quote-attr':
          content = `<span class="quote-attr">${panel.text}</span>`;
          break;
        case 'score':
          content = `<div class="score-circle">${panel.value}</div>`;
          break;
      }

      return content;
    }

    function buildCard(cardData) {
      const foldDirections = ['from-left', 'from-left', 'from-top', 'from-left', 'from-top', 'from-left'];
      
      return cardData.panels.map((panel, i) => `
        <div class="card-panel ${foldDirections[i]}" data-index="${i}">
          <div class="panel-inner ${cardData.color}">
            <div class="panel-content">
              ${renderPanel(panel)}
            </div>
          </div>
        </div>
      `).join('');
    }

    const UNFOLD_DELAY = 100;      // Time between each panel unfolding
    const CARD_STAGGER = 800;      // Time between cards starting to appear
    const DISPLAY_TIME = 3000;     // How long card stays fully visible
    const FOLD_DURATION = 600;     // Time to fold up

    // Track which card is in each slot
    let slotCards = [0, 1, 2];  // card indices for slots 0, 1, 2
    let nextCardIndex = 3;      // next card to show

    function unfoldCard(slot) {
      const panels = slot.querySelectorAll('.card-panel');
      slot.classList.add('active');
      panels.forEach((panel, i) => {
        setTimeout(() => panel.classList.add('revealed'), i * UNFOLD_DELAY);
      });
    }

    function foldCard(slot) {
      const panels = Array.from(slot.querySelectorAll('.card-panel')).reverse();
      panels.forEach((panel, i) => {
        setTimeout(() => panel.classList.remove('revealed'), i * UNFOLD_DELAY);
      });
      // Hide slot after fold completes
      setTimeout(() => slot.classList.remove('active'), panels.length * UNFOLD_DELAY + 200);
    }

    function cycleSlot(slotIndex) {
      const slot = document.getElementById(`card-slot-${slotIndex}`);
      
      // Fold current card
      foldCard(slot);

      // After fold, load next card and unfold
      setTimeout(() => {
        slotCards[slotIndex] = nextCardIndex;
        nextCardIndex = (nextCardIndex + 1) % cards.length;
        
        slot.innerHTML = buildCard(cards[slotCards[slotIndex]]);
        unfoldCard(slot);
      }, 6 * UNFOLD_DELAY + 400);
    }

    document.addEventListener('DOMContentLoaded', () => {
      const slots = [
        document.getElementById('card-slot-0'),
        document.getElementById('card-slot-1'),
        document.getElementById('card-slot-2')
      ];

      // Initial render - stagger the appearance
      slots.forEach((slot, i) => {
        slot.innerHTML = buildCard(cards[i]);
        setTimeout(() => unfoldCard(slot), i * CARD_STAGGER);
      });

      // Cycle each slot at different intervals for continuous movement
      // Slot 0 cycles every 4s
      // Slot 1 cycles every 4s, offset by 1.3s
      // Slot 2 cycles every 4s, offset by 2.6s
      const cycleInterval = DISPLAY_TIME + (6 * UNFOLD_DELAY * 2) + 800;
      
      setTimeout(() => {
        setInterval(() => cycleSlot(0), cycleInterval);
      }, 0);

      setTimeout(() => {
        setInterval(() => cycleSlot(1), cycleInterval);
      }, cycleInterval / 3);

      setTimeout(() => {
        setInterval(() => cycleSlot(2), cycleInterval);
      }, (cycleInterval / 3) * 2);
    });
  </script>
</body>
</html>
