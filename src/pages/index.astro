    // Build card HTML
    function buildCard(cardData) {
      const foldDirections = ['from-left', 'from-left', 'from-top', 'from-left', 'from-top', 'from-left'];
      return cardData.panels.map((panel, i) => `
        <div class="card-panel ${foldDirections[i]}" data-index="${i}">
          <div class="panel-inner ${cardData.color}">
            <div class="panel-content">${renderPanel(panel)}</div>
          </div>
        </div>
      `).join('');
    }

    // Grid-aligned positions (col, row) - cards are 2x3 cells
    // Container is 8 cols x 7 rows, diagonal cascade
    const gridPositions = [
      { col: 0, row: 0 },   // top-left
      { col: 3, row: 1 },   // upper-middle
      { col: 6, row: 0 },   // top-right
      { col: 1, row: 4 },   // lower-left
      { col: 4, row: 3 },   // center
      { col: 6, row: 4 },   // lower-right
    ];

    // Animation timing
    const UNFOLD_DELAY = 80;
    const CARD_DISPLAY = 5000;
    const CYCLE_STAGGER = 1500;

    // State
    let usedPositions = new Set();
    let cardQueue = [...Array(cards.length).keys()];
    let slotCards = [];

    function shuffleArray(arr) {
      for (let i = arr.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [arr[i], arr[j]] = [arr[j], arr[i]];
      }
      return arr;
    }

    function getRandomPosition() {
      const available = gridPositions.filter((_, i) => !usedPositions.has(i));
      if (available.length === 0) {
        usedPositions.clear();
        return getRandomPosition();
      }
      const idx = gridPositions.indexOf(available[Math.floor(Math.random() * available.length)]);
      usedPositions.add(idx);
      return gridPositions[idx];
    }

    function getNextCard() {
      if (cardQueue.length === 0) {
        cardQueue = shuffleArray([...Array(cards.length).keys()]);
      }
      return cardQueue.pop();
    }

    function positionCard(slot, pos) {
      const cell = parseInt(getComputedStyle(document.documentElement).getPropertyValue('--cell')) || 120;
      slot.style.left = `${pos.col * cell}px`;
      slot.style.top = `${pos.row * cell}px`;
    }

    function unfoldCard(slot) {
      const panels = slot.querySelectorAll('.card-panel');
      slot.classList.add('active');
      panels.forEach((panel, i) => {
        setTimeout(() => panel.classList.add('revealed'), i * UNFOLD_DELAY);
      });
    }

    function foldCard(slot) {
      const panels = Array.from(slot.querySelectorAll('.card-panel')).reverse();
      panels.forEach((panel, i) => {
        setTimeout(() => panel.classList.remove('revealed'), i * UNFOLD_DELAY);
      });
      setTimeout(() => slot.classList.remove('active'), panels.length * UNFOLD_DELAY + 100);
    }

    function cycleSlot(slotIndex) {
      const slot = document.getElementById(`card-slot-${slotIndex}`);
      
      // Fold current card
      foldCard(slot);

      // After fold animation, swap card and unfold
      setTimeout(() => {
        const cardIdx = getNextCard();
        const pos = getRandomPosition();
        
        slotCards[slotIndex] = cardIdx;
        slot.innerHTML = buildCard(cards[cardIdx]);
        positionCard(slot, pos);
        unfoldCard(slot);
      }, 6 * UNFOLD_DELAY + 200);
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', () => {
      const slots = [0, 1, 2].map(i => document.getElementById(`card-slot-${i}`));
      
      // Shuffle cards for initial display
      cardQueue = shuffleArray([...Array(cards.length).keys()]);

      // Initial render with stagger
      slots.forEach((slot, i) => {
        const cardIdx = getNextCard();
        const pos = getRandomPosition();
        
        slotCards[i] = cardIdx;
        slot.innerHTML = buildCard(cards[cardIdx]);
        positionCard(slot, pos);
        
        setTimeout(() => unfoldCard(slot), i * CYCLE_STAGGER);
      });

      // Cycle each slot on offset intervals
      const cycleTime = CARD_DISPLAY + (6 * UNFOLD_DELAY * 2) + 500;
      
      slots.forEach((_, i) => {
        setTimeout(() => {
          setInterval(() => cycleSlot(i), cycleTime);
        }, (i * CYCLE_STAGGER) + CARD_DISPLAY);
      });
    });
