---
// Hero Test - Full Width Grid with Origami Cards
import BaseHead from '../components/BaseHead.astro';
import Nav from '../components/Nav.astro';
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <BaseHead title="Hero Test - Full Grid" description="Testing full-width grid with origami cards" />
  
  <style is:global>
    :root { 
      --cell: 120px; 
      --grid-line: rgba(255,255,255,0.06);
      
      /* Colors */
      --mint: #46FCAF;
      --purple: #A678F4;
      --cyan: #5CEBDF;
      --coral: #FF6B7A;
      --yellow: #FFD84D;
      --bg: #0A0A0A;
      --text: #FFFFFF;
      --text-muted: rgba(255,255,255,0.6);
      --border: rgba(255,255,255,0.1);
      --mono: 'Fraktion Mono', ui-monospace, monospace;
    }

    * {
      box-sizing: border-box;
    }

    .hero {
      min-height: 100vh;
      display: flex;
      align-items: center;
      padding: 72px 48px 0;
      position: relative;
      overflow: hidden;
      background: var(--bg);
    }

    /* Grid on RIGHT side only - BEHIND everything */
    .hero-grid {
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      width: 65%;
      background-image: 
        linear-gradient(to right, var(--grid-line) 1px, transparent 1px),
        linear-gradient(to bottom, var(--grid-line) 1px, transparent 1px);
      background-size: var(--cell) var(--cell);
      z-index: 1;
      mask-image: linear-gradient(to right, transparent 0%, rgba(0,0,0,0.5) 15%, rgba(0,0,0,1) 50%);
      -webkit-mask-image: linear-gradient(to right, transparent 0%, rgba(0,0,0,0.5) 15%, rgba(0,0,0,1) 50%);
    }

    /* Gradient blobs */
    .blob {
      position: absolute;
      border-radius: 50%;
      filter: blur(140px);
      z-index: 0;
    }

    .blob-1 {
      width: 800px;
      height: 800px;
      background: var(--mint);
      top: -300px;
      right: 0;
      opacity: 0.08;
    }

    .blob-2 {
      width: 600px;
      height: 600px;
      background: var(--purple);
      bottom: -200px;
      right: 20%;
      opacity: 0.08;
    }

    .blob-3 {
      width: 500px;
      height: 500px;
      background: var(--cyan);
      top: 60%;
      left: 35%;
      opacity: 0.05;
    }

    .hero-content {
      max-width: 550px;
      z-index: 100;
      padding: 48px 0;
    }

    .hero-headline {
      font-size: 76px;
      font-weight: 350;
      line-height: 1.0;
      letter-spacing: -0.03em;
      margin-bottom: 28px;
    }
    .hero-headline em { 
      font-style: normal; 
      color: var(--mint);
      font-weight: 400;
    }

    .hero-sub {
      font-size: 19px;
      font-weight: 400;
      line-height: 1.6;
      margin-bottom: 40px;
      color: var(--text-muted);
    }

    .hero-buttons { display: flex; gap: 16px; }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      padding: 18px 32px;
      font-weight: 500;
      font-size: 15px;
      text-decoration: none;
      transition: all 0.2s ease;
      cursor: pointer;
      border: none;
      border-radius: 6px;
    }
    
    .btn-primary { background: var(--text); color: var(--bg); }
    .btn-primary:hover { background: var(--mint); color: #0a0a0a; transform: translateY(-2px); }

    /* CARDS AREA - covers right side */
    .cards-area {
      position: absolute;
      top: 80px;
      right: 0;
      bottom: 40px;
      width: 58%;
      z-index: 50;
      pointer-events: none;
    }

    /* ORIGAMI CARD */
    .origami-card {
      position: absolute;
      display: grid;
      grid-template-columns: repeat(2, var(--cell));
      grid-template-rows: repeat(3, var(--cell));
      opacity: 0;
      transition: opacity 0.3s ease;
      pointer-events: auto;
      filter: drop-shadow(0 25px 50px rgba(0,0,0,0.5));
    }

    .origami-card.active {
      opacity: 1;
    }

    /* Card positions - SPREAD ACROSS FULL HEIGHT */
    .origami-card.pos-0 {
      top: 0;
      right: 45%;
    }

    .origami-card.pos-1 {
      top: 35%;
      right: 10%;
    }

    .origami-card.pos-2 {
      bottom: 5%;
      right: 50%;
    }

    /* Each cell/panel of the card */
    .card-panel {
      width: var(--cell);
      height: var(--cell);
      position: relative;
      transform-style: preserve-3d;
      perspective: 1000px;
    }

    .panel-inner {
      position: absolute;
      width: 100%;
      height: 100%;
      backface-visibility: hidden;
      opacity: 0;
      transform: rotateY(-90deg);
      transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .card-panel.from-top .panel-inner {
      transform-origin: top center;
      transform: rotateX(90deg);
    }

    .card-panel.from-left .panel-inner {
      transform-origin: left center;
      transform: rotateY(-90deg);
    }

    .card-panel.revealed .panel-inner {
      opacity: 1;
      transform: rotateY(0deg) rotateX(0deg);
    }

    /* Card colors - SOLID BACKGROUNDS */
    .panel-inner.mint { background: var(--mint); }
    .panel-inner.purple { background: var(--purple); }
    .panel-inner.cyan { background: var(--cyan); }
    .panel-inner.coral { background: var(--coral); }
    .panel-inner.yellow { background: var(--yellow); }
    .panel-inner.dark { 
      background: #18181B;
      border: 1px solid rgba(255,255,255,0.1);
    }

    /* Content inside panels */
    .panel-content {
      position: absolute;
      inset: 0;
      padding: 18px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      color: #0a0a0a;
      font-size: 13px;
      overflow: hidden;
      background: inherit;
    }

    .panel-inner.purple .panel-content,
    .panel-inner.coral .panel-content,
    .panel-inner.dark .panel-content {
      color: #fff;
    }

    .panel-icon {
      width: 28px;
      height: 28px;
      margin-bottom: 12px;
      flex-shrink: 0;
    }

    .panel-icon svg {
      width: 100%;
      height: 100%;
      stroke-width: 1.5;
      stroke-linecap: round;
      stroke-linejoin: round;
      fill: none;
      stroke: currentColor;
    }

    .panel-badge {
      font-family: var(--mono);
      font-size: 9px;
      text-transform: uppercase;
      letter-spacing: 0.12em;
      padding: 6px 10px;
      background: rgba(0,0,0,0.1);
      display: inline-block;
      width: fit-content;
      border-radius: 4px;
      font-weight: 500;
    }

    .panel-inner.purple .panel-badge,
    .panel-inner.coral .panel-badge,
    .panel-inner.dark .panel-badge {
      background: rgba(255,255,255,0.12);
    }

    .panel-title {
      font-size: 22px;
      font-weight: 600;
      line-height: 1.15;
      letter-spacing: -0.01em;
    }

    .panel-text {
      font-size: 13px;
      opacity: 0.8;
      line-height: 1.4;
    }

    .panel-text + .panel-text {
      margin-top: 2px;
      opacity: 0.6;
    }

    .panel-stat {
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-family: var(--mono);
      font-size: 12px;
      padding: 12px 0;
      border-top: 1px solid rgba(0,0,0,0.08);
    }

    .panel-inner.purple .panel-stat,
    .panel-inner.coral .panel-stat,
    .panel-inner.dark .panel-stat {
      border-color: rgba(255,255,255,0.1);
    }

    .stat-label {
      opacity: 0.7;
    }

    .stat-value { 
      font-weight: 600;
      font-size: 13px;
    }

    .stat-positive { 
      color: #0a0a0a; 
    }
    .panel-inner.purple .stat-positive,
    .panel-inner.coral .stat-positive { 
      color: var(--mint); 
    }
    .panel-inner.dark .stat-positive { 
      color: var(--mint); 
    }

    .meddic-mini {
      display: flex;
      gap: 6px;
      margin-top: 12px;
    }

    .meddic-mini span {
      flex: 1;
      text-align: center;
      padding: 10px 4px;
      background: rgba(0,0,0,0.08);
      font-family: var(--mono);
      font-size: 11px;
      font-weight: 600;
      border-radius: 4px;
    }

    .meddic-mini span.filled {
      background: rgba(0,0,0,0.18);
    }

    .panel-inner.dark .meddic-mini span {
      background: rgba(255,255,255,0.08);
    }
    .panel-inner.dark .meddic-mini span.filled {
      background: rgba(255,255,255,0.2);
    }

    .score-circle {
      width: 52px;
      height: 52px;
      border-radius: 50%;
      background: conic-gradient(var(--mint) 0deg 306deg, rgba(255,255,255,0.15) 306deg 360deg);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 17px;
      font-weight: 700;
      margin: 0 auto;
      color: #0a0a0a;
    }

    .quote-text {
      font-style: italic;
      font-size: 12px;
      line-height: 1.5;
      opacity: 0.9;
    }

    .quote-attr {
      font-size: 11px;
      opacity: 0.6;
      margin-top: 8px;
    }

    /* RESPONSIVE */
    @media (max-width: 1600px) {
      :root { --cell: 105px; }
      .hero-headline { font-size: 68px; }
    }

    @media (max-width: 1400px) {
      :root { --cell: 95px; }
      .hero-headline { font-size: 58px; }
      .cards-area { width: 55%; }
    }

    @media (max-width: 1200px) {
      :root { --cell: 85px; }
      .hero-headline { font-size: 50px; }
      .hero-content { max-width: 420px; }
      .panel-title { font-size: 18px; }
      .panel-text { font-size: 11px; }
    }

    @media (max-width: 1000px) {
      .cards-area { display: none; }
      .hero-grid { display: none; }
      .hero-content { max-width: 100%; text-align: center; }
      .hero-buttons { justify-content: center; }
    }
  </style>
</head>

<body>
  <Nav />

  <section class="hero">
    <!-- Background grid - LOWEST z-index -->
    <div class="hero-grid"></div>

    <!-- Gradient blobs -->
    <div class="blob blob-1"></div>
    <div class="blob blob-2"></div>
    <div class="blob blob-3"></div>

    <div class="hero-content">
      <h1 class="hero-headline">Your calls,<br><em>working for you</em></h1>
      <p class="hero-sub">Every sales call triggers AI agents that update your CRM, alert your team, and draft follow-ups—automatically.</p>
      <div class="hero-buttons">
        <a href="#" class="btn btn-primary">Book a Demo</a>
      </div>
    </div>

    <div class="cards-area">
      <div class="origami-card pos-0" id="card-slot-0"></div>
      <div class="origami-card pos-1" id="card-slot-1"></div>
      <div class="origami-card pos-2" id="card-slot-2"></div>
    </div>
  </section>

  <script>
    const cards = [
      {
        color: 'mint',
        panels: [
          { type: 'icon-badge', icon: 'phone', badge: 'Trigger' },
          { type: 'title', text: 'Call completed' },
          { type: 'text', primary: 'Sarah Chen', secondary: 'VP Sales, Acme Corp' },
          { type: 'text', primary: 'Discovery call', secondary: '32 min duration' },
          { type: 'stat', label: 'Talk ratio', value: '35%' },
          { type: 'stat', label: 'Questions', value: '12' }
        ]
      },
      {
        color: 'purple',
        panels: [
          { type: 'icon-badge', icon: 'activity', badge: 'Processing' },
          { type: 'title', text: 'Analyzing call' },
          { type: 'stat', label: 'Sentiment', value: '87%', positive: true },
          { type: 'stat', label: 'Momentum', value: 'High', positive: true },
          { type: 'stat', label: 'Objections', value: '2' },
          { type: 'stat', label: 'Next steps', value: '4' }
        ]
      },
      {
        color: 'cyan',
        panels: [
          { type: 'icon-badge', icon: 'database', badge: 'CRM Sync' },
          { type: 'title', text: 'Pipeline updated' },
          { type: 'text', primary: 'Stage changed', secondary: '→ Negotiation' },
          { type: 'text', primary: '12 fields synced', secondary: 'to HubSpot' },
          { type: 'meddic', values: ['M', 'E', 'D'], filled: [true, true, true] },
          { type: 'meddic', values: ['D', 'I', 'C'], filled: [true, false, true] }
        ]
      },
      {
        color: 'coral',
        panels: [
          { type: 'icon-badge', icon: 'alert', badge: 'Risk Alert' },
          { type: 'title', text: 'Manager notified' },
          { type: 'quote', text: '"Budget is tight this quarter..."' },
          { type: 'quote-attr', text: '— Sarah Chen, 14:32' },
          { type: 'text', primary: 'Posted to Slack', secondary: '#enterprise-deals' },
          { type: 'stat', label: 'Risk level', value: 'Medium' }
        ]
      },
      {
        color: 'yellow',
        panels: [
          { type: 'icon-badge', icon: 'mail', badge: 'Email Agent' },
          { type: 'title', text: 'Follow-up ready' },
          { type: 'text', primary: 'Personalized email', secondary: 'Ready for review' },
          { type: 'stat', label: 'Length', value: '142 words' },
          { type: 'stat', label: 'Tone', value: 'Professional' },
          { type: 'stat', label: 'References', value: '3 points' }
        ]
      },
      {
        color: 'dark',
        panels: [
          { type: 'icon-badge', icon: 'star', badge: 'Coaching' },
          { type: 'title', text: 'Scorecard ready' },
          { type: 'score', value: '85' },
          { type: 'stat', label: 'Discovery', value: 'Strong', positive: true },
          { type: 'stat', label: 'Needs work', value: 'Closing' },
          { type: 'text', primary: '3 coaching tips', secondary: 'View suggestions' }
        ]
      }
    ];

    const icons = {
      phone: '<path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>',
      activity: '<polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/>',
      database: '<ellipse cx="12" cy="5" rx="9" ry="3"/><path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"/><path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"/>',
      alert: '<path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/><line x1="12" y1="9" x2="12" y2="13"/><line x1="12" y1="17" x2="12.01" y2="17"/>',
      mail: '<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/>',
      star: '<polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>'
    };

    function renderPanel(panel) {
      switch(panel.type) {
        case 'icon-badge':
          return `
            <div class="panel-icon"><svg viewBox="0 0 24 24">${icons[panel.icon]}</svg></div>
            <span class="panel-badge">${panel.badge}</span>
          `;
        case 'title':
          return `<span class="panel-title">${panel.text}</span>`;
        case 'text':
          return `
            <span class="panel-text">${panel.primary}</span>
            <span class="panel-text">${panel.secondary}</span>
          `;
        case 'stat':
          return `
            <div class="panel-stat">
              <span class="stat-label">${panel.label}</span>
              <span class="stat-value ${panel.positive ? 'stat-positive' : ''}">${panel.value}</span>
            </div>
          `;
        case 'meddic':
          return `
            <div class="meddic-mini">
              ${panel.values.map((v, i) => `<span class="${panel.filled[i] ? 'filled' : ''}">${v}</span>`).join('')}
            </div>
          `;
        case 'quote':
          return `<span class="quote-text">${panel.text}</span>`;
        case 'quote-attr':
          return `<span class="quote-attr">${panel.text}</span>`;
        case 'score':
          return `<div class="score-circle">${panel.value}</div>`;
        default:
          return '';
      }
    }

    function buildCard(cardData) {
      const foldDirections = ['from-left', 'from-left', 'from-top', 'from-left', 'from-top', 'from-left'];
      
      return cardData.panels.map((panel, i) => `
        <div class="card-panel ${foldDirections[i]}" data-index="${i}">
          <div class="panel-inner ${cardData.color}">
            <div class="panel-content">
              ${renderPanel(panel)}
            </div>
          </div>
        </div>
      `).join('');
    }

    const UNFOLD_DELAY = 80;
    const CARD_STAGGER = 600;
    const DISPLAY_TIME = 3500;

    let slotCards = [0, 1, 2];
    let nextCardIndex = 3;

    function unfoldCard(slot) {
      const panels = slot.querySelectorAll('.card-panel');
      slot.classList.add('active');
      panels.forEach((panel, i) => {
        setTimeout(() => panel.classList.add('revealed'), i * UNFOLD_DELAY);
      });
    }

    function foldCard(slot) {
      const panels = Array.from(slot.querySelectorAll('.card-panel')).reverse();
      panels.forEach((panel, i) => {
        setTimeout(() => panel.classList.remove('revealed'), i * UNFOLD_DELAY);
      });
      setTimeout(() => slot.classList.remove('active'), panels.length * UNFOLD_DELAY + 150);
    }

    function cycleSlot(slotIndex) {
      const slot = document.getElementById(`card-slot-${slotIndex}`);
      
      foldCard(slot);

      setTimeout(() => {
        slotCards[slotIndex] = nextCardIndex;
        nextCardIndex = (nextCardIndex + 1) % cards.length;
        
        slot.innerHTML = buildCard(cards[slotCards[slotIndex]]);
        unfoldCard(slot);
      }, 6 * UNFOLD_DELAY + 300);
    }

    document.addEventListener('DOMContentLoaded', () => {
      const slots = [
        document.getElementById('card-slot-0'),
        document.getElementById('card-slot-1'),
        document.getElementById('card-slot-2')
      ];

      // Initial render with stagger
      slots.forEach((slot, i) => {
        slot.innerHTML = buildCard(cards[i]);
        setTimeout(() => unfoldCard(slot), i * CARD_STAGGER);
      });

      // Offset cycling for continuous motion
      const cycleInterval = DISPLAY_TIME + (6 * UNFOLD_DELAY * 2) + 600;
      
      setTimeout(() => setInterval(() => cycleSlot(0), cycleInterval), 0);
      setTimeout(() => setInterval(() => cycleSlot(1), cycleInterval), cycleInterval * 0.33);
      setTimeout(() => setInterval(() => cycleSlot(2), cycleInterval), cycleInterval * 0.66);
    });
  </script>
</body>
</html>
