  <script is:inline>
    function setTheme(theme) {
      document.documentElement.setAttribute('data-theme', theme);
      document.getElementById('btn-dark').classList.toggle('active', theme === 'dark');
      document.getElementById('btn-light').classList.toggle('active', theme === 'light');
    }

    // Grid storytelling animation
    function runGridStory() {
      const source = document.getElementById('cell-source');
      const hub = document.getElementById('cell-hub');
      const outputs = [
        document.getElementById('cell-output-1'),
        document.getElementById('cell-output-2'),
        document.getElementById('cell-output-3'),
        document.getElementById('cell-output-4')
      ];
      const lines = [
        document.getElementById('line-1'),
        document.getElementById('line-2'),
        document.getElementById('line-3'),
        document.getElementById('line-4'),
        document.getElementById('line-5')
      ];
      
      // Grid cells by index (based on SVG rect order)
      // Row 1: 0-7, Row 2: 8-14, Row 3: 15-20, Row 4: 21-26, Row 5: 27-33, Row 6: 34-40, Row 7: 41-48
      const gridRects = document.querySelectorAll('.hero-grid rect');
      
      // Map cells to indices
      const cellIndices = {
        source: 0,       // Row 1, Cell 1
        hub: 15,         // Row 3, Cell 1
        output1: 6,      // Row 1, Cell 7
        output2: 18,     // Row 3, Cell 4
        output3: 33,     // Row 5, Cell 7
        output4: 44      // Row 7, Cell 4
      };
      
      function reset() {
        source.classList.remove('active', 'tracing');
        hub.classList.remove('active', 'tracing');
        outputs.forEach(o => o.classList.remove('active', 'tracing'));
        lines.forEach(l => l.classList.remove('drawing'));
        gridRects.forEach(r => {
          r.classList.remove('cell-source', 'cell-hub', 'cell-output');
        });
      }
      
      function animate() {
        reset();
        
        // Step 1: Source appears with border trace (0ms)
        setTimeout(() => {
          source.classList.add('active', 'tracing');
          if (gridRects[cellIndices.source]) {
            gridRects[cellIndices.source].classList.add('cell-source');
          }
        }, 0);
        
        // Step 2: Line draws to hub (1200ms)
        setTimeout(() => {
          lines[0].classList.add('drawing');
        }, 1200);
        
        // Step 3: Hub appears with border trace (2000ms)
        setTimeout(() => {
          hub.classList.add('active', 'tracing');
          if (gridRects[cellIndices.hub]) {
            gridRects[cellIndices.hub].classList.add('cell-hub');
          }
        }, 2000);
        
        // Step 4: Lines fan out to outputs (3200ms+)
        setTimeout(() => {
          lines[1].classList.add('drawing');
        }, 3200);
        
        setTimeout(() => {
          outputs[0].classList.add('active', 'tracing');
          if (gridRects[cellIndices.output1]) {
            gridRects[cellIndices.output1].classList.add('cell-output');
          }
        }, 3800);
        
        setTimeout(() => {
          lines[2].classList.add('drawing');
        }, 4000);
        
        setTimeout(() => {
          outputs[1].classList.add('active', 'tracing');
          if (gridRects[cellIndices.output2]) {
            gridRects[cellIndices.output2].classList.add('cell-output');
          }
        }, 4400);
        
        setTimeout(() => {
          lines[3].classList.add('drawing');
        }, 4600);
        
        setTimeout(() => {
          outputs[2].classList.add('active', 'tracing');
          if (gridRects[cellIndices.output3]) {
            gridRects[cellIndices.output3].classList.add('cell-output');
          }
        }, 5200);
        
        setTimeout(() => {
          lines[4].classList.add('drawing');
        }, 5400);
        
        setTimeout(() => {
          outputs[3].classList.add('active', 'tracing');
          if (gridRects[cellIndices.output4]) {
            gridRects[cellIndices.output4].classList.add('cell-output');
          }
        }, 6000);
        
        // Hold for 2.5s, then restart
        setTimeout(() => {
          animate();
        }, 8500);
      }
      
      animate();
    }

    // Start animation when page loads
    document.addEventListener('DOMContentLoaded', runGridStory);
  </script>

