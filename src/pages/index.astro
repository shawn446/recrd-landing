---
// Homepage - recrd
import Nav from './components/Nav.astro';
import Footer from './components/Footer.astro';
import ThemeToggle from './components/ThemeToggle.astro';
import BaseHead from './components/BaseHead.astro';
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <BaseHead title="recrd - AI agents that close deals" description="Revenue intelligence for sales teams. Record calls, auto-update CRM, and get AI-powered coaching." />
  
  <style>
    :root { --cell: 120px; --grid-cols: 9; --grid-rows: 8; --grid-line: rgba(255,255,255,0.12); }
    [data-theme="light"] { --grid-line: rgba(0,0,0,0.12); }

    .hero { min-height: 100vh; display: flex; align-items: center; padding: 72px 0 0 48px; position: relative; overflow: hidden; }
    .hero-content { max-width: 550px; z-index: 10; padding: 48px 0; }
    .hero-headline { font-size: 90px; font-weight: 350; line-height: 1.0; letter-spacing: -0.03em; margin-bottom: 28px; }
    .hero-headline em { font-style: normal; color: var(--mint); font-weight: 400; }
    [data-theme="light"] .hero-headline em { color: var(--purple); }
    .hero-sub { font-size: 20px; font-weight: 400; line-height: 1.5; margin-bottom: 40px; color: var(--text-muted); }
    .hero-buttons { display: flex; gap: 16px; }

    .btn { display: inline-flex; align-items: center; gap: 12px; padding: 18px 28px; font-weight: 500; font-size: 15px; text-decoration: none; transition: all 0.2s ease; cursor: pointer; position: relative; overflow: hidden; }
    .btn-primary { background: transparent; color: var(--text); border: 1px solid var(--btn-outline); }
    .btn-primary::before { content: ''; position: absolute; top: 0; left: 0; width: 0; height: 100%; background: var(--mint); transition: width 0.3s ease; z-index: -1; }
    .btn-primary:hover::before { width: 100%; }
    .btn-primary:hover { color: #0a0a0a; border-color: var(--mint); }
    .btn-secondary { background: transparent; color: var(--text); border: 1px solid var(--btn-outline); }
    .btn-secondary::before { content: ''; position: absolute; top: 0; left: 0; width: 0; height: 100%; background: var(--purple); transition: width 0.3s ease; z-index: -1; }
    .btn-secondary:hover::before { width: 100%; }
    .btn-secondary:hover { color: #fff; border-color: var(--purple); }
    .btn-arrow { display: inline-flex; transition: transform 0.2s ease; }
    .btn:hover .btn-arrow { transform: translateX(4px); }

    .grid-wrapper { position: absolute; top: 50%; right: -10%; transform: translateY(-50%); z-index: 1; }
    .stepped-grid { display: grid; grid-template-columns: repeat(var(--grid-cols), var(--cell)); grid-template-rows: repeat(var(--grid-rows), var(--cell)); position: relative; }
    .stepped-grid::before { content: ''; position: absolute; top: 0; left: 0; right: 0; bottom: 0; background-image: linear-gradient(to right, var(--grid-line) 1px, transparent 1px), linear-gradient(to bottom, var(--grid-line) 1px, transparent 1px); background-size: var(--cell) var(--cell); pointer-events: none; }
    .stepped-grid::after { content: ''; position: absolute; top: 0; left: 0; right: 0; bottom: 0; border: 1px solid var(--grid-line); pointer-events: none; }

    .card { background: var(--bg-card); border: 1px solid var(--border); padding: 10px; display: flex; flex-direction: column; transition: all 0.3s ease; position: relative; }
    .card:hover { background: var(--bg-alt); border-color: var(--border); }
    .card-header { display: flex; align-items: flex-start; justify-content: space-between; margin-bottom: 8px; }
    .card-badge { font-size: 8px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; padding: 3px 6px; background: var(--mint); color: #0a0a0a; }
    .card-icon { width: 16px; height: 16px; opacity: 0.6; }
    .card-title { font-size: 11px; font-weight: 600; letter-spacing: -0.01em; margin-bottom: 4px; }
    .card-desc { font-size: 9px; color: var(--text-muted); line-height: 1.4; }

    #card1 { grid-column: 2 / span 2; grid-row: 2 / span 2; }
    #card1 .card-badge { background: var(--mint); }
    #card2 { grid-column: 4 / span 2; grid-row: 3 / span 2; }
    #card2 .card-badge { background: var(--purple); color: #fff; }
    #card3 { grid-column: 6 / span 2; grid-row: 4 / span 2; }
    #card3 .card-badge { background: var(--cyan); }
    #card4 { grid-column: 8 / span 2; grid-row: 5 / span 2; }
    #card4 .card-badge { background: var(--coral); color: #fff; }

    .logo-bar { padding: 80px 48px; border-top: 1px solid var(--border); background: var(--bg-alt); }
    .logo-bar-inner { max-width: 1200px; margin: 0 auto; }
    .logo-bar-label { text-align: center; font-size: 12px; font-weight: 500; text-transform: uppercase; letter-spacing: 0.15em; color: var(--text-muted); margin-bottom: 48px; }
    .logo-bar-grid { display: flex; justify-content: center; align-items: center; gap: 48px 80px; flex-wrap: wrap; }
    .logo-item { opacity: 0.5; transition: opacity 0.2s ease; }
    .logo-item:hover { opacity: 0.8; }

    .how-section { padding: 140px 48px; border-top: 1px solid var(--border); }
    .section-header { text-align: center; margin-bottom: 80px; }
    .section-label { font-family: var(--mono); font-size: 12px; text-transform: uppercase; letter-spacing: 0.15em; color: var(--text-muted); margin-bottom: 16px; }
    .section-headline { font-size: 42px; font-weight: 350; line-height: 1.2; letter-spacing: -0.02em; }

    .how-flow { display: flex; justify-content: center; align-items: stretch; gap: 0; max-width: 1100px; margin: 0 auto; }
    .how-step { flex: 1; text-align: center; padding: 40px 32px; position: relative; border: 1px solid var(--border); margin-left: -1px; }
    .how-step:first-child { margin-left: 0; }
    .step-number { font-family: var(--mono); font-size: 11px; color: var(--text-muted); margin-bottom: 20px; letter-spacing: 0.1em; }
    .step-icon { width: 48px; height: 48px; margin: 0 auto 24px; position: relative; }
    .step-title { font-size: 16px; font-weight: 600; margin-bottom: 8px; letter-spacing: -0.01em; }
    .step-desc { font-size: 13px; color: var(--text-muted); line-height: 1.6; }
    .step-arrow { position: absolute; right: -12px; top: 50%; transform: translateY(-50%); z-index: 2; color: var(--text-muted); }
    .how-step:last-child .step-arrow { display: none; }

    .mock-sync { background: var(--bg-card); border: 1px solid var(--border); padding: 16px; margin-top: 24px; text-align: left; }
    .mock-sync-row { display: flex; align-items: center; gap: 12px; padding: 8px 0; border-bottom: 1px solid var(--border); font-size: 12px; }
    .mock-sync-row:last-child { border-bottom: none; }
    .mock-sync-label { color: var(--text-muted); width: 80px; }
    .mock-sync-value { font-family: var(--mono); font-size: 11px; color: var(--mint); }

    .mock-alert { background: var(--bg-card); border: 1px solid var(--border); padding: 16px; margin-top: 24px; text-align: left; }
    .mock-alert-header { display: flex; align-items: center; gap: 8px; margin-bottom: 8px; }
    .mock-alert-dot { width: 8px; height: 8px; border-radius: 50%; background: var(--coral); }
    .mock-alert-title { font-size: 12px; font-weight: 600; }
    .mock-alert-desc { font-size: 11px; color: var(--text-muted); }

    .mock-log { background: var(--bg-card); border: 1px solid var(--border); margin-top: 24px; text-align: left; }
    .mock-log-header { padding: 12px 16px; border-bottom: 1px solid var(--border); font-size: 11px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; color: var(--text-muted); }
    .mock-log-item { display: flex; align-items: center; justify-content: space-between; padding: 12px 16px; border-bottom: 1px solid var(--border); font-size: 13px; }
    .mock-log-item:last-child { border-bottom: none; }
    .mock-log-item .time { font-family: var(--mono); font-size: 11px; color: var(--text-muted); }

    .features-section { padding: 140px 48px; border-top: 1px solid var(--border); }
    .features-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1px; background: var(--border); max-width: 1200px; margin: 0 auto; }
    .feature-card { background: var(--bg); padding: 48px 36px; }
    .feature-card a { color: var(--mint); text-decoration: none; }
    .feature-card a:hover { text-decoration: underline; }
    [data-theme="light"] .feature-card a { color: var(--purple); }
    .feature-icon { width: 48px; height: 48px; margin-bottom: 28px; position: relative; }
    .feature-title { font-size: 18px; font-weight: 600; margin-bottom: 12px; letter-spacing: -0.01em; }
    .feature-desc { font-size: 14px; color: var(--text-muted); line-height: 1.65; }

    .cta-section { padding: 140px 48px; background: var(--bg-alt); text-align: center; border-top: 1px solid var(--border); }
    .cta-headline { font-size: 48px; font-weight: 350; line-height: 1.2; letter-spacing: -0.02em; margin-bottom: 20px; }
    .cta-sub { font-size: 18px; color: var(--text-muted); margin-bottom: 48px; }
    .cta-buttons { display: flex; gap: 16px; justify-content: center; }

    @media (max-width: 1200px) { .how-flow { flex-direction: column; max-width: 500px; } .how-step { margin-left: 0; margin-top: -1px; } .how-step:first-child { margin-top: 0; } .step-arrow { display: none; } }
    @media (max-width: 900px) { .hero { flex-direction: column; padding: 100px 24px 48px; min-height: auto; } .hero-content { max-width: 100%; text-align: center; margin-bottom: 40px; } .hero-headline { font-size: 48px; } .hero-buttons { justify-content: center; } .grid-wrapper { position: relative; top: auto; right: auto; transform: none; margin: 0 auto; } :root { --cell: 50px; } .logo-bar { padding: 60px 24px; } .logo-bar-grid { gap: 32px 48px; } .how-section { padding: 80px 24px; } .features-section { padding: 80px 24px; } .features-grid { grid-template-columns: 1fr; } .cta-section { padding: 80px 24px; } }
    @media (max-width: 600px) { .hero-headline { font-size: 36px; } .hero-sub { font-size: 16px; } .hero-buttons { flex-direction: column; } .btn { width: 100%; justify-content: center; } :root { --cell: 40px; } .card { padding: 6px; } .card-badge { font-size: 6px; padding: 2px 4px; } .card-title { font-size: 9px; } .card-icon { width: 12px; height: 12px; } .card-header { margin-bottom: 4px; gap: 4px; } .section-headline { font-size: 32px; } .cta-headline { font-size: 28px; } .cta-buttons { flex-direction: column; } }
  </style>
</head>

<body>
  <Nav />

  <section class="hero">
    <div class="hero-content">
      <h1 class="hero-headline">AI agents that<br><em>close deals</em></h1>
      <p class="hero-sub">Record every call. Update your CRM automatically. Get coaching insights that actually help you sell.</p>
      <div class="hero-buttons">
        <a href="/pricing" class="btn btn-primary">Get Early Access <span class="btn-arrow"><svg width="10" height="10" viewBox="0 0 10 10" fill="none"><rect x="2" y="0" width="2" height="2" fill="currentColor"/><rect x="4" y="2" width="2" height="2" fill="currentColor"/><rect x="6" y="4" width="2" height="2" fill="currentColor"/><rect x="4" y="6" width="2" height="2" fill="currentColor"/><rect x="2" y="8" width="2" height="2" fill="currentColor"/></svg></span></a>
        <a href="/features" class="btn btn-secondary">See Features <span class="btn-arrow"><svg width="10" height="10" viewBox="0 0 10 10" fill="none"><rect x="2" y="0" width="2" height="2" fill="currentColor"/><rect x="4" y="2" width="2" height="2" fill="currentColor"/><rect x="6" y="4" width="2" height="2" fill="currentColor"/><rect x="4" y="6" width="2" height="2" fill="currentColor"/><rect x="2" y="8" width="2" height="2" fill="currentColor"/></svg></span></a>
      </div>
    </div>
    <div class="grid-wrapper">
      <div class="stepped-grid">
        <div class="card" id="card1"><div class="card-header"><span class="card-badge">Auto-Sync</span><svg class="card-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2v4M12 18v4M4.93 4.93l2.83 2.83M16.24 16.24l2.83 2.83M2 12h4M18 12h4M4.93 19.07l2.83-2.83M16.24 7.76l2.83-2.83"/></svg></div><div class="card-title">CRM Updated</div><div class="card-desc">MEDDIC fields synced to HubSpot</div></div>
        <div class="card" id="card2"><div class="card-header"><span class="card-badge">Risk Alert</span><svg class="card-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/><line x1="12" y1="9" x2="12" y2="13"/><line x1="12" y1="17" x2="12.01" y2="17"/></svg></div><div class="card-title">Budget Concern</div><div class="card-desc">Detected pricing objection</div></div>
        <div class="card" id="card3"><div class="card-header"><span class="card-badge">Coaching</span><svg class="card-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg></div><div class="card-title">MEDDIC Score: 72</div><div class="card-desc">Focus on decision process</div></div>
        <div class="card" id="card4"><div class="card-header"><span class="card-badge">Follow-Up</span><svg class="card-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg></div><div class="card-title">Email Ready</div><div class="card-desc">Personalized draft generated</div></div>
      </div>
    </div>
  </section>

  <section class="logo-bar">
    <div class="logo-bar-inner">
      <p class="logo-bar-label">Integrates with your stack</p>
      <div class="logo-bar-grid">
        <div class="logo-item"><svg width="120" height="32" viewBox="0 0 120 32" fill="none"><text x="0" y="22" fill="currentColor" font-family="var(--font)" font-size="16" font-weight="600">HubSpot</text></svg></div>
        <div class="logo-item"><svg width="120" height="32" viewBox="0 0 120 32" fill="none"><text x="0" y="22" fill="currentColor" font-family="var(--font)" font-size="16" font-weight="600">Salesforce</text></svg></div>
        <div class="logo-item"><svg width="80" height="32" viewBox="0 0 80 32" fill="none"><text x="0" y="22" fill="currentColor" font-family="var(--font)" font-size="16" font-weight="600">Zoom</text></svg></div>
        <div class="logo-item"><svg width="80" height="32" viewBox="0 0 80 32" fill="none"><text x="0" y="22" fill="currentColor" font-family="var(--font)" font-size="16" font-weight="600">Slack</text></svg></div>
        <div class="logo-item"><svg width="100" height="32" viewBox="0 0 100 32" fill="none"><text x="0" y="22" fill="currentColor" font-family="var(--font)" font-size="16" font-weight="600">Google</text></svg></div>
      </div>
    </div>
  </section>

  <section class="how-section">
    <div class="section-header">
      <p class="section-label">How it works</p>
      <h2 class="section-headline">From call to closed, automatically</h2>
    </div>
    <div class="how-flow">
      <div class="how-step">
        <p class="step-number">01</p>
        <div class="step-icon"><svg viewBox="0 0 48 48" fill="none"><rect x="8" y="8" width="32" height="32" rx="4" stroke="var(--mint)" stroke-width="2" fill="none"/><circle cx="24" cy="24" r="8" fill="var(--mint)"/></svg></div>
        <h3 class="step-title">Record</h3>
        <p class="step-desc">Join any call on Zoom, Meet, or Teams. We capture everything.</p>
        <div class="step-arrow"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1"><path d="M5 12h14M12 5l7 7-7 7"/></svg></div>
      </div>
      <div class="how-step">
        <p class="step-number">02</p>
        <div class="step-icon"><svg viewBox="0 0 48 48" fill="none"><rect x="6" y="12" width="36" height="4" fill="var(--purple)"/><rect x="6" y="20" width="28" height="4" fill="var(--purple)" opacity="0.7"/><rect x="6" y="28" width="32" height="4" fill="var(--purple)" opacity="0.5"/><rect x="6" y="36" width="20" height="4" fill="var(--purple)" opacity="0.3"/></svg></div>
        <h3 class="step-title">Transcribe</h3>
        <p class="step-desc">AI transcription with speaker detection and key moment tagging.</p>
        <div class="mock-sync"><div class="mock-sync-row"><span class="mock-sync-label">Deal Stage</span><span class="mock-sync-value">Demo → Proposal</span></div><div class="mock-sync-row"><span class="mock-sync-label">Next Step</span><span class="mock-sync-value">Send pricing</span></div></div>
        <div class="step-arrow"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1"><path d="M5 12h14M12 5l7 7-7 7"/></svg></div>
      </div>
      <div class="how-step">
        <p class="step-number">03</p>
        <div class="step-icon"><svg viewBox="0 0 48 48" fill="none"><rect x="8" y="6" width="32" height="6" fill="var(--cyan)"/><rect x="8" y="14" width="32" height="6" fill="var(--cyan)" opacity="0.7"/><rect x="8" y="22" width="32" height="6" fill="var(--cyan)" opacity="0.5"/><rect x="32" y="34" width="12" height="8" fill="var(--mint)"/></svg></div>
        <h3 class="step-title">Sync</h3>
        <p class="step-desc">MEDDIC fields, deal stage, next steps—all pushed to your CRM.</p>
        <div class="mock-alert"><div class="mock-alert-header"><span class="mock-alert-dot"></span><span class="mock-alert-title">Risk detected</span></div><p class="mock-alert-desc">Budget concern flagged in Acme call</p></div>
        <div class="step-arrow"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1"><path d="M5 12h14M12 5l7 7-7 7"/></svg></div>
      </div>
      <div class="how-step">
        <p class="step-number">04</p>
        <div class="step-icon"><svg viewBox="0 0 48 48" fill="none"><rect x="4" y="22" width="8" height="4" fill="var(--yellow)"/><rect x="14" y="18" width="8" height="12" fill="var(--yellow)"/><rect x="24" y="12" width="8" height="24" fill="var(--yellow)"/><rect x="34" y="6" width="8" height="36" fill="var(--mint)"/></svg></div>
        <h3 class="step-title">Coach</h3>
        <p class="step-desc">AI coaching scorecards and real-time alerts to close more deals.</p>
        <div class="mock-log"><div class="mock-log-header">Activity Log</div><div class="mock-log-item"><span>CRM synced</span><span class="time">2m ago</span></div><div class="mock-log-item"><span>Follow-up drafted</span><span class="time">2m ago</span></div></div>
      </div>
    </div>
  </section>

  <section class="features-section" id="features">
    <div class="features-grid">
      <div class="feature-card"><div class="feature-icon"><svg viewBox="0 0 48 48" fill="none"><rect x="8" y="6" width="32" height="6" fill="var(--mint)"/><rect x="8" y="14" width="32" height="6" fill="var(--mint)" opacity="0.7"/><rect x="8" y="22" width="32" height="6" fill="var(--mint)" opacity="0.5"/><rect x="32" y="34" width="12" height="8" fill="var(--purple)"/></svg></div><h3 class="feature-title">CRM Auto-Sync</h3><p class="feature-desc">MEDDIC, BANT, and custom fields updated automatically after every call. No more manual data entry.</p></div>
      <div class="feature-card"><div class="feature-icon"><svg viewBox="0 0 48 48" fill="none"><rect x="6" y="34" width="6" height="8" fill="var(--purple)" opacity="0.4"/><rect x="14" y="28" width="6" height="14" fill="var(--purple)" opacity="0.55"/><rect x="22" y="20" width="6" height="22" fill="var(--purple)" opacity="0.7"/><rect x="30" y="14" width="6" height="28" fill="var(--purple)" opacity="0.85"/><rect x="38" y="6" width="6" height="36" fill="var(--purple)"/></svg></div><h3 class="feature-title">AI Coaching Scorecards</h3><p class="feature-desc">Every call scored against your sales methodology. Know exactly where to improve.</p></div>
      <div class="feature-card"><div class="feature-icon"><svg viewBox="0 0 48 48" fill="none"><rect x="20" y="4" width="8" height="4" fill="var(--coral)"/><rect x="16" y="8" width="16" height="4" fill="var(--coral)"/><rect x="12" y="12" width="24" height="16" fill="var(--coral)"/><rect x="8" y="28" width="32" height="4" fill="var(--coral)"/><rect x="20" y="32" width="8" height="4" fill="var(--coral)"/></svg></div><h3 class="feature-title">Real-Time Risk Alerts</h3><p class="feature-desc">Budget concerns, competitor mentions, ghosting signals—catch deal risks before they kill your quarter.</p></div>
