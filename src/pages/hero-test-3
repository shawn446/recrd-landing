    .agent-card[data-row="3"][data-col="0"] { top: calc(var(--cell) * 3); left: calc(var(--cell) * 0); }
    .agent-card[data-row="3"][data-col="2"] { top: calc(var(--cell) * 3); left: calc(var(--cell) * 2); }
    .agent-card[data-row="3"][data-col="5"] { top: calc(var(--cell) * 3); left: calc(var(--cell) * 5); }
    
    .agent-card[data-row="4"][data-col="1"] { top: calc(var(--cell) * 4); left: calc(var(--cell) * 1); }
    .agent-card[data-row="4"][data-col="4"] { top: calc(var(--cell) * 4); left: calc(var(--cell) * 4); }
    .agent-card[data-row="4"][data-col="7"] { top: calc(var(--cell) * 4); left: calc(var(--cell) * 7); }
    
    .agent-card[data-row="5"][data-col="0"] { top: calc(var(--cell) * 5); left: calc(var(--cell) * 0); }
    .agent-card[data-row="5"][data-col="3"] { top: calc(var(--cell) * 5); left: calc(var(--cell) * 3); }
    .agent-card[data-row="5"][data-col="6"] { top: calc(var(--cell) * 5); left: calc(var(--cell) * 6); }

