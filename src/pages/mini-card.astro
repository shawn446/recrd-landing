---
// Hero - Simple labeled cards with origami flip
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import BaseHead from '../components/BaseHead.astro';
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <BaseHead title="recrd - AI agents that close deals" description="Revenue intelligence for sales teams." />
  
  <style is:global>
    :root { 
      --cell: 120px;
      --grid-line: rgba(255,255,255,0.08);
      --mint: #59FFA4;
      --purple: #A678F4;
      --cyan: #5CEBDF;
      --coral: #FF6B7A;
      --yellow: #FFD84D;
      --bg: #0A0A0A;
      --text: #FFFFFF;
      --text-muted: rgba(255,255,255,0.6);
    }

    * { box-sizing: border-box; }

    .hero {
      min-height: 100vh;
      display: flex;
      align-items: center;
      padding: 72px 48px 0;
      position: relative;
      overflow: hidden;
      background: var(--bg);
    }

    .hero-grid {
      position: absolute;
      top: 0;
      right: 0;
      width: calc(var(--cell) * 10);
      height: 100%;
      background-image: 
        linear-gradient(to right, var(--grid-line) 1px, transparent 1px),
        linear-gradient(to bottom, var(--grid-line) 1px, transparent 1px);
      background-size: var(--cell) var(--cell);
      z-index: 1;
    }

    .hero-grid::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: calc(var(--cell) * 4);
      height: 100%;
      background: linear-gradient(to right, var(--bg) 30%, transparent);
      z-index: 2;
    }

    .hero-content {
      max-width: 480px;
      z-index: 100;
      padding: 48px 0;
    }

    .hero-headline {
      font-size: 72px;
      font-weight: 350;
      line-height: 1.0;
      letter-spacing: -0.03em;
      margin-bottom: 28px;
    }

    .hero-headline em { 
      font-style: normal; 
      color: var(--mint);
      font-weight: 400;
    }

    .hero-sub {
      font-size: 18px;
      font-weight: 400;
      line-height: 1.6;
      margin-bottom: 40px;
      color: var(--text-muted);
    }

    .hero-buttons { display: flex; gap: 16px; }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      padding: 16px 28px;
      font-weight: 500;
      font-size: 15px;
      text-decoration: none;
      transition: all 0.2s ease;
      cursor: pointer;
      border: none;
    }
    
    .btn-primary { background: var(--text); color: var(--bg); }
    .btn-primary:hover { background: var(--mint); color: #0a0a0a; transform: translateY(-2px); }
    
    .btn-secondary { background: transparent; color: var(--text); border: 1px solid rgba(255,255,255,0.2); }
    .btn-secondary:hover { background: var(--text); color: var(--bg); }

    .cards-container {
      position: absolute;
      top: 0;
      right: 0;
      width: calc(var(--cell) * 10);
      height: 100%;
      z-index: 10;
      pointer-events: none;
      perspective: 1000px;
    }

    /* ========== FLIP CARDS ========== */
    .card-slot {
      position: absolute;
      width: var(--cell);
      height: var(--cell);
      pointer-events: auto;
      perspective: 800px;
    }

    .flip-card {
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      text-decoration: none;
      cursor: pointer;
      box-shadow: 0 8px 30px rgba(0,0,0,0.3);
      backface-visibility: hidden;
      transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .flip-card:hover {
      filter: brightness(1.05);
    }

    /* Fold origins */
    .flip-card.from-top {
      transform-origin: top center;
      transform: rotateX(-90deg);
    }
    .flip-card.from-bottom {
      transform-origin: bottom center;
      transform: rotateX(90deg);
    }
    .flip-card.from-left {
      transform-origin: left center;
      transform: rotateY(90deg);
    }
    .flip-card.from-right {
      transform-origin: right center;
      transform: rotateY(-90deg);
    }

    .flip-card.visible {
      transform: rotateX(0) rotateY(0);
    }

    /* Colors */
    .flip-card.mint { background: var(--mint); }
    .flip-card.purple { background: var(--purple); }
    .flip-card.cyan { background: var(--cyan); }
    .flip-card.coral { background: var(--coral); }
    .flip-card.yellow { background: var(--yellow); }

    .card-label {
      font-size: 10px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      color: var(--bg);
      text-align: center;
      padding: 8px;
    }

    /* RESPONSIVE */
    @media (max-width: 1800px) {
      :root { --cell: 100px; }
      .hero-headline { font-size: 64px; }
    }

    @media (max-width: 1600px) {
      :root { --cell: 90px; }
      .hero-headline { font-size: 56px; }
    }

    @media (max-width: 1400px) {
      :root { --cell: 80px; }
      .hero-headline { font-size: 48px; }
      .hero-content { max-width: 380px; }
      .card-label { font-size: 9px; }
    }

    @media (max-width: 1200px) {
      :root { --cell: 70px; }
      .hero-headline { font-size: 42px; }
      .card-label { font-size: 8px; }
    }

    @media (max-width: 1000px) {
      .cards-container, .hero-grid { display: none; }
      .hero { justify-content: center; padding: 120px 24px; }
      .hero-content { max-width: 100%; text-align: center; }
      .hero-buttons { justify-content: center; }
    }

    @media (max-width: 600px) {
      .hero-headline { font-size: 36px; }
      .hero-sub { font-size: 16px; }
      .hero-buttons { flex-direction: column; }
      .btn { width: 100%; justify-content: center; }
    }
  </style>
</head>

<body>
  <Nav />

  <section class="hero">
    <div class="hero-grid"></div>

    <div class="hero-content">
      <h1 class="hero-headline">Your calls,<br><em>working for you</em></h1>
      <p class="hero-sub">Every sales call triggers AI agents that update your CRM, alert your team, and draft follow-upsâ€”automatically.</p>
      <div class="hero-buttons">
        <a href="#" class="btn btn-primary">Book a Demo</a>
        <a href="#how-it-works" class="btn btn-secondary">See How It Works</a>
      </div>
    </div>

    <div class="cards-container" id="cards-container"></div>
  </section>

  <Footer />

  <script>
    const cards = [
      { label: 'Agents', color: 'purple', row: 1, col: 2, dir: 'top' },
      { label: 'Pipeline', color: 'cyan', row: 1, col: 5, dir: 'top' },
      { label: 'Forecast', color: 'mint', row: 1, col: 8, dir: 'right' },
      
      { label: 'CRM Sync', color: 'mint', row: 2, col: 1, dir: 'left' },
      { label: 'Alerts', color: 'coral', row: 2, col: 4, dir: 'top' },
      { label: 'Coaching', color: 'yellow', row: 2, col: 7, dir: 'right' },
      
      { label: 'Transcripts', color: 'purple', row: 3, col: 0, dir: 'left' },
      { label: 'Insights', color: 'cyan', row: 3, col: 3, dir: 'left' },
      { label: 'Email', color: 'coral', row: 3, col: 6, dir: 'right' },
      { label: 'Tasks', color: 'mint', row: 3, col: 9, dir: 'right' },
      
      { label: 'Intel', color: 'yellow', row: 4, col: 2, dir: 'left' },
      { label: 'Reports', color: 'purple', row: 4, col: 5, dir: 'bottom' },
      { label: 'Analytics', color: 'cyan', row: 4, col: 8, dir: 'right' },
      
      { label: 'Dashboard', color: 'coral', row: 5, col: 1, dir: 'left' },
      { label: 'Notify', color: 'mint', row: 5, col: 4, dir: 'bottom' },
    ];

    function shuffle(arr) {
      const a = [...arr];
      for (let i = a.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [a[i], a[j]] = [a[j], a[i]];
      }
      return a;
    }

    function getCell() {
      return parseFloat(getComputedStyle(document.documentElement).getPropertyValue('--cell')) || 120;
    }

    function buildCard(card) {
      return `
        <a href="#" class="flip-card ${card.color} from-${card.dir}">
          <span class="card-label">${card.label}</span>
        </a>
      `;
    }

    function createSlot(card) {
      const cell = getCell();
      const slot = document.createElement('div');
      slot.className = 'card-slot';
      slot.style.left = `${card.col * cell}px`;
      slot.style.top = `${card.row * cell}px`;
      slot.dataset.dir = card.dir;
      slot.innerHTML = buildCard(card);
      return slot;
    }

    function flipIn(slot) {
      const card = slot.querySelector('.flip-card');
      if (card) {
        requestAnimationFrame(() => {
          card.classList.add('visible');
        });
      }
    }

    function flipOut(slot) {
      return new Promise(resolve => {
        const card = slot.querySelector('.flip-card');
        if (card) {
          card.classList.remove('visible');
          setTimeout(resolve, 600);
        } else {
          resolve();
        }
      });
    }

    document.addEventListener('DOMContentLoaded', () => {
      const container = document.getElementById('cards-container');
      const slots = [];

      cards.forEach(card => {
        const slot = createSlot(card);
        container.appendChild(slot);
        slots.push(slot);
      });

      // Staggered flip in
      slots.forEach((slot, i) => {
        setTimeout(() => flipIn(slot), 200 + i * 100);
      });

      // Cycle random cards
      setInterval(() => {
        const indices = shuffle([...Array(slots.length).keys()]).slice(0, 3);
        indices.forEach((idx, i) => {
          const slot = slots[idx];
          
          setTimeout(async () => {
            await flipOut(slot);
            await new Promise(r => setTimeout(r, 300));
            flipIn(slot);
          }, i * 250);
        });
      }, 4000);
    });
  </script>
</body>
</html>
